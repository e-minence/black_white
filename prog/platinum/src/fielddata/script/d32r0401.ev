ev_stage_lobby_continue_ng:
	/*「お客様！」*/
	_TALK_KEYWAIT	msg_stage_lobby_28

	/*不正終了時のパラメータ処理*/
	//_STAGE_SCRWORK	STAGE_SCRWORK_SET_NG_SCORE,0,0,SCWK_ANSWER


/********************************************************************/
/*バトルステージインタビュー*/
ev_d32r0401_flag_change:

	/*インタビュアーフラグが立っているか*/
	_TV_INTERVIEWER_CHECK	14,LOCALWORK0
	_IFVAL_JUMP			LOCALWORK0,EQ,0,ev_d32r0401_flagchange_vanish


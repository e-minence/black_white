	_JUMP				ev_d32r0401_flag_change_sub
	_END

ev_d32r0401_flagchange_vanish:
	_FLAG_SET			FV_TV_INTERVIEW_14
	_JUMP				ev_d32r0401_flag_change_sub
	_END

/*フロンティアで仲良し*/
ev_d32r0401_flag_change_sub:

	/*インタビュアーフラグが立っているか*/
	_TV_INTERVIEWER_CHECK	19,LOCALWORK0
	_IFVAL_JUMP			LOCALWORK0,EQ,0,ev_d32r0401_flagchange_vanish2

	_FLAG_RESET			FV_TV_INTERVIEW_19
	_END

ev_d32r0401_flagchange_vanish2:

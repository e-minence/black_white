del arclist.txt

REM ===========================================================
REM コンバート
REM ===========================================================
for %%i in (*.tga) do ntexconv %%i -b -f direct

REM ===========================================================
REM 圧縮
REM ===========================================================
for %%i in (*.ntft) do ntrcomp -lex %%i

REM ===========================================================
REM アーカイブリスト作成
REM ===========================================================
for %%i in (*_LZ.bin) do echo "%%i" >> arclist.txt

REM ===========================================================
REM アーカイブ作成＆コピー
REM ===========================================================
nnsarc -c -l -n -i gf_logo_movie -S arclist.txt

REM ===========================================================
REM narcコピー
REM ===========================================================
copy gf_logo_movie.naix ..\..\prog\arc
copy gf_logo_movie.narc ..\..\prog\arc

REM ===========================================================
REM 中間ファイル削除
REM ===========================================================
del *.ntft
del *_LZ.bin

#------------------------------------------------------------------------------
#  通信アイコンnarcを作るmakefile  
#  コピーしてtargetnameを書き換えれば汎用的に使えます
#  2008.08.19
#------------------------------------------------------------------------------

#------------------------------------------------------------------------------
#※コンバートを行う人のユーザーIDをここに書く
#------------------------------------------------------------------------------
USERS	= matsuda

#------------------------------------------------------------------------------
#※ここに作成するnarc名を書く
#------------------------------------------------------------------------------
targetname = balance_ball

#------------------------------------------------------------------------------
#※コピー先へのパスを書く（通常はPROJECT_ARCDIRでよい）
#------------------------------------------------------------------------------
TARGETDIR = $(PROJECT_ARCDIR)

#------------------------------------------------------------------------------
#※サブディレクトリでもMakeしたい場合、ここにディレクトリ名を書く
#------------------------------------------------------------------------------
SUBDIRS	=

#共通ルールファイルのインクルード
include	$(PROJECT_RSCDIR)\macro_define

# 自動でリソースを集める
lsources:=$(wildcard .\..\bottom\*.ncl)
gsources:=$(wildcard .\..\bottom\*.ncg)
esources:=$(wildcard .\..\bottom\*.nce)
ssources:=$(wildcard .\..\bottom\*.nsc)
ulsources:=$(wildcard .\..\upper\*.ncl)
ugsources:=$(wildcard .\..\upper\*.ncg)
uesources:=$(wildcard .\..\upper\*.nce)
ussources:=$(wildcard .\..\upper\*.nsc)
elsources:=$(wildcard .\..\eff\*.ncl)
egsources:=$(wildcard .\..\eff\*.ncg)
eesources:=$(wildcard .\..\eff\*.nce)
essources:=$(wildcard .\..\eff\*.nsc)
isources:=$(wildcard .\..\3d\*.imd)
icasources:=$(wildcard .\..\3d\*.ica)


ifeq	($(CONVERTUSER),true)	#コンバート対象者のみ、コンバートのルールを有効にする
# サフィックスルールを定義することで 依存関係を自動で判断してくれる
.SUFFIXES:.spa.narc

endif

.PHONY:	do-build clean subdir

#------------------------------------------------------------------------------
#	make do-build ルール
#------------------------------------------------------------------------------
do-build:	subdir $(TARGETDIR)/$(targetname).narc

subdir:
	@$(MAKE_SUBDIR)

# narc のコピーだけ実行する
$(TARGETDIR)/$(targetname).narc: $(targetname).narc
	$(COPY) $(targetname).narc $(TARGETDIR)
	$(COPY) $(targetname).naix $(TARGETDIR) 


ifeq	($(CONVERTUSER),true)	#コンバート対象者のみ、元ファイルからコンバートするルールを有効にする
# コピー先のnarcが古い場合実行する
$(targetname).narc: $(lsources) $(gsources) $(esources) $(ssources) $(ulsources) $(ugsources) $(uesources) $(ussources) $(elsources) $(egsources) $(eesources) $(essources) $(isources) $(icasources) *.bat makefile
	copy.bat
	cnv.bat
	arc.bat
	$(NAIXCUT) $(targetname).naix
endif

#------------------------------------------------------------------------------
#	make clean ルール
#※生成ファイルを削除するように記述を変更してください
#------------------------------------------------------------------------------
clean:
	@$(MAKE_SUBDIR)
ifeq	($(CONVERTUSER),true)	#コンバート対象者のみ、中間ファイル削除
	rm -f *.narc
	rm -f *.naix
	rm -f $(targetname).narc
	rm -f $(targetname)_def.h
endif
	rm -f $(TARGETDIR)/$(targetname).narc
	rm -f $(TARGETDIR)/$(targetname)_def.h



#------------------------------------------------------------------------------
#  通信アイコンnarcを作るmakefile  
#  コピーしてtargetnameを書き換えれば汎用的に使えます
#  2008.08.19
#------------------------------------------------------------------------------

#------------------------------------------------------------------------------
#※コンバートを行う人のユーザーIDをここに書く
#------------------------------------------------------------------------------
USERS	= tomoya_takahashi nakatsui tamada fuchino lee_hyunjung ohkubo_tomohiko obata_toshihiro

#------------------------------------------------------------------------------
#※ここに作成するnarc名を書く
#------------------------------------------------------------------------------
targetname = camera_scroll_original

#------------------------------------------------------------------------------
#※コピー先へのパスを書く（通常はPROJECT_ARCDIRでよい）
#------------------------------------------------------------------------------
TARGETDIR = $(PROJECT_ARCDIR)fieldmap

#------------------------------------------------------------------------------
#※サブディレクトリでもMakeしたい場合、ここにディレクトリ名を書く
#------------------------------------------------------------------------------
SUBDIRS	=

#共通ルールファイルのインクルード
include	$(PROJECT_RSCDIR)\macro_define


#------------------------------------------------------------------------------
#データ
#------------------------------------------------------------------------------
XLSFILE = $(wildcard *.xls)
XLS_CSV_FILE = $(XLSFILE:.xls=.bin)
#エクセルコンバーター
CSV_CVTR	= $(PROJECT_ROOT)/tools/exceltool/ExcelSeetConv.exe

LIST_FILE 	= list.txt

#------------------------------------------------------------------------------
#ヘッダ参照先
#------------------------------------------------------------------------------
HEADERDIR = $(PROJECT_PROGDIR)src/field/

HEADERDUMMY_TARGET = headerdummy.txt

#------------------------------------------------------------------------------
#	#サフィックス
#	#コンバート対象者のみ、コンバートのルールを有効にする
#------------------------------------------------------------------------------
ifeq	($(CONVERTUSER),true)	


.SUFFIXES: .xls .bin

#エクセルコンバート
.xls.bin:
	$(CSV_CVTR) -o $*.txt -p 1 $<
	perl conv.pl $*.txt $(HEADERDIR)field_camera.h
	
endif



.PHONY:	do-build clean subdir

#------------------------------------------------------------------------------
#	make do-build ルール
#------------------------------------------------------------------------------
do-build:	subdir $(targetname).txt

subdir:
	@$(MAKE_SUBDIR)

	

#コンバート対象者のみ、元ファイルからコンバートするルールを有効にする
ifeq	($(CONVERTUSER),true)	
# コピー先のnarcが古い場合実行する
$(targetname).txt: $(HEADERDUMMY_TARGET) $(XLS_CSV_FILE)
	-ls *.bin > $(targetname).txt

$(HEADERDUMMY_TARGET):$(HEADERDIR)field_camera.h
	rm -f *.bin
	echo このファイルは、headerが更新されたときにbinを作り直すために用意されています。 > $(HEADERDUMMY_TARGET)


else

#そうではない一般
$(targetname).txt: $(XLSFILE)
	-ls *.bin > $(targetname).txt
endif

#------------------------------------------------------------------------------
#	make clean ルール
#※生成ファイルを削除するように記述を変更してください
#------------------------------------------------------------------------------
clean:
	@$(MAKE_SUBDIR)
	rm -f $(TARGETDIR)/$(targetname).narc
	rm -f $(TARGETDIR)/$(targetname).naix
	rm -f $(targetname).txt

#コンバート対象者のみ、中間ファイル削除
ifeq	($(CONVERTUSER),true)	
	rm -f *.bin
	rm -f *.txt
endif





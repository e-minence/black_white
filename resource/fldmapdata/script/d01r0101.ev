/*	クリア後イベント：七賢人イベント                     */
/**************************************************************/
EVENT_START   ev_pos_d01r0101_sage5_01
	
	//アニメ：SAGE5飛び出して来る
	_OBJ_ANIME( D01R0101_SAGE5_01, anm_d01r0101_sage5_comming_01 )
	_TIME_WAIT(11)
	_OBJ_ANIME( MMDL_ID_PLAYER, anm_d01r0101_player_surprise_01)
	_OBJ_ANIME_WAIT()

	//七賢人５：しょあ！
	_BALLOONWIN_OBJMSG( msg_d01r0101_sage5_end_01 , D01R0101_SAGE5_01 )
	
	_BALLOONWIN_OBJMSG( msg_d01r0101_sage5_end_01a , D01R0101_SAGE5_01 )
	
	//七賢人５：おどろけばひとも
	_BALLOONWIN_OBJMSG( msg_d01r0101_sage5_end_01b , D01R0101_SAGE5_01 )
	
	//七賢人５：ですが
	_BALLOONWIN_OBJMSG( msg_d01r0101_sage5_end_01c , D01R0101_SAGE5_01 )
	_BALLOONWIN_CLOSE()
	
	//つるぎのまい入手
	_ITEM_EVENT_KEYWAIT( ITEM_WAZAMASIN75, 1 )
	
	//七賢人５・セリフ２
	_BALLOONWIN_OBJMSG( msg_d01r0101_sage5_end_02 , D01R0101_SAGE5_01 )
	_BALLOONWIN_CLOSE()
	
	//ハンサム曲再生
	_START_EVENT_BGM( SEQ_BGM_E_HANDSOME )
	
	//階段SEを鳴らす
	_SE_PLAY( SEQ_SE_KAIDAN )
	
	//ハンサム出現
	_OBJ_ADD_EX( 52,48,DIR_RIGHT,MMDL_ID_EVENTOBJ_00,ICPO,MV_DMY )
	
	//SE待ち
	_SE_WAIT()
	
	//ハンサム寄って来る
	_OBJ_ANIME( MMDL_ID_EVENTOBJ_00, anm_d01r0101_icpo_comming_01 )
	_TIME_WAIT(20)
	_OBJ_ANIME( D01R0101_SAGE5_01, anm_d01r0101_player_look_icpo_01 )
	_OBJ_ANIME( MMDL_ID_PLAYER, anm_d01r0101_player_look_icpo_01 )
	_OBJ_ANIME_WAIT()

	//ハンサムセリフ
	_BALLOONWIN_OBJMSG( msg_d01r0101_icpo_end_01 , MMDL_ID_EVENTOBJ_00 )
	_BALLOONWIN_CLOSE()

	//七賢人５：かなえてこそ ほんとうのゆめ
	_BALLOONWIN_OBJMSG( msg_d01r0101_sage5_end_03 , D01R0101_SAGE5_01 )
	_BALLOONWIN_CLOSE()
	
	//========================================//
	
	//七賢人ワークに＋１
	$WK_SCENE_AFTER_SAGE += 1
	
	//========================================//
	
	//ハンサム、プレイヤーに隣接
	_OBJ_ANIME( MMDL_ID_EVENTOBJ_00, anm_d01r0101_icpo_to_player_01 )
	_OBJ_ANIME_WAIT()

	//全部の七賢人を捕まえている場合
	IF $WK_SCENE_AFTER_SAGE == 6 THEN
		
		//プレイヤーネームを格納
		_PLAYER_NAME(0)
		
		//ハンサム：ありがとう！
		_BALLOONWIN_OBJMSG( msg_d01r0101_icpo_end_03 , MMDL_ID_EVENTOBJ_00 )
		_BALLOONWIN_CLOSE()
	
	//まだ捕まえていない場合
	ELSE
		
		//残り人数を計算
		DEFINE_LOCAL	LWK_PEOPLE
		$LWK_PEOPLE = 6
		$LWK_PEOPLE -= $WK_SCENE_AFTER_SAGE
		
		//セリフ内に捕獲数を格納
		_NUMBER( 0 , LWK_PEOPLE , 1 )
	
		//ハンサム：ありがとう
		_BALLOONWIN_OBJMSG( msg_d01r0101_icpo_end_02 , MMDL_ID_EVENTOBJ_00 )
		_BALLOONWIN_CLOSE()
	
	ENDIF
	
	//イベント曲停止
	_END_EVENT_BGM()
	
	//画面暗転
	_BLACK_OUT_SLOW()
	_DISP_FADE_END_CHECK()
	
	_TIME_WAIT( 16 )

	_OBJ_DEL( MMDL_ID_EVENTOBJ_00 )
	_OBJ_DEL( D01R0101_SAGE5_01 )
	
	_BLACK_IN_SLOW()
	_DISP_FADE_END_CHECK()

	//========================================/
	
	//バニシュフラグセット
	_FLAG_SET( FV_D01R0101_SAGE )
	
	//ワーク操作：POS無効
	$WK_SCENE_D01R0101_SAGE5 = 1
	
	//========================================/

EVENT_END


	_BMPMENU_MAKE_LIST( msg_gterminal_win01, SEQ_SUB_GTERMINAL_GTS)	        //GTS
	_BMPMENU_MAKE_LIST( msg_gterminal_win02, SEQ_SUB_GTERMINAL_GTS_NEGO)	  //GTSネゴシエーション

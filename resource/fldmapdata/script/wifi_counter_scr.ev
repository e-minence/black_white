	_BMPMENU_MAKE_LIST( msg_gterminal_win05, SEQ_SUB_GTERMINAL_EXP )	      //説明を聞く
	_BMPMENU_MAKE_LIST( msg_gterminal_win06, SEQ_SUB_GTERMINAL_RETURN )     //もどる
		

EVENT_START	ev_c02gym0202_leader2_01
	

	_TALK_OBJ_START()

	//バッジフラグ取得
	_GET_BADGE_FLAG( SCWK_TEMP0, BADGE_ID_02 )

	//ジムバッジフラグで分岐
	IF $SCWK_TEMP0 == 0 THEN
		//バッジ入手前なら、ジムリーダー戦イベント
		_CALL		ev_leader2_btl
//		_CALL		ev_c02gym_tounan

//==============フラグワーク操作==============//
			
	_FLAG_SET( FE_MUSEUM_TOUNAN )	//盗難イベントの開始
	_FLAG_RESET( FV_D02R0101_LEADER2 )	//盗難イベント用アーティ表示
	_FLAG_SET( FV_D02R0101_HAKAI )		//ヤグルマの森ストッパーの解除
	_FLAG_RESET( FV_D02R0101_LEADER2 )
	
	//============================================//

	ELSE
	
	//【仮】盗難イベントの解決後
	
	_BALLOONWIN_TALKOBJ_OPEN( msg_c02gym0202_leader_06 )
	_BALLOONWIN_CLOSE()

	ENDIF

EVENT_END


//ジムリーダー戦
ev_leader2_btl:
	//リーダー：戦闘前メッセージ
	_BALLOONWIN_TALKOBJ_OPEN( msg_c02gym0202_leader_01 )
	_BALLOONWIN_CLOSE()

	//トレーナー戦呼び出し
//トレーナー戦呼び出し
	_TRAINER_BTL_SET( TRID_LEADER2_01, 0 )
	//敗戦チェック
	_TRAINER_LOSE_CHECK( SCWK_ANSWER )
	IF $SCWK_ANSWER == 0 THEN
		_TRAINER_LOSE()			//負け(0)ならトレーナー敗北処理へ(ここでスクリプト終了します）
	ENDIF

	//リーダー：戦闘後メッセージ→続けてバッジ入手へ
	_BALLOONWIN_TALKOBJ_OPEN( msg_c02gym0202_leader_02 )
	_BALLOONWIN_CLOSE()

	//バッジ入手処理
	_SET_BADGE_FLAG( BADGE_ID_02 )		//バッジフラグon
	_TALKWIN_OPEN()
	_PLAYER_NAME( 0 )
	//〜〜はベーシックバッジを入手した！
	_TALKMSG_ALLPUT( msg_c02gym0202_leader_03 )
	_ME_PLAY( SEQ_ME_BADGE )
	_ME_WAIT()
	_TALKWIN_CLOSE()

	//そのバッジがあれば！
	_BALLOONWIN_TALKOBJ_OPEN( msg_c02gym0202_leader_04 )
	_BALLOONWIN_CLOSE()

	//【仮】わざマシン入手処理　入手わざマシンが未定
	_ITEM_EVENT_KEYWAIT( ITEM_WAZAMASIN01, 1 )

	//リーダー：わざマシンの解説
	_BALLOONWIN_TALKOBJ_OPEN( msg_c02gym0202_leader_05 )
	_BALLOONWIN_CLOSE()
	
	//==============フラグワーク操作==============//
	
	//ジムリーダー夫がジム2室目に現れる
//	_FLAG_RESET( FV_C02GYM0202_AD_01 )
	
	//============================================//
_RET
EVENT_END

EVENT_START	ev_pos_d08r0301_demo_01
	
	//画面を揺らすデモを入れる
	
	//びっくりする
	_OBJ_ANIME(MMDL_ID_PLAYER,anm_common_gyoe)
	_OBJ_ANIME_WAIT()
	
	//左右をきょろきょろ見る
	_OBJ_ANIME(MMDL_ID_PLAYER,anm_common_turn_left)
	_OBJ_ANIME_WAIT()
	_TIME_WAIT(10)
	
	_OBJ_ANIME(MMDL_ID_PLAYER,anm_common_turn_right)
	_OBJ_ANIME_WAIT()
	_TIME_WAIT(20)

	_OBJ_ANIME(MMDL_ID_PLAYER,anm_common_turn_up)
	_OBJ_ANIME_WAIT()
	
	//なにかが…　とうの　うえで
	_SYSWIN_MSG_DOWN(msg_d08r0301_demo_01)
	_LAST_KEYWAIT()
	_MSGWIN_CLOSE()
	
	//============フラグワーク操作=============//
	
	//ライバルのPOSイベントを無効
	$WK_SCENE_D08_LEGEND = 3
	
	//========================================//

EVENT_END


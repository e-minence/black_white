			_FLAG_RESET(FV_C02GYM0101_HAKAI)	//博物館のプラズマ団を表示
			_FLAG_RESET(FV_C02_LEADER2)	//C02ジムリーダーアロエがC02町に出現
			_FLAG_RESET(FV_C02_POSEVENT_01)	//ライバル・サポート・C03ジムリーダー・アーティがC02町に出現

EVENT_START ev_debug_tamada
	//メニュー作成
	_BMPMENU_INIT_EX( 1, 1, 0, 1, SCWK_ANSWER )
	//リスト追加
	_BMPMENU_MAKE_LIST( msg_debug_01, 0 )	//Ｎ城出現デモ（テスト）
	_BMPMENU_MAKE_LIST( msg_debug_00, 1 )	//やめる（テスト）
	//メニュー表示
	_BMPMENU_START()


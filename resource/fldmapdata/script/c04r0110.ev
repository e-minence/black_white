//======================================================================
//--------------------------------------------------------------
//  列車内　初期化
//--------------------------------------------------------------
INIT_EVENT_START ev_init_c04r0110
{
  DEFINE_LOCAL play_mode
  DEFINE_LOCAL multi_flag
  
  IF $WK_OTHER_BSUBWAY_TRAIN != BSWAY_SCENE_TRAIN_NON  THEN
    //自機非表示
    _BSUBWAY_TOOL( BSWTOOL_OBJ_VANISH, MMDL_ID_PLAYER, TRUE, BSW_NULL )
    
    _BSUBWAY_TOOL( BSWSUB_GET_PLAY_MODE, BSW_NULL, BSW_NULL, play_mode )
    _BSUBWAY_TOOL( BSWTOOL_CHK_MODE_MULTI, play_mode, BSW_NULL, multi_flag )
    
    IF $multi_flag == TRUE THEN //マルチか？
      _CALL sub_init_add_trainer_multi
    ELSE //その他
      _CALL sub_init_add_trainer
    ENDIF
  ENDIF
}
INIT_EVENT_END


//--------------------------------------------------------------
//  列車内、初期化　トレーナー配置　一人
//--------------------------------------------------------------
sub_init_add_trainer:
{
  DEFINE_LOCAL tr_no
  DEFINE_LOCAL round

  //トレーナー抽選
  _BSUBWAY_TOOL( BSWSUB_CHOICE_BTL_PARTNER, BSW_NULL, BSW_NULL, BSW_NULL )
   
  //ボスステージか
  _BSUBWAY_TOOL( BSWTOOL_GET_NOW_ROUND, BSW_NULL, BSW_NULL, round )
  _CALL sub_common_check_boss_stage
   
  IF $SCWK_ANSWER == TRUE && $round == BSWAY_CLEAR_WINCNT THEN
    //ボスラウンドである
    _BSUBWAY_TOOL( BSWSUB_GET_TRAINER_NUM_ROUND_NOW, 0, BSW_NULL, SCWK_TEMP0 )
    _CALL sub_get_boss_obj_code 
    $OBJCHRWORK2 = $SCWK_ANSWER
  ELSE
    _BSUBWAY_TOOL( BSWSUB_GET_ENEMY_OBJ, 0, BSW_NULL, SCWK_ANSWER )
    $OBJCHRWORK2 = $SCWK_ANSWER
  ENDIF
   
  _OBJ_ADD_EX( 9, 4, DIR_LEFT, BSW_TRAIN_OBJID_TRAINER_0, WKOBJCODE02, MV_DMY )
}
_RET

//--------------------------------------------------------------
//  列車内、初期化　トレーナー配置　マルチ
//--------------------------------------------------------------
sub_init_add_trainer_multi:
{
  DEFINE_LOCAL ver
  DEFINE_LOCAL round
  
  //トレーナー抽選
  _BSUBWAY_TOOL( BSWSUB_CHOICE_BTL_PARTNER, BSW_NULL, BSW_NULL, BSW_NULL )
   
  //ボスステージか
  _BSUBWAY_TOOL( BSWTOOL_GET_NOW_ROUND, BSW_NULL, BSW_NULL, round )
  _CALL sub_common_check_boss_stage
   
  IF $SCWK_ANSWER == TRUE && $round == BSWAY_CLEAR_WINCNT THEN
    //ボスラウンドである
    _BSUBWAY_TOOL( BSWSUB_GET_TRAINER_NUM_ROUND_NOW, 0, BSW_NULL, SCWK_TEMP0 )
    _CALL sub_get_boss_obj_code 
    $OBJCHRWORK2 = $SCWK_ANSWER

    _BSUBWAY_TOOL( BSWSUB_GET_TRAINER_NUM_ROUND_NOW, 1, BSW_NULL, SCWK_TEMP0 )
    _CALL sub_get_boss_obj_code 
    $OBJCHRWORK3 = $SCWK_ANSWER
  ELSE
    _BSUBWAY_TOOL( BSWSUB_GET_ENEMY_OBJ, 0, BSW_NULL, OBJCHRWORK2 )
    _BSUBWAY_TOOL( BSWSUB_GET_ENEMY_OBJ, 1, BSW_NULL, OBJCHRWORK3 )
  ENDIF
  
  _OBJ_ADD_EX( 9, 5, DIR_LEFT, BSW_TRAIN_OBJID_TRAINER_0, WKOBJCODE02, MV_DMY )
  _OBJ_ADD_EX( 9, 3, DIR_LEFT, BSW_TRAIN_OBJID_TRAINER_1, WKOBJCODE03, MV_DMY )
}
_RET

//--------------------------------------------------------------
//  列車内　ボスキャラをトレーナー番号から取得
//  @param SCWK_TEMP0 = トレーナー番号
//  @retval SCWK_ANSWER = OBJコード
//--------------------------------------------------------------
sub_get_boss_obj_code:
{
  SWITCH $SCWK_TEMP0
  CASE BSW_TR_DATANO_SINGLE THEN     //ノボリ
    $SCWK_ANSWER = TBOSSBL
  CASE BSW_TR_DATANO_S_SINGLE THEN   //ノボリ
    $SCWK_ANSWER = TBOSSBL
  CASE BSW_TR_DATANO_DOUBLE THEN     //クダリ
    $SCWK_ANSWER = TBOSS
  CASE BSW_TR_DATANO_S_DOUBLE THEN   //クダリ
    $SCWK_ANSWER = TBOSS
  CASE BSW_TR_DATANO_MULTI0 THEN     //ノボリ
    $SCWK_ANSWER = TBOSSBL
  CASE BSW_TR_DATANO_MULTI1 THEN     //クダリ
    $SCWK_ANSWER = TBOSS
  CASE BSW_TR_DATANO_S_MULTI0 THEN   //ノボリ
    $SCWK_ANSWER = TBOSSBL
  CASE BSW_TR_DATANO_S_MULTI1 THEN   //クダリ
    $SCWK_ANSWER = TBOSS
  DEFAULT //エラー
    $SCWK_ANSWER = BOY1
  ENDSWITCH
}
_RET

//======================================================================
//  列車内　ゲーム初回
//======================================================================
//--------------------------------------------------------------
//  列車内　ゲーム初回
//--------------------------------------------------------------
EVENT_START ev_train_entry_first
{
  DEFINE_LOCAL play_mode
  DEFINE_LOCAL multi_flag
  
  $WK_OTHER_BSUBWAY_TRAIN = BSWAY_SCENE_TRAIN_NON

  _BSUBWAY_TOOL( BSWSUB_GET_PLAY_MODE, BSW_NULL, BSW_NULL, play_mode )
  _BSUBWAY_TOOL( BSWTOOL_CHK_MODE_MULTI, play_mode, BSW_NULL, multi_flag )

  //自機設置
  IF $multi_flag == TRUE THEN //マルチか？
    IF $play_mode == BSWAY_MODE_COMM_MULTI || $play_mode == BSWAY_MODE_S_COMM_MULTI THEN //通信マルチ
      _BSUBWAY_TOOL( BSWSUB_COMM_GET_OBJCODE_OYA, BSW_NULL, BSW_NULL, OBJCHRWORK0 )
      _OBJ_ADD_EX( 4, 3, DIR_RIGHT, BSW_TRAIN_OBJID_JIKI, WKOBJCODE00, MV_DMY )

      _BSUBWAY_TOOL( BSWSUB_COMM_GET_OBJCODE_KO, BSW_NULL, BSW_NULL, OBJCHRWORK1 )
      _OBJ_ADD_EX( 4, 5, DIR_RIGHT, BSW_TRAIN_OBJID_PARTNER, WKOBJCODE01, MV_DMY )
    ELSE //AIマルチ
      _BSUBWAY_TOOL( BSWTOOL_GET_MINE_OBJ, BSW_NULL, BSW_NULL, OBJCHRWORK0 )
      _OBJ_ADD_EX( 4, 3, DIR_RIGHT, BSW_TRAIN_OBJID_JIKI, WKOBJCODE00, MV_DMY )
      //パートナー
      _BSUBWAY_TOOL( BSWTOOL_GET_OBJCODE_PARTNER, BSW_NULL, BSW_NULL, OBJCHRWORK1 )
      _OBJ_ADD_EX( 4, 5, DIR_RIGHT, BSW_TRAIN_OBJID_PARTNER, WKOBJCODE01, MV_DMY )
    ENDIF
  ELSE //その他
    _BSUBWAY_TOOL( BSWTOOL_GET_MINE_OBJ, BSW_NULL, BSW_NULL, OBJCHRWORK0 )
    _OBJ_ADD_EX( 4, 4, DIR_RIGHT, BSW_TRAIN_OBJID_JIKI, WKOBJCODE00, MV_DMY )
  ENDIF
  
  //BGMスイッチをラウンド数に合わせてON
  _BSUBWAY_TOOL( BSWSUB_SET_TRAIN_BGM_ROUND_SW, BSW_NULL, BSW_NULL, BSW_NULL )

  //マップフェード
  _MAP_FADE_BLACK_IN()
  _MAP_FADE_END_CHECK()
  
  //自機入場アニメ
  IF $multi_flag == TRUE THEN //マルチか？
    _CALL sub_anm_player_in_first_multi
  ELSE //その他
    _CALL sub_anm_player_in_first
  ENDIF
  
  //対戦
  _CALL sub_train_battle
}
EVENT_END


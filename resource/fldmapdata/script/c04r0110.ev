//--------------------------------------------------------------
//  リタイア共通　受付戻り
//--------------------------------------------------------------
sub_common_retmap_retire:
{
  DEFINE_LOCAL play_mode

  //受付制御　キャンセルゲームに
  $WK_OTHER_BSUBWAY_RECEIPT = BSWAY_SCENE_RECEIPT_AFTER_LOSE
  
  //ゲームモード取得
  _BSUBWAY_TOOL( BSWSUB_GET_PLAY_MODE, BSW_NULL, BSW_NULL, play_mode )
  
  //通信マルチの際は終了同期
  IF $play_mode == BSWAY_MODE_COMM_MULTI || $play_mode == BSWAY_MODE_S_COMM_MULTI THEN
    _TIME_WAIT( 30 )
    
    _BSUBWAY_TOOL( BSWSUB_COMM_TIMSYNC, BSW_COMM_MULTI_ROUND_EXIT_WAIT, BSW_NULL, comm_ret )
    
    //通信切断
    IF $comm_ret == TRUE THEN
      _CALL sub_common_comm_timing_end
    ELSE
      _CALL sub_common_comm_error_end
    ENDIF
  ENDIF
  
  //ちょっと間を置く
  _TIME_WAIT( 30 )
  
  //受付マップへ戻る
  _CALL sub_common_return_receipt_map
}
_RET

//--------------------------------------------------------------
//  通信エラー時の受付戻り
//--------------------------------------------------------------
sub_common_retmap_comm_error:
{ 
  //通信切断
  _CALL sub_common_comm_error_end
  
  //受付制御　キャンセルゲームに
  $WK_OTHER_BSUBWAY_RECEIPT = BSWAY_SCENE_RECEIPT_AFTER_LOSE
  
  //受付マップへ戻る
  _CALL sub_common_return_receipt_map
}
_RET

//--------------------------------------------------------------
//  戦闘録画　コア部分
//  @param SCWK_ANSWER 何戦目か(1origin)
//  @retval SCWK_ANSWER TRUE=録画した FALSE=録画していない
//--------------------------------------------------------------
sub_common_btlrec:
{
  DEFINE_LOCAL ret
  DEFINE_LOCAL flag
  DEFINE_LOCAL btl_no
  
  $flag = TRUE
  $btl_no = $SCWK_ANSWER
  
  _BSUBWAY_TOOL( BSWSUB_CHK_BTLREC_EXIST, BSW_NULL, BSW_NULL, ret )
  
  IF $ret == TRUE THEN //既存ビデオあり
    _SYSWIN_MSG( msg_c04r0110_09 , POS_DOWN )
    _BSUBWAY_TOOL( BSWTOOL_YESNO_WIN, SCR_NO, BSW_NULL, ret )
    _SYSWIN_CLOSE()
    
    IF $ret == SCR_NO THEN
      $flag = FALSE //上書きしない
    ENDIF
  ENDIF
  
  IF $flag == TRUE THEN //録画する
    _SYSWIN_MSG( msg_c04r0110_13, POS_DOWN )
    _TIME_WAIT( 1 ) //画面に反映
    _SYSWIN_TIMEICON( SCR_SYSWIN_TIMEICON_ON )  // タイムアイコンON
    
    _BSUBWAY_TOOL( BSWSUB_SAVE_BTLREC, btl_no, BSW_NULL, BSW_NULL )
    _SYSWIN_CLOSE()
    
    _PLAYER_NAME( 0 )
    _SYSWIN_MSG( msg_c04r0110_14, POS_DOWN )
    _AB_KEYWAIT()
    _SYSWIN_CLOSE()
    
    _BSUBWAY_TOOL( BSWSUB_SET_BTLREC_FINISH_FLAG, TRUE, BSW_NULL, BSW_NULL )
  ENDIF
  
  $SCWK_ANSWER = $flag
}
_RET

//--------------------------------------------------------------
//  戦闘録画　勝ち
//  @retval SCWK_ANSWER TRUE=録画した FALSE=録画していない
//--------------------------------------------------------------
sub_common_btlrec_win:
{
  //勝利後、ラウンド更新された連勝数(0origin)を戦闘番号に
  _BSUBWAY_TOOL( BSWSUB_GET_NOW_RENSHOU, BSW_NULL, BSW_NULL, SCWK_ANSWER )
  _CALL sub_common_btlrec
}
_RET

//--------------------------------------------------------------
//  戦闘録画　負け
//  @retval SCWK_ANSWER TRUE=録画した FALSE=録画していない
//--------------------------------------------------------------
sub_common_btlrec_lose:
{
  //負けている事により連勝数(0origin)は増加してないので自前で+1
  _BSUBWAY_TOOL( BSWSUB_GET_NOW_RENSHOU, BSW_NULL, BSW_NULL, SCWK_ANSWER )
  $SCWK_ANSWER += 1
  _CALL sub_common_btlrec
}
_RET

//--------------------------------------------------------------
//  ボスステージかどうかチェック
//  @retval SCWK_ANSWER TRUE=ボスステージ
//--------------------------------------------------------------
sub_common_check_boss_stage:
{
  DEFINE_LOCAL stage
  DEFINE_LOCAL play_mode
  DEFINE_LOCAL boss_stage
  
  _BSUBWAY_TOOL( BSWSUB_GET_PLAY_MODE, BSW_NULL, BSW_NULL, play_mode )
  _BSUBWAY_TOOL( BSWTOOL_GET_STAGE_NO, play_mode, BSW_NULL, stage )
  
  //ノーマルは3(2)ステージ、スーパーは7(6)ステージ
  $boss_stage = 255 //none
  
  SWITCH $play_mode
  CASE BSWAY_MODE_SINGLE THEN
    $boss_stage = 2
  CASE BSWAY_MODE_DOUBLE THEN
    $boss_stage = 2
  CASE BSWAY_MODE_MULTI THEN
    $boss_stage = 2
  CASE BSWAY_MODE_COMM_MULTI THEN
    $boss_stage = 2
  CASE BSWAY_MODE_S_SINGLE THEN
    $boss_stage = 6
  CASE BSWAY_MODE_S_DOUBLE THEN
    $boss_stage = 6
  CASE BSWAY_MODE_S_MULTI THEN
    $boss_stage = 6
  CASE BSWAY_MODE_S_COMM_MULTI THEN
    $boss_stage = 6
  ENDSWITCH
  
  $SCWK_ANSWER = FALSE
  
  IF $stage == $boss_stage THEN
	  $SCWK_ANSWER = TRUE
  ENDIF
}
_RET


//--------------------------------------------------------------
//  対戦　勝ち　次の車両へ
//--------------------------------------------------------------
sub_train_battle_win_next:
{
  DEFINE_LOCAL play_mode
  DEFINE_LOCAL multi_flag
  
  //プレイモード取得
  _BSUBWAY_TOOL( BSWSUB_GET_PLAY_MODE, BSW_NULL, BSW_NULL, play_mode )
  _BSUBWAY_TOOL( BSWTOOL_CHK_MODE_MULTI, play_mode, BSW_NULL, multi_flag )
  
  //アニメ　敵下がる、自機回復マシンへ
  IF $multi_flag == TRUE THEN //マルチか？
    _CALL ev_anm_train_battle_win_heal_multi
  ELSE //その他
    _CALL ev_anm_train_battle_win_heal
  ENDIF
  
  //回復SE
  _ME_PLAY( SEQ_ME_ASA )
  _ME_WAIT()
  
  IF $play_mode == BSWAY_MODE_COMM_MULTI THEN
    _CALL sub_train_battle_win_next_menu_comm_multi //通信専用
  ELSIF $play_mode == BSWAY_MODE_S_COMM_MULTI THEN
    _CALL sub_train_battle_win_next_menu_comm_multi //通信専用
  ELSE
    _CALL sub_train_battle_win_next_menu //通常メニュー
  ENDIF
}
_RET

//--------------------------------------------------------------
//  対戦　勝ち　メニュー処理　シングル、ダブル、マルチ、WiFi
//--------------------------------------------------------------
sub_train_battle_win_next_menu:
{
  DEFINE_LOCAL ret
  DEFINE_LOCAL loop
  DEFINE_LOCAL play_mode
  DEFINE_LOCAL multi_flag
  DEFINE_LOCAL rc_flag
  
  //プレイモード取得
  _BSUBWAY_TOOL( BSWSUB_GET_PLAY_MODE, BSW_NULL, BSW_NULL, play_mode )
  _BSUBWAY_TOOL( BSWTOOL_CHK_MODE_MULTI, play_mode, BSW_NULL, multi_flag )
  
  $loop = 1
  
  WHILE $loop == 1
    //ただいま？連勝…次は？両目　対戦を続けますか
    _BSUBWAY_TOOL( BSWSUB_GET_NOW_RENSHOU, BSW_NULL, BSW_NULL, SCWK_ANSWER )
    
    IF $SCWK_ANSWER > 9999 THEN
      $SCWK_ANSWER = 9999
    ENDIF
    
    _NUMBER( 0, SCWK_ANSWER, 4 )
    _BSUBWAY_TOOL( BSWTOOL_GET_NEXT_ROUND, BSW_NULL, BSW_NULL, SCWK_ANSWER )
    _NUMBER( 1, SCWK_ANSWER, 1 )
    _SYSWIN_MSG( msg_c04r0110_01 , POS_DOWN )
    
    _BMPMENU_INIT_RIGHT( MENU_X1, MENU_Y1, 0, 0, SCWK_ANSWER ) //Bキャン無効
    
    //戦闘録画済みフラグ取得
    _BSUBWAY_TOOL( BSWSUB_GET_BTLREC_FINISH_FLAG, BSW_NULL, BSW_NULL, rc_flag )
    
    IF $rc_flag == FALSE THEN
      _BMPMENU_MAKE_LIST( msg_c04r0110_02, 0 )  //つづける
      _BMPMENU_MAKE_LIST( msg_c04r0110_03, 1 )  //きろくする
      _BMPMENU_MAKE_LIST( msg_c04r0110_04, 2 )  //やすむ
      _BMPMENU_MAKE_LIST( msg_c04r0110_05, 3 )  //リタイア
    ELSE
      _BMPMENU_MAKE_LIST( msg_c04r0110_02, 0 )  //つづける
      _BMPMENU_MAKE_LIST( msg_c04r0110_04, 2 )  //やすむ
      _BMPMENU_MAKE_LIST( msg_c04r0110_05, 3 )  //リタイア
    ENDIF

    _BMPMENU_START()

    SWITCH $SCWK_ANSWER
    CASE 0 THEN //続ける
      //ウィンドウ消す
      _SYSWIN_CLOSE()
      
      //自機移動アニメ
      IF $multi_flag == TRUE THEN //マルチか？
        _CALL sub_anm_jiki_next_car_multi
      ELSE //その他
        _CALL sub_anm_jiki_next_car
      ENDIF
      
      //電車揺れ停止
      _BSUBWAY_TOOL( BSWSUB_STOP_SHAKE_TRAIN, BSW_NULL, BSW_NULL, BSW_NULL )
      
      //フェードアウト
      _MAP_FADE_BLACK_OUT()
      _MAP_FADE_END_CHECK()
      
      //シーン制御を継続に
      $WK_OTHER_BSUBWAY_TRAIN = BSWAY_SCENE_TRAIN_CONTINUE
      
      //戦闘後のワーク開放
      _BSUBWAY_TOOL( BSWSUB_FREE_BTLPRM, BSW_NULL, BSW_NULL, BSW_NULL )
      
      //DEBUG
      _BSUBWAY_TOOL( BSWTOOL_DEBUG_PRINT_HEAP_SIZE, 1, BSW_NULL, BSW_NULL )

      //マップチェンジ
      _MAP_CHANGE_NO_FADE( ZONE_ID_C04R0110, 7, 0, 4, DIR_UP )
      $loop = 0
    CASE 1 THEN //記録する
      _CALL sub_common_btlrec_win
    CASE 2 THEN //休む
      //休むか
      _SYSWIN_MSG( msg_c04r0110_07 , POS_DOWN )
      _YES_NO_WIN( SCWK_ANSWER )
      
      IF $SCWK_ANSWER == 0 THEN //はい
        //受付コンテニュー状態に
        $WK_OTHER_BSUBWAY_RECEIPT = BSWAY_SCENE_RECEIPT_CONTINUE

        //復帰位置を受付に
        _BSUBWAY_TOOL( BSWSUB_SET_PLAY_MODE_LOCATION, BSW_NULL, BSW_NULL, BSW_NULL )
        //プレイデータ反映
        _BSUBWAY_TOOL( BSWSUB_SAVE_REST_PLAY_DATA, BSW_NULL, BSW_NULL, BSW_NULL )
        //戦闘後のワーク開放
        _BSUBWAY_TOOL( BSWSUB_FREE_BTLPRM, BSW_NULL, BSW_NULL, BSW_NULL )
        
        //DEBUG
        _BSUBWAY_TOOL( BSWTOOL_DEBUG_PRINT_HEAP_SIZE, 1, BSW_NULL, BSW_NULL )

        //ワーク開放
        _BSUBWAY_WORK_RELEASE()
        
        //レポート
        _SYSWIN_MSG( msg_c04r0110_08 , POS_DOWN )
        _REPORT_CALL( SCWK_ANSWER )
        
        //フェードアウト
        _BLACK_OUT()
        _DISP_FADE_END_CHECK()
        _SYSWIN_CLOSE()
        _BSUBWAY_TOOL( BSWTOOL_SYSTEM_RESET, BSW_NULL, BSW_NULL, BSW_NULL )
        _END
      ENDIF
    CASE 3 THEN //リタイア
      //リタイアするか
      _SYSWIN_MSG( msg_c04r0110_06 , POS_DOWN )
      _BSUBWAY_TOOL( BSWTOOL_YESNO_WIN, SCR_NO, BSW_NULL, SCWK_ANSWER )
      _SYSWIN_CLOSE()
      
      IF $SCWK_ANSWER == 0 THEN
        _CALL sub_common_retmap_retire //受付へ
        $loop = 0
      ENDIF
    ENDSWITCH
  ENDWHILE
}
_RET

//--------------------------------------------------------------
//  対戦　勝ち　メニュー処理　通信マルチ
//--------------------------------------------------------------
sub_train_battle_win_next_menu_comm_multi:
{
  DEFINE_LOCAL ret
  DEFINE_LOCAL loop
  DEFINE_LOCAL play_mode
  DEFINE_LOCAL multi_flag
  DEFINE_LOCAL rc_flag
  
  //プレイモード取得
  _BSUBWAY_TOOL( BSWSUB_GET_PLAY_MODE, BSW_NULL, BSW_NULL, play_mode )
  _BSUBWAY_TOOL( BSWTOOL_CHK_MODE_MULTI, play_mode, BSW_NULL, multi_flag )
  
  //メニュー表示前の同期
  _BSUBWAY_TOOL( BSWSUB_COMM_TIMSYNC, BSW_COMM_MULTI_ROUND_MENU_START, BSW_NULL, comm_ret )
  
  IF $comm_ret == FALSE THEN
    _CALL sub_common_retmap_comm_error //受付へ
    _RET
  ENDIF
  
  $loop = 1
  
  WHILE $loop == 1
    //ただいま？連勝…次は？両目　対戦を続けますか
    _BSUBWAY_TOOL( BSWSUB_GET_NOW_RENSHOU, BSW_NULL, BSW_NULL, SCWK_ANSWER )
    _NUMBER( 0, SCWK_ANSWER, 4 )
    _BSUBWAY_TOOL( BSWTOOL_GET_NEXT_ROUND, BSW_NULL, BSW_NULL, SCWK_ANSWER )
    _NUMBER( 1, SCWK_ANSWER, 1 )
    _SYSWIN_MSG( msg_c04r0110_01 , POS_DOWN )
    
    _BMPMENU_INIT_RIGHT( MENU_X1, MENU_Y1, 0, 0, SCWK_ANSWER ) //Bキャン無効
    
    //戦闘録画済みフラグ取得
    _BSUBWAY_TOOL( BSWSUB_GET_BTLREC_FINISH_FLAG, BSW_NULL, BSW_NULL, rc_flag )
    
    IF $rc_flag == FALSE THEN
      _BMPMENU_MAKE_LIST( msg_c04r0110_02, 0 )  //つづける
      _BMPMENU_MAKE_LIST( msg_c04r0110_03, 1 )  //きろくする
      _BMPMENU_MAKE_LIST( msg_c04r0110_05, 3 )  //リタイア
    ELSE
      _BMPMENU_MAKE_LIST( msg_c04r0110_02, 0 )  //つづける
      _BMPMENU_MAKE_LIST( msg_c04r0110_05, 3 )  //リタイア
    ENDIF
    
    _BMPMENU_START()
    
    $LOCALWORK0 = 0
    
    SWITCH $SCWK_ANSWER
    CASE 0 THEN //続ける
      //お友達の選択を待っています
      _SYSWIN_MSG( msg_c04r0110_10 , POS_DOWN )
      
      //受信バッファクリア
      _BSUBWAY_TOOL( BSWSUB_RECV_BUF_CLEAR, BSW_NULL, BSW_NULL, BSW_NULL )
      
      //選択待ち通信同期
      _BSUBWAY_TOOL( BSWSUB_COMM_TIMSYNC, BSW_COMM_MULTI_ROUND_MENU_SELECT, BSW_NULL, comm_ret )

      IF $comm_ret == FALSE THEN
        _SYSWIN_CLOSE()
        _CALL sub_common_retmap_comm_error //受付へ
        _RET
      ENDIF
      
      $LOCALWORK0 = BSWAY_COMM_ROUND_SEL_NEXT
      
      //選択結果送信
      _BSUBWAY_TOOL( BSWSUB_COMM_SEND_BUF, BSWAY_COMM_RETIRE_SELECT, LOCALWORK0, BSW_NULL )

      //通信エラーチェック
      _BSUBWAY_TOOL( BSWSUB_COMM_CHK_NET_ERROR, BSW_NULL, BSW_NULL, comm_ret )
      
      IF $comm_ret == TRUE THEN
        _SYSWIN_CLOSE()
        _CALL sub_common_retmap_comm_error //受付へ
        _RET
      ENDIF
      
      //選択結果受信
      _BSUBWAY_TOOL( BSWSUB_COMM_RECV_BUF, BSWAY_COMM_RETIRE_SELECT, BSW_NULL, LOCALWORK0 )
      
      _SYSWIN_CLOSE()
      
      //通信エラーチェック
      _BSUBWAY_TOOL( BSWSUB_COMM_CHK_NET_ERROR, BSW_NULL, BSW_NULL, comm_ret )
      
      IF $comm_ret == TRUE THEN
        _CALL sub_common_retmap_comm_error //受付へ
        _RET
      ENDIF
     
      IF $LOCALWORK0 == BSWAY_COMM_ROUND_SEL_RETIRE THEN //相手リタイア
        _SYSWIN_MSG( msg_c04r0110_12 , POS_DOWN )
        _TIME_WAIT( 30 )
        _BSUBWAY_TOOL( BSWSUB_COMM_TIMSYNC, BSW_COMM_MULTI_ROUND_RETIRE_WAIT, BSW_NULL, comm_ret )
        _SYSWIN_CLOSE()
        
        IF $comm_ret == FALSE THEN
          _CALL sub_common_retmap_comm_error  //通信エラー処理
        ELSE
          _CALL sub_common_retmap_retire      //受付へ
        ENDIF
      ELSE //相手続ける
        //移動アニメ
        _CALL sub_anm_jiki_next_car_multi

        //電車揺れ停止
        _BSUBWAY_TOOL( BSWSUB_STOP_SHAKE_TRAIN, BSW_NULL, BSW_NULL, BSW_NULL )
        //フェードアウト
        _MAP_FADE_BLACK_OUT()
        _MAP_FADE_END_CHECK()
        
        //戦闘後のワーク開放
        _BSUBWAY_TOOL( BSWSUB_FREE_BTLPRM, BSW_NULL, BSW_NULL, BSW_NULL )
        
        //DEBUG
        _BSUBWAY_TOOL( BSWTOOL_DEBUG_PRINT_HEAP_SIZE, 1, BSW_NULL, BSW_NULL )

        //シーン制御を継続に
        $WK_OTHER_BSUBWAY_TRAIN = BSWAY_SCENE_TRAIN_CONTINUE
        
        //マップチェンジ
        _MAP_CHANGE_NO_FADE( ZONE_ID_C04R0110, 7, 0, 4, DIR_UP )
      ENDIF
      
      $loop = 0
    CASE 1 THEN //記録する
      _CALL sub_common_btlrec_win
    DEFAULT //リタイア
      //リタイアするか
      _SYSWIN_MSG( msg_c04r0110_06 , POS_DOWN )
      _BSUBWAY_TOOL( BSWTOOL_YESNO_WIN, SCR_NO, BSW_NULL, SCWK_ANSWER )
      _SYSWIN_CLOSE()
      
      IF $SCWK_ANSWER == SCR_YES THEN
        //お友達の選択を待っています
        _SYSWIN_MSG( msg_c04r0110_10 , POS_DOWN )

        //受信バッファクリア
        _BSUBWAY_TOOL( BSWSUB_RECV_BUF_CLEAR, BSW_NULL, BSW_NULL, BSW_NULL )
        
        //選択待ち通信同期
        _BSUBWAY_TOOL( BSWSUB_COMM_TIMSYNC, BSW_COMM_MULTI_ROUND_MENU_SELECT, BSW_NULL, comm_ret )

        IF $comm_ret == FALSE THEN
          _SYSWIN_CLOSE()
          _CALL sub_common_retmap_comm_error //受付へ
          _RET
        ENDIF

        $LOCALWORK0 = BSWAY_COMM_ROUND_SEL_RETIRE
        
        //選択結果送信
        _BSUBWAY_TOOL( BSWSUB_COMM_SEND_BUF, BSWAY_COMM_RETIRE_SELECT, LOCALWORK0, BSW_NULL )
        
        //通信エラーチェック
        _BSUBWAY_TOOL( BSWSUB_COMM_CHK_NET_ERROR, BSW_NULL, BSW_NULL, comm_ret )
      
        IF $comm_ret == TRUE THEN
          _SYSWIN_CLOSE()
          _CALL sub_common_retmap_comm_error //受付へ
          _RET
        ENDIF

        //選択結果受信
        _BSUBWAY_TOOL( BSWSUB_COMM_RECV_BUF, BSWAY_COMM_RETIRE_SELECT, BSW_NULL, LOCALWORK0 )
        
        //通信エラーチェック
        _BSUBWAY_TOOL( BSWSUB_COMM_CHK_NET_ERROR, BSW_NULL, BSW_NULL, comm_ret )

        IF $comm_ret == TRUE THEN
          _SYSWIN_CLOSE()
          _CALL sub_common_retmap_comm_error //受付へ
          _RET
        ENDIF
        
        //戻ります
        _SYSWIN_MSG( msg_c04r0110_12 , POS_DOWN )
        _TIME_WAIT( 30 )
        _BSUBWAY_TOOL( BSWSUB_COMM_TIMSYNC, BSW_COMM_MULTI_ROUND_RETIRE_WAIT, BSW_NULL, comm_ret )
        _SYSWIN_CLOSE()

        IF $comm_ret == FALSE THEN
          _CALL sub_common_retmap_comm_error  //通信エラー処理
        ELSE
          _CALL sub_common_retmap_retire      //受付へ
        ENDIF
        
        $loop = 0
      ENDIF
    ENDSWITCH
  ENDWHILE
}
_RET


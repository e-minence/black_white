//--------------------------------------------------------------
//  通信マルチバトル
//--------------------------------------------------------------
sub_battle_comm_multi:
{
  DEFINE_LOCAL result
  DEFINE_LOCAL recv_result

  //対戦前台詞(見栄えの為、上のOBJから
  _BSUBWAY_TOOL( BSWSUB_TRAINER_BEFORE_MSG_UR, 1, BSW_TRAIN_OBJID_TRAINER_1, BSW_NULL )
  
  //対戦前台詞
  _BSUBWAY_TOOL( BSWSUB_TRAINER_BEFORE_MSG_DR, 0, BSW_TRAIN_OBJID_TRAINER_0, BSW_NULL )
  
  //相手のメッセージ表示完了待ち
  _SYSWIN_MSG_ALLPUT( msg_c04r0110_16, POS_DOWN )
  _TIME_WAIT( 15 )
  
  _BSUBWAY_TOOL( BSWSUB_COMM_TIMSYNC, BSW_COMM_MULTI_ROUND_BEFORE_MSG_WAIT, BSW_NULL, comm_ret )
  _MSGWIN_CLOSE()
  
  IF $comm_ret == FALSE THEN
    $SCWK_ANSWER = BSW_BTL_RESULT_COMM_ERROR
    _RET
  ENDIF
  
  //互いに近づく
  _CALL sub_anm_battle_start_multi
  
  //通信同期
  _BSUBWAY_TOOL( BSWSUB_COMM_TIMSYNC, BSW_COMM_MULTI_ROUND_BATTLE_START, BSW_NULL, comm_ret )
  
  IF $comm_ret == FALSE THEN
    $SCWK_ANSWER = BSW_BTL_RESULT_COMM_ERROR
    _RET
  ENDIF

  //バトル呼び出し
  _BSUBWAY_TOOL( BSWSUB_LOCAL_BTL_CALL, BSW_NULL, BSW_NULL, BSW_NULL )
  
  //通信エラーチェック
  _BSUBWAY_TOOL( BSWSUB_COMM_CHK_NET_ERROR, BSW_NULL, BSW_NULL, comm_ret )
  
  IF $comm_ret == TRUE THEN
    $SCWK_ANSWER = BSW_BTL_RESULT_COMM_ERROR
    _RET
  ENDIF
  
  //戦闘録画データを格納
  _BSUBWAY_TOOL( BSWSUB_STORE_BTLREC, BSW_NULL, BSW_NULL, BSW_NULL )
  
  //バトル録画呼び出し うざいとの事で無効
//_TIME_WAIT( 15 ) //間を入れる
//_BSUBWAY_TOOL( BSWSUB_CALL_BTLREC, BSW_NULL, BSW_NULL, BSW_NULL )
  
  //戦闘結果取得
  _BSUBWAY_TOOL( BSWSUB_GET_BATTLE_RESULT, BSW_NULL, BSW_NULL, result )
  
  //BTS要望422 どちらかがデバッグ操作で強制勝利したら勝ちにして欲しい
  _BSUBWAY_TOOL( BSWTOOL_DEBUG_CHK_DEBUG_ROM, BSW_NULL, BSW_NULL, SCWK_ANSWER )
  
  IF $SCWK_ANSWER == TRUE THEN //DEBUG ROM
    //受信バッファクリア
    _BSUBWAY_TOOL( BSWSUB_RECV_BUF_CLEAR, BSW_NULL, BSW_NULL, BSW_NULL )

    _BSUBWAY_TOOL( BSWSUB_COMM_TIMSYNC, BSW_COMM_MULTI_ROUND_DEBUG_BATTLE_RESULT , BSW_NULL, comm_ret )
   
    IF $comm_ret == FALSE THEN
      $SCWK_ANSWER = BSW_BTL_RESULT_COMM_ERROR
      _RET
    ENDIF
    
    _BSUBWAY_TOOL( BSWSUB_COMM_SEND_BUF, BSWAY_COMM_BATTLE_RESULT, result, BSW_NULL )
    
    _BSUBWAY_TOOL( BSWSUB_COMM_CHK_NET_ERROR, BSW_NULL, BSW_NULL, comm_ret )
    
    IF $comm_ret == TRUE THEN
      $SCWK_ANSWER = BSW_BTL_RESULT_COMM_ERROR
      _RET
    ENDIF
    
    _BSUBWAY_TOOL( BSWSUB_COMM_RECV_BUF, BSWAY_COMM_BATTLE_RESULT, BSW_NULL, recv_result )
    
    _BSUBWAY_TOOL( BSWSUB_COMM_CHK_NET_ERROR, BSW_NULL, BSW_NULL, comm_ret )
    
    IF $comm_ret == TRUE THEN
      $SCWK_ANSWER = BSW_BTL_RESULT_COMM_ERROR
      _RET
    ENDIF
    
    IF $result == BSW_BTL_RESULT_WIN || $recv_result == BSW_BTL_RESULT_WIN THEN
      $result = BSW_BTL_RESULT_WIN
    ENDIF
  ENDIF
  
  //結果をSCWK_ANSWERへ
  $SCWK_ANSWER = $result
}
_RET


/************************************************************/
/*					Ｎ城出現POSイベント						*/
/************************************************************/
EVENT_START	ev_pos_c09r0501_n_01
	_CAMERA_START()		//カメラ操作開始
    _CAMERA_PURGE()		//対象物とカメラのバインドを解く
	
	_CAMERA_MOVE( 9944,0,970752,1081344,114688,466944,15 )
	
	//主人公：上へ進む
	_OBJ_ANIME( MMDL_ID_PLAYER, anm_nevent_ply_move_01 )
	_OBJ_ANIME_WAIT()
	
    _CAMERA_WAIT_MOVE()	//カメラ移動待ち
	
	//Ｎ：その場歩き
	_OBJ_ANIME( C09R0501_N_01, anm_stay_walk_r )
	_OBJ_ANIME_WAIT()
	
	//Ｎ：メッセージ
	_BALLOONWIN_OBJMSG_WB( msg_c09r0501_boss_01w, msg_c09r0501_boss_01b, C09R0501_N_01, DIR_UP )
	_MSGWIN_CLOSE()
	
	//だいたいチャンピオンだからって…
	_BALLOONWIN_OBJMSG( msg_c09r0501_boss_02, C09R0501_N_01 )
	_MSGWIN_CLOSE()
	
	//Ｎ：チャンピオン前へ
	_OBJ_ANIME( C09R0501_N_01, anm_nevent_n_move_01 )
	_OBJ_ANIME_WAIT()
	
	//Ｎ：ポケモンが死んだのも…
	_BALLOONWIN_OBJMSG( msg_c09r0501_boss_03, C09R0501_N_01 )
	_MSGWIN_CLOSE()
	
	//チャンピオン：なんと 悲しいことを…
	_BALLOONWIN_OBJMSG( msg_c09r0501_champion_01, C09R0501_CHAMPION_01 )
	_MSGWIN_CLOSE()
	
	//Ｎ
	_BALLOONWIN_OBJMSG( msg_c09r0501_boss_04, C09R0501_N_01 )
	_MSGWIN_CLOSE()
	
	//Ｎ：主人公に気づく
	_OBJ_ANIME( C09R0501_N_01, anm_nevent_n_look_01 )
	_OBJ_ANIME_WAIT()
	
	//Ｎ：そうか まだキミがいたか
	_BALLOONWIN_OBJMSG( msg_c09r0501_boss_05, C09R0501_N_01 )
	_MSGWIN_CLOSE()
	
	//Ｎ：キミもストーンを手に入れたんだ
	_BALLOONWIN_OBJMSG_WB( msg_c09r0501_boss_06w, msg_c09r0501_boss_06b, C09R0501_N_01, DIR_UP )
	_MSGWIN_CLOSE()
	
	//Ｎ：ドラゴンたちにふさわしいのはココじゃない！
	_BALLOONWIN_OBJMSG( msg_c09r0501_boss_07, C09R0501_N_01 )
	_MSGWIN_CLOSE()
	
	_BLACK_OUT()
	_DISP_FADE_END_CHECK()
	
	_CAMERA_BIND()		//カメラバインド
	_CAMERA_END()		//カメラ操作終了
	

	//【仮】Ｎ城出現デモ=============================
	
	//ここでコール
	
	//【仮】Ｎ城出現デモ=============================
	
	_BLACK_IN()
	_DISP_FADE_END_CHECK()
	
	//あれが僕のお城…
	_BALLOONWIN_OBJMSG( msg_c09r0501_boss_08, C09R0501_N_01 )
	_MSGWIN_CLOSE()
	
	//キミ お城に おいでよ！
	_BALLOONWIN_OBJMSG( msg_c09r0501_boss_09, C09R0501_N_01 )
	_MSGWIN_CLOSE()
	
	//Ｎ：退場
	_OBJ_ANIME( C09R0501_N_01, anm_nevent_n_goaway_01 )
	_OBJ_ANIME_WAIT()
	
	//Ｎ：非表示
	_OBJ_DEL( C09R0501_N_01 )
	_FLAG_SET( FV_C09R0501_BOSS_01 )
	
	
	//ライバル：登場
	_OBJ_ANIME( C09R0501_RIVAL_01, anm_nevent_n_goaway_01 )
	_OBJ_ANIME_WAIT()
	
	//じいさんボロボロだな
	_BALLOONWIN_OBJMSG( msg_c09r0501_black_01, C09R0501_RIVAL_01 )
	_MSGWIN_CLOSE()
	
	//チャンピオン：ライバルをみる
	_OBJ_ANIME( C09R0501_CHAMPION_01, anm_nevent_n_goaway_01 )
	_OBJ_ANIME_WAIT()
	
	//よくぞここまで…
	
	
	//まあな ポケモンリーグを勝ち抜いたよ
	
	
	//やるではないか
	
	
	//プレイヤー名！Ｎをぶっとばしてこいよ！
	_PLAYER_NAME( 0 )
	
	
	//========================================//
	
	//イベントPOS無効
	$WK_SCENE_C09R0501 = 1
	
	//========================================//
	
	
EVENT_END



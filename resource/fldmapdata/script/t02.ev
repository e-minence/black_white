/*			アララギ博士　ポケセン前						*/
/************************************************************/
EVENT_START   ev_t02_hakase_guide
  DEFINE_LOCAL  DOOR_ANIME_ID

	//まちかねたぞ！
	_TALK_OBJ_START()
	_BALLOONWIN_TALKOBJ_OPEN( msg_t02_doctor_jr_01 )
	_AB_KEYWAIT()
	_BALLOONWIN_CLOSE()
		
	//ポケモンセンターに消えていく
  _DOOR_ANIME_CREATE( DOOR_ANIME_ID, 791, 658 )
  _DOOR_ANIME_SET( DOOR_ANIME_ID, SCR_BMANM_DOOR_OPEN )
  _DOOR_ANIME_WAIT( DOOR_ANIME_ID )

	_OBJ_ANIME( T02_HAKASE_GUIDE, anm_doctor_pokecen )
	_OBJ_ANIME_WAIT()

	//博士の動作モデルを削除する
	_OBJ_DEL( T02_HAKASE_GUIDE )

	//自機も一緒についていく
  _PLAYER_DIR_GET( SCWK_ANSWER )
  SWITCH $SCWK_ANSWER
  CASE DIR_UP THEN
	  _OBJ_ANIME( MMDL_ID_PLAYER, anm_player_pokecen_up )
	  _OBJ_ANIME_WAIT()
  CASE DIR_LEFT THEN
	  _OBJ_ANIME( MMDL_ID_PLAYER, anm_player_pokecen_left )
	  _OBJ_ANIME_WAIT()
  CASE DIR_RIGHT THEN
	  _OBJ_ANIME( MMDL_ID_PLAYER, anm_player_pokecen_right )
	  _OBJ_ANIME_WAIT()
  ENDSWITCH

  _DOOR_ANIME_SET( DOOR_ANIME_ID, SCR_BMANM_DOOR_CLOSE )
  _DOOR_ANIME_WAIT( DOOR_ANIME_ID )
  _DOOR_ANIME_DELETE( DOOR_ANIME_ID )
	
	//ゾーンチェンジ
	_MAP_CHANGE( ZONE_ID_T02PC0101, 7, 19, DIR_UP )

	//============フラグワーク操作=============//

	//博士のバニッシュフラグセット
	_FLAG_SET( FV_T02_HAKASE )

	//博士案内イベント終了
	$WK_SCENE_T02 = 1

	//========================================//

EVENT_END


	//ポケモン図鑑……！？　がっかりだな
	_BALLOONWIN_OBJMSG_OPEN( msg_t02_boss_03 , T02_N_01 )
	_AB_KEYWAIT()
	_BALLOONWIN_CLOSE()

	//Ｎとポケモンしょうぶ。
	_TRAINER_BTL_SET( TRID_BOSS_01, 0 )
	//敗戦チェック
	_TRAINER_LOSE_CHECK( SCWK_ANSWER )
	IF $SCWK_ANSWER == 0 THEN
		_TRAINER_LOSE()//負け(0)ならトレーナー敗北処理へ(ここでスクリプト終了します）
	ENDIF

	//……負けたか　ボクの　友達たち　ありがとう
	_BALLOONWIN_OBJMSG_OPEN( msg_t02_boss_04 , T02_N_01 )
	_AB_KEYWAIT()
	_BALLOONWIN_CLOSE()

	//【仮】Ｎ：２番道路へ移動
	_OBJ_ANIME( T02_N_01, anm_n_bye )
	_OBJ_ANIME_WAIT()

	//【仮】ライバル：Ｎを目で追う
	
	//【仮】自機：Ｎを目で追う

	//Ｎを消す
	_OBJ_DEL( T02_N_01 )

	//【仮】ライバル：Ｎの方を見た後、自機を見る
	
	//なんか　オレのせいで　変な話に　なっちゃった
	_BALLOONWIN_OBJMSG_OPEN( msg_t02_black_05 , T02_RIVAL_02 )
	_AB_KEYWAIT()
	_BALLOONWIN_CLOSE()

	//ライバル：２番道路へ移動
	_OBJ_ANIME( T02_RIVAL_02, anm_rival_bye )
	_OBJ_ANIME_WAIT()

	//ライバルを消す
	_OBJ_DEL( T02_RIVAL_02 )

	//============================================//
	
	//演説イベント終了
	$WK_SCENE_T02 = 2
	
	//Ｎとライバルのバニッシュフラグセット
	_FLAG_SET( FV_T02_NNN )
	_FLAG_SET( FV_T02_RIVAL_02 )
	_FLAG_SET( FV_T02PC0101_SUPPORT )

	//============================================//
	
EVENT_END


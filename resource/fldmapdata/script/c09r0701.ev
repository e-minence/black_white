/************************************************************/
/*				Ｎ城へワープさせてくれる人					*/
/************************************************************/
//Ｎの城出現中にだけ現れる（ゲームオーバー対処）
EVENT_START	ev_c09r0701_warpman_01
	_TALK_OBJ_START()
	
	//Ｎの城に行くか？
	_BALLOONWIN_TALKOBJ_MSG( msg_c09r0701_warp_01 )
	_YES_NO_WIN( SCWK_ANSWER )
	
	IF $SCWK_ANSWER == SCR_YES THEN
		//いけ！
		_BALLOONWIN_TALKOBJ_MSG( msg_c09r0701_warp_02 )
		_MSGWIN_CLOSE()
		
		_TIME_WAIT( 8 )
		
		//ワープ演出込みマップ遷移
		_MAP_CHANGE_WARP( ZONE_ID_N01R0101, 25, 18, DIR_UP )
	
	ELSE
		//そうか
		_BALLOONWIN_TALKOBJ_MSG( msg_c09r0701_warp_03 )
		_LAST_KEYWAIT()
		_MSGWIN_CLOSE()
		
	ENDIF

EVENT_END






	_FLAG_SET( FV_T02PC0101_RIVAL )

	//自宅２階：サポート（後から出現するため）
	_FLAG_SET( FV_T01R0102_SUPPORT )

	//サンヨウシティジム：ジムリーダー２人（演出で出現するため）
	_FLAG_SET( FV_C01GYM0101_LEADERS )
	

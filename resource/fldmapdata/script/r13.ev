EVENT_START		ev_r13_treasure_01
_TALK_OBJ_START()

	//１日フラグが立っていない場合
	IF FLAG_OFF( FH_01) THEN
	
		//なにを　しているか　だって？
		_BALLOONWIN_TALKOBJ_MSG( msg_r13_salvage_01 )
		_MSGWIN_CLOSE()
	
		//さっき　おたからを　みつけたんだ
		_BALLOONWIN_TALKOBJ_MSG( msg_r13_salvage_02 )
		_MSGWIN_CLOSE()
	
		_CALL ev_treasure
	
		//あしたも　ここで　たからさがし
		_BALLOONWIN_TALKOBJ_MSG( msg_r13_salvage_03 )
		_LAST_KEYWAIT()
		_MSGWIN_CLOSE()
		
		//========================================/
		
		//一日フラグセット
		_FLAG_SET( FH_01 )
		
		//========================================/
	
	//もう既に話しをしている場合
	ELSE
	
		//あしたも　ここで　たからさがし
		_BALLOONWIN_TALKOBJ_MSG( msg_r13_salvage_03 )
		_LAST_KEYWAIT()
		_MSGWIN_CLOSE()
	
	ENDIF

EVENT_END


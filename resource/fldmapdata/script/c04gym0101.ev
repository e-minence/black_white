/************************************************************/
/*						ジムガイド							*/
/************************************************************/
EVENT_START	ev_c04gym0101_guide_01
	_TALK_OBJ_START()

	//バッジフラグ取得
	_GET_BADGE_FLAG( SCWK_TEMP0, BADGE_ID_04 )

	//バッジフラグで分岐
	IF $SCWK_TEMP0 == 0 THEN
		//バッジ入手前の処理

		//アイテム入手フラグで分岐
		IF FLAG_OFF( FE_C04GYM_ITEM ) THEN
			//アイテム未入手なら、おいしいみず入手イベント
			_BALLOONWIN_TALKOBJ_OPEN( msg_c04gym0101_glasses_01 )
			_BALLOONWIN_CLOSE()
			_ITEM_EVENT_KEYWAIT( ITEM_OISIIMIZU, 1 )
			_BALLOONWIN_TALKOBJ_OPEN( msg_c04gym0101_glasses_02 )
			_LAST_KEYWAIT()
			_BALLOONWIN_CLOSE()

			_FLAG_SET( FE_C04GYM_ITEM )			//アイテム入手フラグをセット

		ELSE
			//入手済みならメッセージのみ
			_BALLOONWIN_TALKOBJ_OPEN( msg_c04gym0101_glasses_02 )
			_LAST_KEYWAIT()
			_BALLOONWIN_CLOSE()
		ENDIF

	ELSE
		//バッジ入手後の処理

		//さすがっすよ！
		_BALLOONWIN_TALKOBJ_OPEN( msg_c04gym0101_glasses_03 )
		_LAST_KEYWAIT()
		_BALLOONWIN_CLOSE()

	ENDIF

EVENT_END


/************************************************************/
/*							石像							*/
/************************************************************/
EVENT_START	ev_bg_c04gym0101_statue_01
	_TALK_OBJ_START()

	_TALKWIN_OPEN()

	//バッジフラグ取得
	_GET_BADGE_FLAG( SCWK_TEMP0, BADGE_ID_04 )
	//ジムバッジフラグによって分岐
	IF $SCWK_TEMP0 == 0 THEN
		//バッジ入手前なら
		_TALKMSG( msg_c04gym0101_statue_01 )

	ELSE
		//バッジ入手後なら　【仮】イベント進行で分岐（？？後友達の名前も入る）
		IF FLAG_OFF( FH_01) THEN
			//イベント進行前
			_TALKMSG( msg_c04gym0101_statue_02 )
		ELSE
			//イベント進行後
			_TALKMSG( msg_c04gym0101_statue_03 )
		ENDIF

	ENDIF

	_LAST_KEYWAIT()
	_TALKWIN_CLOSE()

EVENT_END



EVENT_START	ev_prg_c04gym0101_scr01

	//主人公：！マーク
	_OBJ_ANIME( MMDL_ID_PLAYER, anm_obj_gyoe )
	_OBJ_ANIME_WAIT()

	//ローカル変数定義
	{
    DEFINE_LOCAL  POSX
    DEFINE_LOCAL  POSZ

	//主人公位置で分岐（位置からコースターの種類を識別します）
	_PLAYER_POS_GET( POSX, POSZ )
	IF $POSX == 16 THEN
		//１台目のトレーナー有りコースターの乗車口なら
		_CALL		ev_trainer_appear_01


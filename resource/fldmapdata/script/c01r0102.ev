EVENT_END

/**************************************************************/
/*  C01R0102 本棚２のイベントスクリプト						  */
/**************************************************************/
EVENT_START   ev_c01r0102_books_02
	//ともだちてちょうに　ついて
	_SYSWIN_MSG_DOWN   ( msg_c01r0101_books2_01 )
	
	_YES_NO_WIN( SCWK_ANSWER )
	
	IF $SCWK_ANSWER == SCR_YES THEN
	
		_MSGWIN_CLOSE()
		_SYSWIN_MSG_DOWN   ( msg_c01r0101_books2_02 )
		_MSGWIN_CLOSE()
	
	ELSE
	
		_MSGWIN_CLOSE()
	
	ENDIF

EVENT_END

/*  C01R0102 マコモの会話用イベントスクリプト*/
/**************************************************************/
EVENT_START   ev_c01r0102_inventor_01
	_TALK_OBJ_START()

	//重要アイテム「？？？」を所持しているか、いないかの分岐
	
		//重要アイテム「？？？」を持っていない場合
		IF $WK_SCENE_T01R0102 >= 5 THEN
		
			//マコモ『ゆめのあとちに　いる　ふしぎなポケモン』
			_BALLOONWIN_TALKOBJ_OPEN( msg_c01r0102_inventor_07 )
			_BALLOONWIN_CLOSE()
		
		//重要アイテム「？？？」を持っている場合
		ELSE
		
			//マコモ『それって！　ムシャーナの「？？？？？」！？』
			_BALLOONWIN_TALKOBJ_OPEN( msg_c01r0102_inventor_08 )
			_BALLOONWIN_CLOSE()
		
			_FLAG_SET( FE_CGEAR_GET )
		
		ENDIF

EVENT_END
  

/*  C01R0102 GIRL3の会話用イベントスクリプト				  */
/**************************************************************/
EVENT_START   ev_c01r0102_girl3_01
	_TALK_OBJ_START()

	//PDWイベントが終わっていない場合
	IF FLAG_OFF( FE_CGEAR_GET ) THEN
		
		//あなた　トレーナー？　じゃあ　ポケモンセンターの
		_BALLOONWIN_TALKOBJ_OPEN( msg_c01r0102_girl3_01 )
		_BALLOONWIN_CLOSE()
		
		_BALLOONWIN_TALKOBJ_OPEN( msg_c01r0102_girl3_02 )
		_BALLOONWIN_CLOSE()
	
	//PDWイベントが終わっている場合
	ELSE
		_BALLOONWIN_TALKOBJ_OPEN( msg_c01r0102_girl3_02 )
		_BALLOONWIN_CLOSE()
	
	ENDIF

EVENT_END


	_BALLOONWIN_OBJMSG_WB( msg_n01r0501_sage1_08w, msg_n01r0501_sage1_08b, N01R0501_SAGE1_01, POS_DEFAULT )
	_LAST_KEYWAIT()
	_MSGWIN_CLOSE()

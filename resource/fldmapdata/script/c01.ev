/**************************************************************/
/*  C01 BABYGIRLのランダム会話用イベントスクリプト            */
/**************************************************************/
ev_c01_talkobj_babygirl:
  _EVENT_START
  _TALK_START_SE_PLAY
  _TURN_HERO_SITE
  
  _GET_RND SCWK_ANSWER,3
  _IFVAL_JUMP SCWK_ANSWER,EQ,0,babygirl1_01
  _IFVAL_JUMP SCWK_ANSWER,EQ,1,babygirl1_02
  _IFVAL_JUMP SCWK_ANSWER,EQ,2,babygirl1_03

babygirl1_01:
	_BALLOONWIN_TALKOBJ_OPEN msg_c01_babygirl1_01
	_JUMP babygirl_end

babygirl1_02:
	_BALLOONWIN_TALKOBJ_OPEN msg_c01_babygirl1_02
	_JUMP babygirl_end

babygirl1_03:
	_BALLOONWIN_TALKOBJ_OPEN msg_c01_babygirl1_03
	_JUMP babygirl_end

babygirl_end:
	_AB_KEYWAIT
	_BALLOONWIN_CLOSE
  _EVENT_END
  _END
  

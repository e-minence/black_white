/**************************************************************/
/*  C01 ミュージカル用イベントスクリプト                      */
/**************************************************************/
ev_c01_musical:
  _EVENT_START
  _TALK_START_SE_PLAY
	_TURN_HERO_SITE

	_BALLOONWIN_TALKOBJ_OPEN msg_c01_musical_01
	_YES_NO_WIN SCWK_ANSWER
	_BALLOONWIN_CLOSE

	_IFVAL_JUMP SCWK_ANSWER,EQ,0,c01_musical_yes
	_IFVAL_JUMP SCWK_ANSWER,EQ,1,c01_musical_no

c01_musical_yes:
	_BALLOONWIN_TALKOBJ_OPEN msg_c01_musical_02
	_AB_KEYWAIT
  _BALLOONWIN_CLOSE

	_MUSICAL_CALL //ミュージカル呼び出し
	_JUMP c01_musical_end

c01_musical_no:
	_BALLOONWIN_TALKOBJ_OPEN msg_c01_musical_03

	_AB_KEYWAIT
  _BALLOONWIN_CLOSE

c01_musical_end:
  _EVENT_END
  _END


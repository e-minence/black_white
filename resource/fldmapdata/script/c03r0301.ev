	_ANIME_DATA	AC_MARK_GYOE,1
	_ANIME_DATA	AC_WALK_D_8F,2
	_ANIME_DATA	ACMD_END,0
	
//--------------------------------------------------------------
//	会長：退場
//--------------------------------------------------------------
_ANIME_LABEL	anm_cleaningm_bye01
	_ANIME_DATA	AC_WALK_U_8F,7
	_ANIME_DATA	ACMD_END,0

//--------------------------------------------------------------

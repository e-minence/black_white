//------------------------------注意--------------------------------//
//																	//
//	ジムギミックに FH_10〜15 まで使用ししています。					//
//	同マップ内の使用を禁止します。									//
//	各リフトの停止位置（上下）チェックに使用します。				//
//	0 = 上の停止位置にいる、1 = 下の停止位置にいる					//
//																	//
//------------------------------------------------------------------//


/************************************************************/
/*					ゾーンチェンジスクリプト				*/
/************************************************************/
INIT_EVENT_START	ev_zone_c05gym0101


INIT_EVENT_END


/************************************************************/
/*				接続イベント エントランスから降下			*/
/************************************************************/
EVENT_START	ev_reserve_c05gym0101_gymstart_01

	//マップ遷移ブラックイン
	_MAP_FADE_BLACK_IN()

	//エントランスからリフトが降りる演出（引数0 = 降下アニメ）
	_GYM_GROUND_EXIT_LIFT( 0 )

	_MAP_FADE_END_CHECK()

	//========================================//

	//リフトの上下位置フラグを初期化（初期位置が下のリフトのフラグをたてておく）
	//ゾーンチェンジではローカルフラグの操作ができないためゾーン進入時に必ず発動するこのイベントで初期化
	_FLAG_RESET( FH_10 )
	_FLAG_SET( FH_11 )
	_FLAG_RESET( FH_12 )
	_FLAG_SET( FH_13 )
	_FLAG_SET( FH_14 )
	_FLAG_RESET( FH_15 )

	//========================================//

EVENT_END


/**************************************************************/
/*    【仮】ジムリーダー会話                                  */
/**************************************************************/
EVENT_START		ev_c05gym0101_leader
	_TALK_OBJ_START()
	
	//ジムバッジ取得チェック
	_GET_BADGE_FLAG( SCWK_TEMP0, BADGE_ID_05 )
	
	//ジムバッジを取得していない場合
	IF $SCWK_TEMP0 == 0 THEN
	
		//会話
		_BALLOONWIN_OBJMSG( msg_c05gym0101_leader_01,C05GYM0101_LEADER_01 )
		_BALLOONWIN_CLOSE()
	
		//戦闘処理
		_TRAINER_BTL_SET( TRID_LEADER5_01, 0 )
		//結果チェック
		_TRAINER_LOSE_CHECK( SCWK_ANSWER )
		IF $SCWK_ANSWER == SCR_BATTLE_RESULT_WIN THEN
			_TRAINER_WIN()
		ELSE
			_TRAINER_LOSE()
		ENDIF
		
		//勝利後会話
		_BALLOONWIN_OBJMSG( msg_c05gym0101_leader_02 , C05GYM0101_LEADER_01 )
		_BALLOONWIN_CLOSE()
	
		//クエイクバッジ入手処理
		_SET_BADGE_FLAG( BADGE_ID_05 )
		
		//入手音再生
		_ME_PLAY( SEQ_ME_BADGE )
		_CALL_FLD3D_CUTIN( FLDCIID_GYM05 )
		_ME_WAIT()
		
		//ヤーコンからクエイクバッジをもらった
		_PLAYER_NAME( 0 )
		_SYSWIN_MSG_DOWN( msg_c05gym0101_leader_03 )
		_SYSWIN_CLOSE()

		//ヤーコンメッセージ
		_BALLOONWIN_OBJMSG( msg_c05gym0101_leader_04 , C05GYM0101_LEADER_01 )
		_BALLOONWIN_CLOSE()
		
		//ジム内ストッパーOBJ削除
		_OBJ_DEL( C05GYM0101_STOPPER_01 )
		
		//============フラグワーク操作=============//
	
		//D06電気洞窟前のPOSイベント起動（電気洞窟ストッパー解除）
		$WK_SCENE_D06 = 1
		
		//ジム内ストッパーOBJ非表示に
		_FLAG_SET( FV_C05GYM0101_CORN )

		//========================================//
		
	//ジムバッジ入手後
	ELSE
		
		//D06電気洞窟イベント前
		IF $SCWK_TEMP0 == 1 THEN
			_BALLOONWIN_OBJMSG( msg_c05gym0101_leader_05 , C05GYM0101_LEADER_01 )
			_LAST_KEYWAIT()
			_BALLOONWIN_CLOSE()
			
		//D06電気洞窟イベント後
		ELSE
			_BALLOONWIN_OBJMSG( msg_c05gym0101_leader_06 , C05GYM0101_LEADER_01 )
			_LAST_KEYWAIT()
			_BALLOONWIN_CLOSE()
		ENDIF
		
	ENDIF

EVENT_END


/************************************************************/
/*					リフト0号機 上昇ボタン					*/
/************************************************************/
EVENT_START		ev_c05gym0101_lift_00u
	_PLAYER_DIR_GET( SCWK_ANSWER )	//主人公の向き情報を取得

	//スイッチの下側から話しかけた&リフトが下にある場合はリフト起動
	IF $SCWK_ANSWER == DIR_UP && FLAG_ON( FH_10 ) THEN
		//リフトを上昇させる（引数はリフトインデックス）
		_SE_PLAY( SEQ_SE_FLD_61 )
		_GYM_GROUND_MV_LIFT( 0 )
		_SE_WAIT()
		_FLAG_RESET( FH_10 )
	ENDIF

EVENT_END


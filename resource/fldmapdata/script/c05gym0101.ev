/************************************************************/
/*				接続リフト 至ジムエントランス				*/
/************************************************************/
EVENT_START	ev_c05gym0101_exitlift_00u
	_PLAYER_DIR_GET( SCWK_ANSWER )	//主人公の向き情報を取得

	//スイッチの下側から話しかけた場合はリフト起動
	IF $SCWK_ANSWER == DIR_UP THEN
		_SE_PLAY( SEQ_SE_FLD_61 )		//スイッチＳＥを再生
		_SE_WAIT()

		//マップ遷移ブラックアウト
		_MAP_FADE_BLACK_OUT()

		//リフトを上昇させる（1 = エントランスに移動アニメ）
		_GYM_GROUND_EXIT_LIFT( 1 )

		_MAP_FADE_END_CHECK()

		//スクリプト予約 マップチェンジ後にエントランスのリフト上昇演出を起動
		_RESERVE_SCRIPT( SCRID_RESERVE_C05GYM0201_GYMBACK_01 )

		//マップチェンジ
		_MAP_CHANGE_NO_FADE( ZONE_ID_C05GYM0201, 5, 0, 4, DIR_UP )

	ENDIF

EVENT_END



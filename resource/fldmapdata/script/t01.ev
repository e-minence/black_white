talkobj_woman01_yes:
	_TALKWIN_OPEN
	_TALKMSG_ALLPUT msg_t01_testmsg02_01
	_JUMP talkobj_woman01_end

talkobj_woman01_no:
	_TALKWIN_OPEN
	_TALKMSG_ALLPUT msg_t01_testmsg02_02

talkobj_woman01_end:
*/
	_AB_KEYWAIT
  	_TALKWIN_CLOSE
  	_OBJ_PAUSE_CLEAR_ALL
  	_END


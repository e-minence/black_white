/**************************************************************/
/*  T01 BIGMANの会話用イベントスクリプト                      */
/**************************************************************/
ev_t01_talkobj_bigman:
	_TALK_OBJ_PAUSE_ALL
	_TURN_HERO_SITE
	_TALKWIN_OPEN
	_TALKMSG_ALLPUT msg_t01_bigman_01
	_AB_KEYWAIT
  _TALKWIN_CLOSE
  _OBJ_PAUSE_CLEAR_ALL
  _END

/**************************************************************/
/*  T01 WOMAN2の会話用イベントスクリプト                      */
/**************************************************************/
ev_t01_talkobj_woman02:
	_TALK_OBJ_PAUSE_ALL
	_TURN_HERO_SITE
	_TALKWIN_OPEN
	_TALKMSG_ALLPUT msg_t01_woman2_01

	_YES_NO_WIN SCWK_ANSWER
	_TALKWIN_CLOSE
	_IFVAL_JUMP SCWK_ANSWER,EQ,0,talkobj_woman02_yes
	_IFVAL_JUMP SCWK_ANSWER,EQ,1,talkobj_woman02_no

talkobj_woman02_yes:
	_TALKWIN_OPEN
	_TALKMSG_ALLPUT msg_t01_woman2_02

	_AB_KEYWAIT
  	_TALKWIN_CLOSE

	_CHG_LANGID

	_JUMP talkobj_woman02_end

talkobj_woman02_no:
	_TALKWIN_OPEN
	_TALKMSG_ALLPUT msg_t01_woman2_03

	_AB_KEYWAIT
  	_TALKWIN_CLOSE

talkobj_woman02_end:
  	_OBJ_PAUSE_CLEAR_ALL
  	_END

//-------------------------------------------------------------
//  T01 WOMAN1の会話用イベントスクリプトです。
//-------------------------------------------------------------

ev_t01_talkobj_woman01:
	_TALK_OBJ_PAUSE_ALL
	_TURN_HERO_SITE
	_TALKWIN_OPEN
	_TALKMSG_ALLPUT msg_t01_testmsg02

	_YES_NO_WIN SCWK_ANSWER
	_TALKWIN_CLOSE

	IF $SCWK_ANSWER == 0 THEN
		_TALKWIN_OPEN
		_TALKMSG_ALLPUT msg_t01_testmsg02_01
	ELSE
		_TALKWIN_OPEN
		_TALKMSG_ALLPUT msg_t01_testmsg02_02
	ENDIF

/*
	_IFVAL_JUMP SCWK_ANSWER,EQ,0,talkobj_woman01_yes

/**************************************************************/
/*  D06 ストッパー（デンチュラ）イベントスクリプト            */
/**************************************************************/
EVENT_START    ev_d06_stopper_01
	
	_SYSWIN_MSG_DOWN(msg_d06_stopper_01) 
	_LAST_KEYWAIT()
	_SYSWIN_CLOSE() 

EVENT_END

/**************************************************************/
/*  D06 博士とフウロのPOSイベントスクリプト                   */
/**************************************************************/
EVENT_START    ev_pos_d06_leader5_01

//_GET_BADGE_FLAG( SCWK_TEMP0, BADGE_ID_05 )

//IF $SCWK_TEMP0 == 1 THEN 

//===============フラグ操作===============//
//【仮】フラグが無い為、仮
	//POSを踏むとヤーコンを表示する。
//	_FLAG_RESET()
//========================================//
	
	//主人公がヤーコンに気づく
	_OBJ_ANIME( MMDL_ID_PLAYER,anm_player_gyoe)
	_OBJ_ANIME_WAIT()
	
	//主人公が振り向く
	_OBJ_ANIME( MMDL_ID_PLAYER,anm_player_muku_01)
	_OBJ_ANIME_WAIT()
	
	//ヤーコンがやってくる
	_OBJ_ANIME( D06_LEADER5_01,anm_leader5_kuru_01)
	_OBJ_ANIME_WAIT()

	//主人公が振り向く
	_OBJ_ANIME( MMDL_ID_PLAYER,anm_player_muku_02)
	_OBJ_ANIME_WAIT()
	
	//ヤーコンが喋る
	//ヤーコン:またせたな
	_BALLOONWIN_OBJMSG( msg_d06_leader_01, D06_LEADER5_01)
	_BALLOONWIN_CLOSE()
	
	//主人公が振り向く
	_OBJ_ANIME( MMDL_ID_PLAYER,anm_player_muku_03)
	_OBJ_ANIME_WAIT()
	
	//ヤーコンが振り向く
	_OBJ_ANIME( D06_LEADER5_01,anm_leader5_muku_01)
	_OBJ_ANIME_WAIT()
	
	//ヤーコンが喋る
	//ヤーコン:これは　デンチュラという
	_BALLOONWIN_OBJMSG( msg_d06_leader_02, D06_LEADER5_01)
	_BALLOONWIN_CLOSE()
	
//===============フラグ操作===============//
//【仮】フラグが無い為、仮	
//ポケモンの動作モデルが出現
//	_FLAG_RESET()
//========================================//
	
	//ポケモンが巣に向かう
	_OBJ_ANIME( D06_POKE2_01,anm_poke2_kuru_01)
	_OBJ_ANIME_WAIT()
	
	//ヤーコンが喋る
	//ヤーコン:ポケモン名！　わざ名！
	_BALLOONWIN_OBJMSG( msg_d06_leader_03, D06_LEADER5_01)
	_BALLOONWIN_CLOSE()
	
	//【仮】スクリプトの動きだけ出来るのか。エフェクトはいるのか
	//ポケモンがわざを出したような処理
	_OBJ_ANIME( D06_POKE2_01,anm_poke2_waza_01)
	_OBJ_ANIME_WAIT()

//===============フラグ操作===============//
//【仮】フラグが無い為、仮	
//デンチュラの巣を消す
//_OBJ_DEL( D06_STOPPER_01 )
//	_FLAG_SET()
//========================================//

	//ヤーコンが振り向く
	_OBJ_ANIME( D06_LEADER5_01,anm_leader5_muku_02)
	_OBJ_ANIME_WAIT()
	
	//ヤーコンが喋る
	//ヤーコン:ほらよ！　このわざマシンを　くれてやる
	//ヤーコンがアイテムをくれる
	_BALLOONWIN_OBJMSG( msg_d06_leader_04, D06_LEADER5_01)
	_BALLOONWIN_CLOSE()
	
	//わざマシンの解説
	//ヤーコン:
	_BALLOONWIN_OBJMSG( msg_d06_leader_05, D06_LEADER5_01)
	_BALLOONWIN_CLOSE()
	
	//ヤーコンが喋る
	//ヤーコン:オレには　おまえさんの　さいのうが　どれほどのものか
	_BALLOONWIN_OBJMSG( msg_d06_leader_06, D06_LEADER5_01)
	_BALLOONWIN_CLOSE()
	
	//ヤーコンが立ち去る
	_OBJ_ANIME( D06_LEADER5_01,anm_leader5_saru_01)
	_OBJ_ANIME( D06_POKE2_01,anm_poke2_saru_01)
	_OBJ_ANIME_WAIT()
	
//===============フラグ操作===============//
	//【仮】フラグが無い為、仮
	//POSイベントを無効に
	$LOCALWORK15 = 1

	//ジムリーダーを消す
	//ストッパーを消す
//	_FLAG_SET( FV_C06_LEADER06 )
//	_FLAG_SET( FV_C06_HAKASE1 )

//========================================//


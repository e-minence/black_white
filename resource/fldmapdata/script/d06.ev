	_OBJ_DEL( D06_LEADER5_01 )
	_OBJ_DEL( D06_STOPPER_01 )
	_OBJ_DEL( D06_POKE2_01 )
	
	//ジムリーダーが画面外に移動
	_OBJ_ANIME( MMDL_ID_PLAYER,anm_leader5)
	_OBJ_ANIME_WAIT()
	
	_OBJ_ANIME( D06_LEADER5_01,anm_leader5)
	_OBJ_ANIME_WAIT()
	
	_OBJ_ANIME( D06_POKE2_01,anm_leader5)
	_OBJ_ANIME_WAIT()
	
	//ヤーコン:
	_BALLOONWIN_OBJMSG( msg_d06_leader5_, D06_LEADER5_01)
	_BALLOONWIN_CLOSE()

*/
//ENDIF

EVENT_END


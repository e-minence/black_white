/**************************************************************/
/* パッケージポケモンの鳴き声が聞こえてくる                   */
/**************************************************************/
EVENT_START    ev_pos_d08r0801_demo_01	
	
	DEFINE_LOCAL	LCWK_VERSION
	_GET_ROM_VERSION(LCWK_VERSION)
	
	//画面を揺らすデモを入れる
	
	//びっくりする
	_OBJ_ANIME(MMDL_ID_PLAYER,anm_common_gyoe)
	_OBJ_ANIME_WAIT()
	
	//左右をきょろきょろ見る
	_OBJ_ANIME(MMDL_ID_PLAYER,anm_common_turn_l)
	_OBJ_ANIME_WAIT()
	_TIME_WAIT(10)
	
	_OBJ_ANIME(MMDL_ID_PLAYER,anm_common_turn_r)
	_OBJ_ANIME_WAIT()
	_TIME_WAIT(20)

	_OBJ_ANIME(MMDL_ID_PLAYER,anm_common_turn_u)
	_OBJ_ANIME_WAIT()
	
	//【仮】ポケモンの鳴き声のウィンドウを仮
	//ROMによって、ポケモンの鳴き声が違う
	IF $LCWK_VERSION == VERSION_WHITE THEN
		_VOICE_PLAY(MONSNO_650,0)

	ELSE
		_VOICE_PLAY(MONSNO_651,0)
		
	ENDIF
		_VOICE_WAIT()
	
	_SYSWIN_MSG_DOWN(msg_d08r0801_demo_02)
	_LAST_KEYWAIT()
	_MSGWIN_CLOSE()

	//============フラグワーク操作=============//
		
		$WK_SCENE_D08_LEGEND  = 7
	//========================================//
	
EVENT_END

/**************************************************************/
/* ゲーチスとプラズマ団のPOSイベント                          */
/**************************************************************/
EVENT_START    ev_pos_d08r0801_hakai_01	
	

	DEFINE_LOCAL	LWK_HERO_POSX
	DEFINE_LOCAL	LWK_HERO_POSZ
	_PLAYER_POS_GET(LWK_HERO_POSX, LWK_HERO_POSZ)
	
	//カメラをゲーチスに寄せる
	
	//いよいよである
	_BALLOONWIN_OBJMSG(msg_d08r0801_sage2_01,D08R0801_SAGE2_01)
	_BALLOONWIN_CLOSE()
	
	//ゲーチスがびっくり、振り返る
	_OBJ_ANIME(D08R0801_SAGE2_01,anm_common_gyoe)
	_OBJ_ANIME_WAIT()
	_OBJ_ANIME(D08R0801_SAGE2_01,anm_common_turn_r)
	_OBJ_ANIME_WAIT()
	
	//なんと！
	_BALLOONWIN_OBJMSG(msg_d08r0801_sage2_02,D08R0801_SAGE2_01)
	_BALLOONWIN_CLOSE()
	
	//七賢人移動
	_OBJ_ANIME(D08R0801_SAGE2_01,anm_sage02_idou_01)
	_OBJ_ANIME_WAIT()
	
	//カメラを主人公に寄せる
	
	//カメラを主人公が連れて行かれる場所へ
	
	//プラズマ団、4人が主人公を取り囲む
	IF $LWK_HERO_POSZ == 10 THEN 
		_OBJ_ANIME(D08R0801_HAKAIM_01,anm_hakaim_01_idou_01_a)
		_TIME_WAIT(8)
		_OBJ_ANIME(MMDL_ID_PLAYER,anm_player_idou_01_a)
		_OBJ_ANIME_WAIT()
	
	ELSIF $LWK_HERO_POSZ == 11	THEN
		_OBJ_ANIME(D08R0801_HAKAIM_01,anm_hakaim_01_idou_01_b)
		_TIME_WAIT(8)
		_OBJ_ANIME(MMDL_ID_PLAYER,anm_player_idou_01_b)
		_OBJ_ANIME_WAIT()
		
	ELSIF $LWK_HERO_POSZ == 12	THEN
		_OBJ_ANIME(D08R0801_HAKAIM_01,anm_hakaim_01_idou_01_c)
		_TIME_WAIT(10)
		_OBJ_ANIME(MMDL_ID_PLAYER,anm_player_idou_01_c)
		_OBJ_ANIME_WAIT()
		
	ELSIF $LWK_HERO_POSZ == 13	THEN
		_OBJ_ANIME(D08R0801_HAKAIM_01,anm_hakaim_01_idou_01_d)
		_OBJ_ANIME(MMDL_ID_PLAYER,anm_player_idou_01_d)
		_TIME_WAIT(10)
		_OBJ_ANIME_WAIT()
		
	ELSIF $LWK_HERO_POSZ == 14	THEN
		_OBJ_ANIME(D08R0801_HAKAIM_01,anm_hakaim_01_idou_01_e1)
		_OBJ_ANIME_WAIT()
		
		_OBJ_ANIME(MMDL_ID_PLAYER,anm_player_idou_01_e)
		_TIME_WAIT(15)
		_OBJ_ANIME(D08R0801_HAKAIM_01,anm_hakaim_01_idou_01_e2)		
		_OBJ_ANIME_WAIT()
		
	ENDIF
	
		
	_OBJ_ANIME(MMDL_ID_PLAYER,anm_common_turn_r)
	_OBJ_ANIME_WAIT()

	_OBJ_ANIME(D08R0801_HAKAIM_02,anm_hakaim_02_idou_01)
	_OBJ_ANIME(D08R0801_HAKAIM_03,anm_hakaim_03_idou_01)
	_OBJ_ANIME(D08R0801_HAKAIW_01,anm_hakaiw_01_idou_01)
	_OBJ_ANIME_WAIT()


	//プラズマだん　いがいは
	_BALLOONWIN_OBJMSG(msg_d08r0801_sage2_03,D08R0801_SAGE2_01)
	_BALLOONWIN_CLOSE()
	
	//【仮】トレーナーデータ、全体的に仮
	//足踏みで話すやつを分かりやすく
	_OBJ_ANIME(D08R0801_HAKAIM_01,anm_common_turn_l)
	_OBJ_ANIME_WAIT()
	_OBJ_ANIME(MMDL_ID_PLAYER,anm_common_turn_r)
	_OBJ_ANIME_WAIT()
	
	//イッシュの　よあけを
	_BALLOONWIN_OBJMSG(msg_d08r0801_hakaim1_01,D08R0801_HAKAIM_01)
	_BALLOONWIN_CLOSE()
	
//	_CALL		ev_boss_btl
	
	//く…　こんな　こどもに
	_BALLOONWIN_OBJMSG(msg_d08r0801_hakaim1_03,D08R0801_HAKAIM_01)
	_BALLOONWIN_CLOSE()
	
	
	
	//足踏みで話すやつを分かりやすく
	_OBJ_ANIME(D08R0801_HAKAIM_02,anm_common_turn_d)
	_OBJ_ANIME_WAIT()
	_OBJ_ANIME(MMDL_ID_PLAYER,anm_common_turn_u)
	_OBJ_ANIME_WAIT()
	//われらの　ねがいが
	_BALLOONWIN_OBJMSG(msg_d08r0801_hakaim2_01,D08R0801_HAKAIM_02)
	_BALLOONWIN_CLOSE()
	
//	_CALL		ev_boss_btl
	
	//わたしは　とめられた
	_BALLOONWIN_OBJMSG(msg_d08r0801_hakaim2_02,D08R0801_HAKAIM_02)
	_BALLOONWIN_CLOSE()
	
	
	
	//足踏みで話すやつを分かりやすく
	_OBJ_ANIME(D08R0801_HAKAIW_01,anm_common_turn_u)
	_OBJ_ANIME_WAIT()
	_OBJ_ANIME(MMDL_ID_PLAYER,anm_common_turn_d)
	_OBJ_ANIME_WAIT()
	//いくよ！　プラ〜ズマ〜！！
	_BALLOONWIN_OBJMSG(msg_d08r0801_hakaiw1_01,D08R0801_HAKAIW_01)
	_BALLOONWIN_CLOSE()
	
//	_CALL		ev_boss_btl
	
	//わたしたちの　おうが
	_BALLOONWIN_OBJMSG(msg_d08r0801_hakaiw1_02,D08R0801_HAKAIW_01)
	_BALLOONWIN_CLOSE()
	
	
	

	//足踏みで話すやつを分かりやすく
	_OBJ_ANIME(D08R0801_HAKAIM_03,anm_common_turn_r)
	_OBJ_ANIME_WAIT()
	_OBJ_ANIME(MMDL_ID_PLAYER,anm_common_turn_l)
	_OBJ_ANIME_WAIT()
	//ほらほら　４にんつづけて
	_BALLOONWIN_OBJMSG(msg_d08r0801_hakaim3_01,D08R0801_HAKAIM_03)
	_BALLOONWIN_CLOSE()
	
//	_CALL		ev_boss_btl
	
	//なんてヤツ……
	_BALLOONWIN_OBJMSG(msg_d08r0801_hakaim3_02,D08R0801_HAKAIM_03)
	_BALLOONWIN_CLOSE()
	
	//プラズマ団が移動して、道を空ける
	_OBJ_ANIME(D08R0801_HAKAIM_01,anm_hakaim_01_idou_02)
	_OBJ_ANIME(D08R0801_HAKAIM_02,anm_hakaim_02_idou_02)

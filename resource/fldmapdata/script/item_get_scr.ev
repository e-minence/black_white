//--------------------------------------------------------------------
//  成功メッセージ「〜をてにいれた！」
//	SCWK_TEMP0	アイテムナンバー
//--------------------------------------------------------------------
sub_item_event_get_msg:
{
  //ポケットナンバーをSCWK_ANSWERに代入
  _GET_POCKET_ID(	SCWK_TEMP0,SCWK_ANSWER )

  SWITCH  $SCWK_ANSWER
  CASE ITEMPOCKET_WAZA THEN
    //わざマシンの場合
    _PLAYER_NAME( 0 )
    _ITEM_NAME( 1, SCWK_TEMP0 )
    _ITEM_WAZA_NAME( 2, SCWK_TEMP0 )
    _SYSWIN_MSG( msg_item_get_04 , POS_DOWN )

  CASE ITEMPOCKET_EVENT THEN
    //大事なものの場合
    _PLAYER_NAME( 0 )
    _ITEM_NAME( 1, SCWK_TEMP0 )
    _SYSWIN_MSG( msg_item_get_02 , POS_DOWN )

  DEFAULT
    //それ以外の場合
    _PLAYER_NAME( 0 )
    _ITEM_NAME( 1, SCWK_TEMP0 )
    _SYSWIN_MSG( msg_item_get_01 , POS_DOWN )

  ENDSWITCH
}
_RET


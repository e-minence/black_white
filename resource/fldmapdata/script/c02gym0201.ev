/**************************************************************/
/*     ジムトレーナー（本棚ストッパー）1               　　　 */
/*     隠し扉前に配置されるトレーナー				   　　　 */
/**************************************************************/
EVENT_START		ev_c02gym0201_girl3_01
	
	//ジムバッジを持っているのかを判定
	_GET_BADGE_FLAG( SCWK_TEMP0, BADGE_ID_02 )
	
	//読んだ本の状態によって、行動が分岐
	_TALK_OBJ_START()
	
	//ジムバッジを取得していない場合
	IF $SCWK_TEMP0 == 0 THEN		
		IF $WK_SCENE_C02GYM0201 == 1 && FLAG_OFF( FE_C02GYM_TRBTL2) THEN
		
			_BALLOONWIN_TALKOBJ_MSG(msg_c02gym0101_girl3_01)
		    _LAST_KEYWAIT()
		    _BALLOONWIN_CLOSE()		//前段階の本（カテゴリー3を読んでいない場合)
		    
		    _TIME_WAIT(16)
		    _OBJ_ANIME(C02GYM0201_GIRL3_01,anm_common_turn_u)
		    _OBJ_ANIME_WAIT()
		
		ELSIF $WK_SCENE_C02GYM0201 == 2 && FLAG_OFF( FE_C02GYM_TRBTL2) THEN
			
			IF FLAG_OFF(FH_01)THEN
				_BALLOONWIN_TALKOBJ_MSG(msg_c02gym0101_girl3_02)
				_YES_NO_WIN( SCWK_ANSWER )
				_MSGWIN_CLOSE()
				
				IF $SCWK_ANSWER == SCR_YES  THEN
					_BALLOONWIN_TALKOBJ_MSG(msg_c02gym0101_girl3_02_1)
				ELSE
					_BALLOONWIN_TALKOBJ_MSG(msg_c02gym0101_girl3_02_2)
				ENDIF
				
			    _LAST_KEYWAIT()
				_MSGWIN_CLOSE()
				_FLAG_SET(FH_01)
		    
		    ELSE
		    	_BALLOONWIN_TALKOBJ_MSG(msg_c02gym0101_girl3_02_3)
			    _LAST_KEYWAIT()
				_MSGWIN_CLOSE()
		    	
		    ENDIF
		   	_TIME_WAIT(16)
		    _OBJ_ANIME(C02GYM0201_GIRL3_01,anm_common_turn_u)
		    _OBJ_ANIME_WAIT()
		    
		ELSIF $WK_SCENE_C02GYM0201 == 3 && FLAG_OFF( FE_C02GYM_TRBTL2) THEN
			
			IF FLAG_OFF(FH_02)THEN
				_BALLOONWIN_TALKOBJ_MSG(msg_c02gym0101_girl3_03)
				_YES_NO_WIN( SCWK_ANSWER )
				_MSGWIN_CLOSE()
				
				IF $SCWK_ANSWER == SCR_YES  THEN
					_BALLOONWIN_TALKOBJ_MSG(msg_c02gym0101_girl3_03_1)
				ELSE
					_BALLOONWIN_TALKOBJ_MSG(msg_c02gym0101_girl3_03_2)
				ENDIF
				
			    _LAST_KEYWAIT()
				_MSGWIN_CLOSE()
				_FLAG_SET(FH_02)
		    
		    ELSE
		    	_BALLOONWIN_TALKOBJ_MSG(msg_c02gym0101_girl3_03_3)
			    _LAST_KEYWAIT()
				_MSGWIN_CLOSE()
				
		    ENDIF
			
			_TIME_WAIT(16)
		    _OBJ_ANIME(C02GYM0201_GIRL3_01,anm_common_turn_u)
		    _OBJ_ANIME_WAIT()
		   
		ELSIF $WK_SCENE_C02GYM0201 == 4 && FLAG_OFF( FE_C02GYM_TRBTL2) THEN
			
			IF FLAG_OFF(FH_02)THEN
				_BALLOONWIN_TALKOBJ_MSG(msg_c02gym0101_girl3_03)
				_YES_NO_WIN( SCWK_ANSWER )
				_MSGWIN_CLOSE()
				
				IF $SCWK_ANSWER == SCR_YES  THEN
					_BALLOONWIN_TALKOBJ_MSG(msg_c02gym0101_girl3_03_1)
				ELSE
					_BALLOONWIN_TALKOBJ_MSG(msg_c02gym0101_girl3_03_2)
				ENDIF
				
			    _LAST_KEYWAIT()
				_MSGWIN_CLOSE()
				_FLAG_SET(FH_02)
		    
		    ELSE
		    	_BALLOONWIN_TALKOBJ_MSG(msg_c02gym0101_girl3_03_3)
			    _LAST_KEYWAIT()
				_MSGWIN_CLOSE()
		    ENDIF

		   	_TIME_WAIT(16)
		    _OBJ_ANIME(C02GYM0201_GIRL3_01,anm_common_turn_u)
		    _OBJ_ANIME_WAIT()
		    
		ELSIF $WK_SCENE_C02GYM0201 == 5 && FLAG_OFF( FE_C02GYM_TRBTL2) THEN
			
			IF FLAG_OFF(FH_03)THEN
				_BALLOONWIN_TALKOBJ_MSG(msg_c02gym0101_girl3_04)
				_YES_NO_WIN( SCWK_ANSWER )
				_MSGWIN_CLOSE()
				
				IF $SCWK_ANSWER == SCR_YES  THEN
					_BALLOONWIN_TALKOBJ_MSG(msg_c02gym0101_girl3_04_1)
				ELSE
					_BALLOONWIN_TALKOBJ_MSG(msg_c02gym0101_girl3_04_2)
				ENDIF
				
			    _LAST_KEYWAIT()
				_MSGWIN_CLOSE()
				_FLAG_SET(FH_03)
		    
		    ELSE
		    	_BALLOONWIN_TALKOBJ_MSG(msg_c02gym0101_girl3_04_3)
			    _LAST_KEYWAIT()
				_MSGWIN_CLOSE()
		    ENDIF
			
			_TIME_WAIT(16)
		    _OBJ_ANIME(C02GYM0201_GIRL3_01,anm_common_turn_u)
		    _OBJ_ANIME_WAIT()		
			    	
		ELSIF $WK_SCENE_C02GYM0201 == 6 && FLAG_OFF( FE_C02GYM_TRBTL2 ) THEN
			
				//前段階の本（カテゴリー3を読んでいる場合、対戦出来る。
				_BALLOONWIN_TALKOBJ_MSG(msg_c02gym0101_girl3_05)
				_YES_NO_WIN( SCWK_ANSWER )
				_MSGWIN_CLOSE()
		    	
				IF $SCWK_ANSWER == SCR_YES  THEN
					_BALLOONWIN_TALKOBJ_MSG(msg_c02gym0101_girl3_05_1)
				ELSE
					_BALLOONWIN_TALKOBJ_MSG(msg_c02gym0101_girl3_05_2)
				ENDIF
				_MSGWIN_CLOSE()
				
		    	//トレーナー戦呼び出し
				_TRAINER_BTL_SET( TRID_SCHOOLG_03, 0 )
				
				//敗戦チェック
				_TRAINER_LOSE_CHECK( SCWK_ANSWER )
				IF $SCWK_ANSWER == SCR_BATTLE_RESULT_WIN THEN
					_TRAINER_WIN()			//勝ち(1)ならトレーナー勝利処理へ
				ELSE
					_TRAINER_LOSE()			//負け(0)ならトレーナー敗北処理へ(ここでスクリプト終了します）
				ENDIF
				
		    	//対戦後メッセージ
		   
		    	_BALLOONWIN_TALKOBJ_MSG(msg_c02gym0101_girl3_06)
				
				_LAST_KEYWAIT()
		    	_BALLOONWIN_CLOSE()
		    	
		    	{ //ここからローカル変数の参照制限範囲開始
		   		 DEFINE_LOCAL  POSX   /* ローカル変数定義 */
		    	 DEFINE_LOCAL  POSZ    /* {}で囲う場合は連続して書かなければならない */

		    	_PLAYER_POS_GET( POSX,POSZ ) //自機座標取得
		    
		   		 //プレイヤーが通る3グリッド分を用意
		   		SWITCH $POSX
		   		CASE 12 THEN
		     	_OBJ_ANIME( C02GYM0201_GIRL3_01, anm_tranier_move_c )
				_OBJ_ANIME_WAIT()
				
		    	CASE 13 THEN

		     		_OBJ_ANIME( MMDL_ID_PLAYER, anm_player_move_a )
					_OBJ_ANIME_WAIT()

		     		_OBJ_ANIME( C02GYM0201_GIRL3_01, anm_tranier_move_c )
					_OBJ_ANIME_WAIT()
					
		    	DEFAULT
		    	ENDSWITCH
		   		}
		   		 
		    	_FLAG_SET(FE_C02GYM_TRBTL2)
		    	
		ELSE	
			
			//対戦が終了した場合
			_BALLOONWIN_TALKOBJ_MSG(msg_c02gym0101_girl3_06)
			_LAST_KEYWAIT()
	    	_BALLOONWIN_CLOSE()
	    	
	    ENDIF
    ELSE
    
   		//jジムバッジを入手している場合
		_BALLOONWIN_TALKOBJ_MSG(msg_c02gym0101_girl3_07)
		_LAST_KEYWAIT()
	    _BALLOONWIN_CLOSE()
    
    ENDIF
EVENT_END


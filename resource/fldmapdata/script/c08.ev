	_OBJ_ANIME( C08_LEADER8B_01,anm_c08_leaderb_to_player_01 )
	
	_TIME_WAIT( 20 )
	
	_BALLOONWIN_OBJMSG_WB( msg_c08_leader8b_05w , msg_c08_leader8b_05b , C08_LEADER8B_01 , POS_DOWN)
	_BALLOONWIN_CLOSE()
	
	_OBJ_ANIME_WAIT()
	

		_BALLOONWIN_CLOSE()
	
	ENDIF
	
	//チャンピオン：おうよ！
	_BALLOONWIN_OBJMSG_POS( msg_c08_champion_05 , C08_CHAMPION_01 , POS_DL )
	_BALLOONWIN_CLOSE()
	
	//シャガ：…わからんな

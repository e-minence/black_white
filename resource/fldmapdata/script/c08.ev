	_OBJ_DEL( C08_LEADER8A_01 )
	_OBJ_DEL( C08_CHAMPION_01 )
	
	//アイリス誘導
	_OBJ_ANIME( C08_LEADER8B_01,anm_c08_leaderb_lead_01 )
	_OBJ_ANIME( MMDL_ID_PLAYER,anm_c08_leaderb_lead_01 )
	_OBJ_ANIME_WAIT()
	

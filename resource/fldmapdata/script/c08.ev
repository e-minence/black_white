/************************************************************/
/*			ZONE_CHANGE_LABEL						*/
/************************************************************/
INIT_EVENT_START	ev_zone_c08
	{
	//バージョンを取得してOBJを変化させる
	_GET_ROM_VERSION( SCWK_ANSWER )
	
	//BlackVERならキーボード
	IF $SCWK_ANSWER == VERSION_BLACK THEN
		$OBJCHRWORK0 = KEYBOARD
	
	//Whiteならフィドル
	ELSE
		$OBJCHRWORK0 = FIDDLE
	ENDIF
	}
	
INIT_EVENT_END

/************************************************************/
/*					FIELD_INIT_LABEL						*/
/************************************************************/
INIT_EVENT_START	ev_init_c08
	

	//誘拐イベントワークの値によってサポートの位置を変更する
	
	//演説前
	IF $WK_SCENE_C08 == 0 THEN
		_OBJ_POS_CHANGE( C08_LEADER8B_01, 409, 0, 176, DIR_LEFT )
	//誘導イベント（２）
	ELSIF $WK_SCENE_C08 == 1 THEN
		_OBJ_POS_CHANGE( C08_LEADER8B_01, 418, 0, 166, DIR_DOWN )
	//誘導イベント（３）
	ELSIF $WK_SCENE_C08 == 2 THEN
		_OBJ_POS_CHANGE( C08_LEADER8B_01, 418, 0, 161, DIR_DOWN )
	//発生後
	
	ELSE
	
	ENDIF
	
	//ジムクリア後にアララギ娘を配置
	IF$WK_SCENE_C08_GYMCLEAR == 1 THEN
		_OBJ_ADD_EX( 405, 150, DIR_UP, MMDL_ID_EVENTOBJ_00, HAKASE2, MV_DMY )
	ENDIF

INIT_EVENT_END


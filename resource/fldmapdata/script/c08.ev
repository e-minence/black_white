/* ジムクリア後：アララギ娘誘導イベント                        */
/**************************************************************/
EVENT_START   ev_scene_c08_gymclear_01
	
	//ハイリンク通信ブロック処理
	_DISABLE_NETWORK_IN_IMPORTANT_EVENT()
	
	//プレイヤーネームを格納
	_PLAYER_NAME(0)
	_CAMERA_START()		//カメラ操作開始
	_CAMERA_PURGE()		//カメラのバインドを解く
	//カメラ操作
	_CAMERA_MOVE( 9672,0,964335,26574848,0,9666560,30 )
	_CAMERA_WAIT_MOVE()	//カメラ移動待ち
	
	//アララギ娘「！」
	_OBJ_ANIME( MMDL_ID_EVENTOBJ_00, anm_c08_hakase2_gyoe )
	_OBJ_ANIME_WAIT()
	
	//アララギ娘分岐メッセージ：…ハーイ
	_BALLOONWIN_OBJMSG_WB( msg_c08_hakase2_00w , msg_c08_hakase2_00b , MMDL_ID_EVENTOBJ_00 , POS_DEFAULT)
	_BALLOONWIN_CLOSE()
	
	_OBJ_ANIME( MMDL_ID_EVENTOBJ_00, anm_c08_hakase2_to_player_01 )
	_OBJ_ANIME_WAIT()
	
	//自機にカメラを戻す
	_CAMERA_DEF_MOVE (16) 
	_CAMERA_WAIT_MOVE()
	_CAMERA_BIND()		//カメラバインド　主人公位置をカメラが追従するようになります
	_CAMERA_END()		//カメラ操作終了
	
	//アララギ娘：あっ （伝説）を／それよりも すごいじゃない
	_BALLOONWIN_OBJMSG_WB( msg_c08_hakase2_01w , msg_c08_hakase2_01b , MMDL_ID_EVENTOBJ_00 , POS_DEFAULT)
	_BALLOONWIN_OBJMSG(msg_c08_hakase2_02,MMDL_ID_EVENTOBJ_00)
	_BALLOONWIN_CLOSE()
	
	//アララギ娘隣接
	_OBJ_ANIME( MMDL_ID_EVENTOBJ_00, anm_c08_hakase2_lead_01 )
	
	_OBJ_ANIME_WAIT()
	
	//主人公アララギを見る
	_OBJ_ANIME( MMDL_ID_PLAYER, anm_c08_player_look_hakase2_r )
	_OBJ_ANIME_WAIT()
	
	{
	
	//バージョンチェック
	DEFINE_LOCAL LCW_VERSION
	_GET_ROM_VERSION ( LCW_VERSION ) 
	
	//whiteVER
	IF $LCW_VERSION == VERSION_WHITE THEN
		//連れ歩き開始
		_OBJ_ANIME( MMDL_ID_EVENTOBJ_00, anm_c08_hakase2_lead_02w )
		_OBJ_ANIME( MMDL_ID_PLAYER, anm_c08_hakase2_lead_02w )
		_OBJ_ANIME_WAIT()
		
	//blackVER
	ELSE
		//連れ歩き開始
		_OBJ_ANIME( MMDL_ID_EVENTOBJ_00, anm_c08_hakase2_lead_02b )
		_OBJ_ANIME( MMDL_ID_PLAYER, anm_c08_hakase2_lead_02b )
		_OBJ_ANIME_WAIT()
	ENDIF
	}
	//アララギ娘：あのゲートをくぐり
	_BALLOONWIN_OBJMSG(msg_c08_hakase2_03,MMDL_ID_EVENTOBJ_00)
	_BALLOONWIN_CLOSE()
	
	//アララギと主人公向き合う
	_OBJ_ANIME( MMDL_ID_EVENTOBJ_00, anm_c08_hakase2_look_player_l )
	_OBJ_ANIME( MMDL_ID_PLAYER, anm_c08_player_look_hakase2_r )
	_OBJ_ANIME_WAIT()
	
	//アララギ：ポケモンと一緒に旅立った事、後悔してる？
	_BALLOONWIN_OBJMSG(msg_c08_hakase2_04,MMDL_ID_EVENTOBJ_00)
	_YES_NO_WIN( SCWK_ANSWER )
	
	{
	//はい
	IF $SCWK_ANSWER == SCR_YES THEN
		_BALLOONWIN_OBJMSG(msg_c08_hakase2_05,MMDL_ID_EVENTOBJ_00)
	//いいえ
	ELSE
		_BALLOONWIN_OBJMSG(msg_c08_hakase2_06,MMDL_ID_EVENTOBJ_00)
	ENDIF
	}
	
	//アララギ：これ プレゼントよ！
	_BALLOONWIN_OBJMSG(msg_c08_hakase2_07,MMDL_ID_EVENTOBJ_00)
	_BALLOONWIN_CLOSE()
	
	_OBJ_ANIME( MMDL_ID_EVENTOBJ_00, anm_c08_hakase2_look_player_l )
	_OBJ_ANIME_WAIT()
	
	//マスターボール入手
	_ITEM_EVENT_KEYWAIT ( ITEM_MASUTAABOORU , 1  )
	
	_PLAYER_NAME(0)
	//アララギ：そのマスターボールは
	_BALLOONWIN_OBJMSG(msg_c08_hakase2_08,MMDL_ID_EVENTOBJ_00)
	_BALLOONWIN_CLOSE()
	
	//アララギ退場
	_OBJ_ANIME( MMDL_ID_EVENTOBJ_00, anm_c08_hakase2_goodbye_01 )
	_OBJ_ANIME( MMDL_ID_PLAYER, anm_c08_player_look_hakase_d )
	_OBJ_ANIME_WAIT()
	
	_OBJ_DEL( MMDL_ID_EVENTOBJ_00 )
	
	//========================================//

	//C08R0601案内嬢POSイベント起動
	$WK_SCENE_C08_GYMCLEAR = 2
	
	//========================================//
	
	//ハイリンク通信ブロック処理終了
	_ENABLE_NETWORK_IN_IMPORTANT_EVENT()
	
EVENT_END


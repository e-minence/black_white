/**************************************************************/
/*  T01R0102 ポケモン入手イベント用スクリプト　 */
/**************************************************************/
//炎タイプ（仮）
ev_t01r0102_poke_get0:
	_TALK_OBJ_PAUSE_ALL
	_TALKWIN_OPEN
	_TALKMSG_ALLPUT msg_t01r0102_ball1_fire_01
	_AB_KEYWAIT

	_YES_NO_WIN SCWK_ANSWER
	_TALKWIN_CLOSE

	_IFVAL_JUMP SCWK_ANSWER,EQ,0,t01r0102_poke_get_yes
	_IFVAL_JUMP SCWK_ANSWER,EQ,1,t01r0102_poke_get_no

//草タイプ（仮）
ev_t01r0102_poke_get1:
	_TALK_OBJ_PAUSE_ALL
	_TALKWIN_OPEN
	_TALKMSG_ALLPUT msg_t01r0102_ball1_grass_01
	_AB_KEYWAIT

	_YES_NO_WIN SCWK_ANSWER
	_TALKWIN_CLOSE

	_IFVAL_JUMP SCWK_ANSWER,EQ,0,t01r0102_poke_get_yes
	_IFVAL_JUMP SCWK_ANSWER,EQ,1,t01r0102_poke_get_no

//水タイプ（仮）
ev_t01r0102_poke_get2:
	_TALK_OBJ_PAUSE_ALL
	_TALKWIN_OPEN
	_TALKMSG_ALLPUT msg_t01r0102_ball1_water_01
	_AB_KEYWAIT

	_YES_NO_WIN SCWK_ANSWER
	_TALKWIN_CLOSE

	_IFVAL_JUMP SCWK_ANSWER,EQ,0,t01r0102_poke_get_yes
	_IFVAL_JUMP SCWK_ANSWER,EQ,1,t01r0102_poke_get_no

t01r0102_poke_get_no:
  _OBJ_PAUSE_CLEAR_ALL
  _END

t01r0102_poke_get_yes:
//共通、ポケモン入手メッセージ
	_TALK_OBJ_PAUSE_ALL
	_PLAYER_NAME 0 //プレイヤー名を反映
	_TALKWIN_OPEN
	_TALKMSG_ALLPUT msg_t01r0102_ball_get_01

	//ME鳴らす
	_ME_PLAY SEQ_ME_POKEGET
	_ME_WAIT

	_AB_KEYWAIT
	_TALKWIN_CLOSE

//ライバルアニメ、サポートに隣接
	_OBJ_ANIME T01R0102_RIVAL,anime_t01r0102_poke_get
	_OBJ_ANIME_WAIT
//サポート、ライバルの台詞
	_TALK_OBJ_PAUSE_ALL
	_TALKWIN_OPEN
	_TALKMSG_ALLPUT msg_t01r0102_white_test02
	_AB_KEYWAIT
	_TALKWIN_CLOSE

	_TALK_OBJ_PAUSE_ALL
	_TALKWIN_OPEN
	_TALKMSG_ALLPUT msg_t01r0102_black_test02
	_AB_KEYWAIT
	_TALKWIN_CLOSE
	
//ボール削除
	_OBJ_DEL T01R0102_BALL1
	_OBJ_DEL T01R0102_BALL2
	_OBJ_DEL T01R0102_BALL3

//ここで画面フェード
	_BLACK_IN DISP_FADE_SPEED
	_DISP_FADE_END_CHECK
/*
	_LDVAL SVSCRWK_START,1
*/

//サポートとポケモン勝負
ev_t01r0102_poke_battle:
//ここでサポート専用曲
	_BGM_PLAY SEQ_E_SUPPORT_M

	_TALK_OBJ_PAUSE_ALL
	_PLAYER_NAME 0 //プレイヤー名を反映
	_TALKWIN_OPEN
	_TALKMSG_ALLPUT msg_t01r0102_white_test03
	_AB_KEYWAIT
	_TALKWIN_CLOSE
//ここで画面フェード
	_BLACK_IN DISP_FADE_SPEED
	_DISP_FADE_END_CHECK
	_TALK_OBJ_PAUSE_ALL
	_TALKWIN_OPEN
	_TALKMSG_ALLPUT msg_t01r0102_white_test04
	_AB_KEYWAIT
	_TALKWIN_CLOSE

//ここでサポート専用曲終了
	_BGM_STOP

//ライバルとポケモン勝負
//ここでライバル専用曲
	_BGM_PLAY SEQ_E_RIVAL1

	_TALK_OBJ_PAUSE_ALL
	_TALKWIN_OPEN
	_TALKMSG_ALLPUT msg_t01r0102_black_test03
	_AB_KEYWAIT
	_TALKWIN_CLOSE
//ここで画面フェード
	_BLACK_IN DISP_FADE_SPEED
	_DISP_FADE_END_CHECK
//ここでライバル専用曲終了
	_BGM_STOP

	_TALK_OBJ_PAUSE_ALL
	_TALKWIN_OPEN
	_TALKMSG_ALLPUT msg_t01r0102_black_test04
	_AB_KEYWAIT
	_TALKWIN_CLOSE
//ライバル退場アニメ
	_OBJ_ANIME T01R0102_RIVAL,anime_t01r0102_byebye1
	_OBJ_ANIME_WAIT
	_SE_PLAY SEQ_SE_KAIDAN
	_SE_WAIT
	_OBJ_DEL T01R0102_RIVAL

	_TALK_OBJ_PAUSE_ALL
	_TALKWIN_OPEN
	_TALKMSG_ALLPUT msg_t01r0102_white_test05
	_AB_KEYWAIT
	_TALKWIN_CLOSE
//サポート退場アニメ＋階段SE
	_OBJ_ANIME T01R0102_HEROINE,anime_t01r0102_byebye2
	_OBJ_ANIME_WAIT
	_SE_PLAY SEQ_SE_KAIDAN
	_SE_WAIT
	_OBJ_DEL T01R0102_HEROINE

	_OBJ_PAUSE_CLEAR_ALL

  _END



  _OBJ_ANIME( SCWK_TARGET_OBJID, anm_heal_p01_bow ) //お辞儀アニメ
  _OBJ_ANIME_WAIT()
  _BALLOONWIN_TALKOBJ_MSG( msg_pc_heal_06 ) //またのご利用を
  _LAST_KEYWAIT()
  _BALLOONWIN_CLOSE()
_RET


  _ANIME_DATA   AC_WALK_R_16F, 1
  _ANIME_DATA   AC_WALK_D_16F, 1
  _ANIME_DATA   ACMD_END,0

_ANIME_LABEL    anm_player_return_strait
  _ANIME_DATA   AC_WALK_D_16F, 4
  _ANIME_DATA   ACMD_END,0


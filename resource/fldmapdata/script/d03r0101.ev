/**************************************************************/
/*		プラズマ団イベント D03R0101イベントスクリプト	  */
/**************************************************************/
EVENT_START		ev_d03r0101_rival_01
_TALK_OBJ_START()

	//共通処理
	_CALL d03r0101_rival_talk
	
	//ライバル：遺跡へダッシュ
	_OBJ_ANIME( D03R0101_RIVAL_01, anm_rival_move )
	_OBJ_ANIME_WAIT()

	//階段ＳＥ
	_SE_PLAY(SEQ_SE_KAIDAN)
	_SE_WAIT()

	//ライバルオブジェ消す
	_OBJ_DEL( D03R0101_RIVAL_01 )

	//========================================/
	
	//ライバルのバニシュフラグセット
	_FLAG_SET( FV_D03R0101_RIVAL_01 )
	
	//D04R0101のストッパー解除
	$WK_SCENE_D04R0101 = 1
	
	//七賢人２のバニシュフラグリセット
	_FLAG_RESET( FV_D04R0201_SAGE2 )
	
	//========================================/

EVENT_END

//共通：作業員分岐会話内容
d03r0101_rival_talk:

	//こだいのしろは　ここから　きたのほう　だってよ
	_BALLOONWIN_OBJMSG( msg_d03r0101_rival_01 , D03R0101_RIVAL_01 )
	_MSGWIN_CLOSE()

	//ライバルを上を向く
	_OBJ_ANIME( D03R0101_RIVAL_01, anm_rival_up )
	_OBJ_ANIME_WAIT()
	
	//……じいさん　さきに　いったからさ　いそぐぜ
	_BALLOONWIN_OBJMSG( msg_d03r0101_rival_02 , D03R0101_RIVAL_01 )
	_MSGWIN_CLOSE()

_RET


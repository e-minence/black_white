/**************************************************************/
/*$WK_SCENE_D05=0 時発動イベント：コンテナにいるよう言われる   */
/**************************************************************/
EVENT_START   ev_pos_d05_rival_01
	
	//プレイヤーネームを格納
	_PLAYER_NAME(0)
	
		{
	//自機座標取得変数定義
	DEFINE_LOCAL  POSX
	DEFINE_LOCAL  POSZ
	
	_PLAYER_POS_GET( POSX,POSZ ) //自機座標取得
	
	//主人公座標に応じてライバル隣接
	SWITCH $POSZ
	CASE 474 THEN
		_OBJ_ANIME( D05_RIVAL_01 , anm_d05_rivalpos_01_z474 )
		_OBJ_ANIME_WAIT()
	CASE 475 THEN
		_OBJ_ANIME( D05_RIVAL_01 , anm_d05_rivalpos_01_z475 )
		_OBJ_ANIME_WAIT()
	CASE 476 THEN
		_OBJ_ANIME( D05_RIVAL_01 , anm_d05_rivalpos_01_z476 )
		_OBJ_ANIME_WAIT()
	DEFAULT  //目の前に立ったケースと同じ処理を行う
		_OBJ_ANIME( D05_RIVAL_01 , anm_d05_rivalpos_01_z475 )
		_OBJ_ANIME_WAIT()
	ENDSWITCH
	
	//ライバルコンテナ内へ
	
	_BALLOONWIN_OBJMSG( msg_d05_black_01 , D05_RIVAL_01 )
	_BALLOONWIN_CLOSE()
	
	//主人公座標に応じてライバル退場
	SWITCH $POSZ
	CASE 474 THEN
		_OBJ_ANIME( D05_RIVAL_01 , anm_d05_rivalpos_02_z474 )
		_OBJ_ANIME_WAIT()
	CASE 475 THEN
		_OBJ_ANIME( D05_RIVAL_01 , anm_d05_rivalpos_02_z475 )
		_OBJ_ANIME_WAIT()
	CASE 476 THEN
		_OBJ_ANIME( D05_RIVAL_01 , anm_d05_rivalpos_02_z476 )
		_OBJ_ANIME_WAIT()
	DEFAULT  //目の前に立ったケースと同じ処理を行う
		_OBJ_ANIME( D05_RIVAL_01 , anm_d05_rivalpos_02_z475 )
		_OBJ_ANIME_WAIT()
	ENDSWITCH
	
	//ライバル一時的に消去
	_OBJ_DEL(D05_RIVAL_01)

	//======================================//	
	
	//ライバルのバニッシュフラグをセット
	_FLAG_SET(FV_D05_RIVAL_01)

	//***フラグ操作・D05／コンテナクリアまで1***
	$WK_SCENE_D05 = 1
	
	//======================================//

	}
EVENT_END


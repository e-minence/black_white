/************************************************************/
/*						ミュージシャン						*/
/************************************************************/
//トレーナーですが、グッズ入手処理があるためスクリプトで制御しています
EVENT_START	ev_r05_musician_01
	_TALK_OBJ_START()
	
	//戦闘済みかで分岐
	IF FLAG_OFF( FE_R05_MUSICIAN_WIN ) THEN
		//戦闘前なら
		
		//びひけっ！おれのメロディー！
		_BALLOONWIN_TALKOBJ_MSG( msg_r05_musician_01a )
		_MSGWIN_CLOSE()
		
		//トレーナー戦呼び出し
		_TRAINER_BTL_SET( TRID_MUSICIAN_01 , 0 )
		//敗戦チェック
		_TRAINER_LOSE_CHECK( SCWK_ANSWER )
		IF $SCWK_ANSWER == SCR_BATTLE_RESULT_WIN THEN
			_TRAINER_WIN()			//勝ち(1)ならトレーナー勝利処理へ
		ELSE
			_TRAINER_LOSE()			//負け(0)ならトレーナー敗北処理へ(ここでスクリプト終了します）
		ENDIF
		
		//勝負をしてわかったよ
		_BALLOONWIN_TALKOBJ_MSG( msg_r05_musician_01 )
		_MSGWIN_CLOSE()
		
		//グッズ入手処理（エレキギター）
		_ADD_MUSICAL_GOODS( 84 )
		
		//文字列を指定タグにセット
		_MUSICAL_WORD_GOODS_NAME( 0, 84 )	//エレキギター
		_PLAYER_NAME( 1 )
		
		//ＭＥ再生
		_ME_PLAY( SEQ_ME_ACCE )
		_SYSWIN_MSG( msg_r05_add_goods_01 , POS_DOWN )
		_ME_WAIT()
		_MSGWIN_CLOSE()
		
		//〜〜は〜〜をグッズケースにしまった
		_SYSWIN_MSG( msg_r05_add_goods_02 , POS_DOWN )
		_LAST_KEYWAIT()
		_MSGWIN_CLOSE()
		
		//========================================//
		//戦闘済みにする
		_FLAG_SET( FE_R05_MUSICIAN_WIN )
		//========================================//
	
	ELSE
		//戦闘済みなら
		
		//グッズのエレキギターを持たせれば…
		_BALLOONWIN_TALKOBJ_MSG( msg_r05_musician_02 )
		_LAST_KEYWAIT()
		_MSGWIN_CLOSE()
		
	ENDIF
	
EVENT_END



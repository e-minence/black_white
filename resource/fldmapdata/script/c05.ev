/**************************************************************/
/*POSイベント：ジムリーダーと会話                             */
/**************************************************************/
EVENT_START   ev_pos_c05_gymleader_01

	//ジムリーダーと会話
	_BALLOONWIN_OBJMSG_OPEN(msg_c05_leader_01,C05_GYMLEADER_01)
	_BALLOONWIN_CLOSE()
	_BALLOONWIN_OBJMSG_OPEN(msg_c05_black_01,C05_RIVAL_01)
	_BALLOONWIN_CLOSE()
	_BALLOONWIN_OBJMSG_OPEN(msg_c05_leader_02,C05_GYMLEADER_01)
	_BALLOONWIN_CLOSE()
	_BALLOONWIN_OBJMSG_OPEN(msg_c05_leader_03,C05_GYMLEADER_01)
	_BALLOONWIN_CLOSE()
	
	//作業員ライバルの前に
	_BALLOONWIN_OBJMSG_OPEN(msg_c05_workman1_01,C05_WORKMAN_01)
	_BALLOONWIN_CLOSE()
	_OBJ_ANIME(C05_WORKMAN_01,anm_c05_workman_01)
	_OBJ_ANIME_WAIT()
	
	//C05イベント（１）のキャラクターを非表示にする
	_FLAG_SET(FV_C05_GYMLEADER_01)
	
	//暗転・マップ移動
	_MAP_CHANGE( ZONE_ID_D05, 164, 474, DIR_DOWN )
	
	//=======================================//
	
	//***フラグ操作：ジムリーダーとの出会いイベント終了***
	$WK_SCENE_C05 = 1
	
	//======================================//

EVENT_END


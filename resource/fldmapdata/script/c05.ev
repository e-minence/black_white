			_TRAINER_BTL_SET( TRID_BADRIDER_01_03, 0 )
		
			//結果チェック
			_TRAINER_LOSE_CHECK( SCWK_ANSWER )
			IF $SCWK_ANSWER == SCR_BATTLE_RESULT_WIN THEN
				_TRAINER_WIN()
			ELSE
				_TRAINER_LOSE()
			ENDIF
			
			_BALLOONWIN_OBJMSG(msg_c05_badrider_08w,C05_BADRIDER_01)
			_LAST_KEYWAIT()
			_BALLOONWIN_CLOSE()
			
			//==================================//
			

		ENDIF
	
	//いいえ
	ELSE
	
		_BALLOONWIN_OBJMSG(msg_c05_badrider_07w,C05_BADRIDER_01)
		_LAST_KEYWAIT()
		_BALLOONWIN_CLOSE()
	
	ENDIF


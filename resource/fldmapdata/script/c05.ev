	_OBJ_ANIME_WAIT()
	
	//サポートOBJ消す
	_OBJ_DEL( MMDL_ID_EVENTOBJ_00 )
	//サポート曲停止
	_END_EVENT_BGM()

	//============フラグワーク操作=============//
	
	//フラグ操作：C05のPOSをすべて無効に
	$WK_SCENE_C05 = 5

	//========================================//
	
	//ハイリンク通信ブロック処理終了
	_ENABLE_NETWORK_IN_IMPORTANT_EVENT()
	}

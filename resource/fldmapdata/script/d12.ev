/**************************************************************/
/*  D12 pilot_01			                      */
/**************************************************************/
EVENT_START   ev_d12_pilot_01
  //もどる？
  _BALLOONWIN_TALKOBJ_MSG(msg_d12_mariner_01)
	_YES_NO_WIN( SCWK_ANSWER )
	_BALLOONWIN_CLOSE()
  IF $SCWK_ANSWER == SCR_YES THEN
      //もでるで
    	_BALLOONWIN_TALKOBJ_MSG(msg_d12_mariner_02)
      _BALLOONWIN_CLOSE()
      //マップジャンプ
      _RAIL_MAP_CHANGE( ZONE_ID_C03P13, 0, 0, 10, DIR_RIGHT )
		ELSE
      //またね
      _BALLOONWIN_TALKOBJ_MSG(msg_d12_mariner_03)
      _LAST_KEYWAIT()
      _BALLOONWIN_CLOSE()
		ENDIF

EVENT_END


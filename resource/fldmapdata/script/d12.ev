  IF $LOCALWORK0 == 0 THEN
    //こわい
    _EASY_BALLOONWIN_TALKOBJ_MSG( msg_d12_visitor02_01 )
  ELSE
  {
    DEFINE_LOCAL sex
    _GET_MY_SEX( sex )
    IF $sex == PM_MALE THEN
      //おにいちゃん　やっつけた
      _EASY_BALLOONWIN_TALKOBJ_MSG( msg_d12_visitor02_02 )
    ELSE
      //おねえちゃん　やっつけた
      _EASY_BALLOONWIN_TALKOBJ_MSG( msg_d12_visitor02_03 )
    ENDIF
  }  
  ENDIF	
EVENT_END


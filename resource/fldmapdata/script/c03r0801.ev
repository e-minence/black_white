  _BALLOONWIN_TALKOBJ_MSG(LWK_NPC_MSG)
  _LAST_KEYWAIT()
	_BALLOONWIN_CLOSE()

  //時間経過（10秒）
  _PL_BOAT_ADD_TIME(10, 1)

  _RET


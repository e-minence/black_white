ev_talkobj_boy1:
	_TALK_OBJ_PAUSE_ALL //動作モデルをポーズします
	_TURN_HERO_SITE //自機の方向へ振り向きます
	_TALKWIN_OPEN //会話ウィンドウを開きます
	_TALKMSG_ALLPUT msg_r01_boy1_01 //会話ウィンドウにmsg_r01_boy1_01を表示します
	_AB_KEYWAIT //ABキー待ちです
	_TALKWIN_CLOSE //会話ウィンドウを閉じます

	_OBJ_ANIME R01BOY1,test01anime
	_OBJ_ANIME_WAIT

	_OBJ_PAUSE_CLEAR_ALL //動作モデルポーズを解除します
	_END //イベントを終了します


ev_talkobj_girl1:

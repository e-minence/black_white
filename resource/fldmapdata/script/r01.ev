/**************************************************************/
/*   R01　ポケモンカウント（ヒロイン）                         */
/**************************************************************/

EVENT_START   ev_pos_r01_pokecount_01

	//プレイヤーネームを格納
	_PLAYER_NAME(0)

//POSイベント、POSごとに主人公移動アニメ
 { //ここからローカル変数の参照制限範囲開始
	DEFINE_LOCAL  POSX   /* ローカル変数定義 */
	DEFINE_LOCAL  POSZ    /* {}で囲う場合は連続して書かなければならない */

	_PLAYER_POS_GET( POSX,POSZ ) //自機座標取得
	SWITCH $POSX
	CASE 788 THEN
		_OBJ_ANIME( MMDL_ID_PLAYER,anm_r01_count_x788 )
		_OBJ_ANIME_WAIT()
	CASE 789 THEN
		_OBJ_ANIME( MMDL_ID_PLAYER,anm_r01_count_x789 )
	_OBJ_ANIME_WAIT()
	CASE 790 THEN  //目の前に立った時
		_OBJ_ANIME( MMDL_ID_PLAYER,anm_r01_count_x790 )
		 _OBJ_ANIME_WAIT()
	CASE 791 THEN
		_OBJ_ANIME( MMDL_ID_PLAYER,anm_r01_count_x791 )
		_OBJ_ANIME_WAIT()
	CASE 792 THEN
		_OBJ_ANIME( MMDL_ID_PLAYER,anm_r01_count_x792 )
		_OBJ_ANIME_WAIT()
	CASE 793 THEN
		_OBJ_ANIME( MMDL_ID_PLAYER,anm_r01_count_x793 )
		_OBJ_ANIME_WAIT()
	DEFAULT  //目の前に立ったケースと同じ処理を行う
		_OBJ_ANIME( MMDL_ID_PLAYER,anm_r01_count_x790 )
		_OBJ_ANIME_WAIT()
	ENDSWITCH
} //ローカル変数の参照制限範囲、ここまで。


//カウント勝負質問
_BALLOONWIN_OBJMSG_POS( msg_r01_white_10,R01_SUPPORT_02 , WIN_DOWN )
_YES_NO_WIN( SCWK_ANSWER )
_BALLOONWIN_CLOSE()

//【仮】捕獲ポケモン数カウント処理未実装：レスにより分岐
IF $SCWK_ANSWER == SCR_YES THEN
	//「はい」

	//ライバル来る
	_OBJ_ANIME( R01_RIVEL_02,anm_r01_count_rival_01 )
	_OBJ_ANIME_WAIT()
	
	//一緒だね
	_BALLOONWIN_OBJMSG_POS(msg_r01_white_13,R01_SUPPORT_02 , WIN_DOWN )
	_BALLOONWIN_CLOSE()
	_BALLOONWIN_OBJMSG_POS(msg_r01_black_11,R01_RIVEL_02 , WIN_DOWN )
	_BALLOONWIN_CLOSE()
	
	//TVトランシーバー起動
	_CALL_TVT_DEMO( 0 )
	_BALLOONWIN_OBJMSG_POS(msg_r01_black_12,R01_RIVEL_02 , WIN_DOWN )
	_BALLOONWIN_CLOSE()
	
	//サポート・ライバル退場
	_OBJ_ANIME( R01_RIVEL_02,anm_r01_count_rival_02 )
	_OBJ_ANIME( R01_SUPPORT_02,anm_r01_count_rival_02 )
	_OBJ_ANIME_WAIT()
	
	_OBJ_DEL( R01_RIVEL_02 )
	_OBJ_DEL( R01_SUPPORT_02 )

	//==================================//

	//サポート＆ライバルを非表示
	_FLAG_SET( FV_R01_POKECOUNT_BTL )

	//R01の全てのPOSを無効に
	$WK_SCENE_R01 = 2

	//==================================//
	
ELSE
  //「いいえ」
	_BALLOONWIN_OBJMSG_POS(msg_r01_white_11,R01_SUPPORT_02 , WIN_DOWN )
	_BALLOONWIN_CLOSE()
	_OBJ_ANIME( MMDL_ID_PLAYER,anm_r01_count_no )
	_OBJ_ANIME_WAIT()
ENDIF

EVENT_END


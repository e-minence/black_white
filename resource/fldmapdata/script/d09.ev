/************************************************************/
EVENT_START	ev_d09_trainerm_01
	_TALK_START_TURN_NOT()
	
	//若手：ジタバタ
	_OBJ_ANIME( D09_TRAINERM_01, anm_trainerm_move_01 )
	_OBJ_ANIME_WAIT()
	
	_GIZAWIN_OBJMSG_POS( msg_d09_trainerm_01, D09_TRAINERM_01, POS_DEFAULT )
	_LAST_KEYWAIT()
	_MSGWIN_CLOSE()
EVENT_END



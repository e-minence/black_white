/**************************************************************/
/*		カセキ入手イベント									  */
/**************************************************************/
EVENT_START		ev_d04r0201_backpackerw_01
_TALK_OBJ_START()

	 DEFINE_LOCAL  LWK_KASEKI

	//カセキ入手済みの場合
	IF FLAG_ON( FE_D04R0201_KASEKIGET ) THEN

		//シッポウシティの　はくぶつかん
		_BALLOONWIN_TALKOBJ_MSG( msg_d04r0201_backpackerw_06 )
		_BALLOONWIN_CLOSE()
	
	//カセキ入手前の場合
	ELSE

		//初めて話しかけている場合
		IF FLAG_OFF( FE_D04R0201_KASEKITALK ) THEN

			//メニュー作成
			_BMPMENU_INIT_EX( 1, 1, 0, 0, LWK_KASEKI )
			//リスト追加
			_BMPMENU_MAKE_LIST( msg_d04r0201_kaseki_01, 0 )
			_BMPMENU_MAKE_LIST( msg_d04r0201_kaseki_02, 1 )
			_BMPMENU_MAKE_LIST( msg_d04r0201_kaseki_03, 2 )
	
			//ここって　ステキだよね！　だって
			_BALLOONWIN_TALKOBJ_MSG( msg_d04r0201_backpackerw_01 )
		
			//メニュー表示
			_BMPMENU_START()
			_BALLOONWIN_CLOSE()

			//カセキその１の場合
			IF $LWK_KASEKI == 0 THEN

				//カセキその１　なんだ
				_BALLOONWIN_TALKOBJ_MSG( msg_d04r0201_backpackerw_02 )
				_BALLOONWIN_CLOSE()
			
				//【仮】カセキその１入手処理

				//========================================//
				
				//カセキ受取フラグセット
				_FLAG_SET( FE_D04R0201_KASEKIGET )
				
				//========================================//

			//カセキその２の場合
			ELSIF $LWK_KASEKI == 1 THEN

				//カセキその２　なんだ
				_BALLOONWIN_TALKOBJ_MSG( msg_d04r0201_backpackerw_03 )
				_BALLOONWIN_CLOSE()
			
				//【仮】カセキその２入手処理

				//========================================//
				
				//カセキ受取フラグセット
				_FLAG_SET( FE_D04R0201_KASEKIGET )
			
				//========================================//

			//やめるの場合
			ELSE
			
				//あれれ……　えんりょ　しなくて　いいのに
				_BALLOONWIN_TALKOBJ_MSG( msg_d04r0201_backpackerw_04 )
				_BALLOONWIN_CLOSE()
			
				//========================================//
				
				//会話フラグセット
				_FLAG_SET( FE_D04R0201_KASEKITALK )
			
				//========================================//
			
			ENDIF
	
		//既に話しかけている場合
		ELSE

			//メニュー作成
			_BMPMENU_INIT_EX( 1, 1, 0, 0, LWK_KASEKI )
			//リスト追加
			_BMPMENU_MAKE_LIST( msg_d04r0201_kaseki_01, 0 )
			_BMPMENU_MAKE_LIST( msg_d04r0201_kaseki_02, 1 )
			_BMPMENU_MAKE_LIST( msg_d04r0201_kaseki_03, 2 )

			//やっぱり　カセキが　きになる？
			_BALLOONWIN_TALKOBJ_MSG( msg_d04r0201_backpackerw_05 )
		
			//メニュー表示
			_BMPMENU_START()
			_BALLOONWIN_CLOSE()

			//カセキその１の場合
			IF $LWK_KASEKI == 0 THEN

				//カセキその１　なんだ
				_BALLOONWIN_TALKOBJ_MSG( msg_d04r0201_backpackerw_02 )
				_BALLOONWIN_CLOSE()
			
				//【仮】カセキその１入手処理

				//========================================//
				
				//カセキ受取フラグセット
				_FLAG_SET( FE_D04R0201_KASEKIGET )
				
				//========================================//

			//カセキその２の場合
			ELSIF $LWK_KASEKI == 1 THEN

				//カセキその２　なんだ
				_BALLOONWIN_TALKOBJ_MSG( msg_d04r0201_backpackerw_03 )
				_BALLOONWIN_CLOSE()
			
				//【仮】カセキその２入手処理

				//========================================//
				
				//カセキ受取フラグセット
				_FLAG_SET( FE_D04R0201_KASEKIGET )
			
				//========================================//

			//やめるの場合
			ELSE
			
				//あれれ……　えんりょ　しなくて　いいのに
				_BALLOONWIN_TALKOBJ_MSG( msg_d04r0201_backpackerw_04 )
				_BALLOONWIN_CLOSE()
			
				//========================================//
				
				//会話フラグセット
				_FLAG_SET( FE_D04R0201_KASEKITALK )
			
				//========================================//
			
			ENDIF

		ENDIF

	ENDIF

EVENT_END

//======================================================================
// ■挨拶隊員メイン
//======================================================================
EVENT_START ev_member_hello 
{
  //「こんにちは！」
  _TALK_OBJ_START()
  _BALLOONWIN_OBJMSG_POS( msg_c03r0101_boy2_01, SCWK_TARGET_OBJID, POS_DL )
  _BALLOONWIN_CLOSE() 

  // 初回会話チェック
  _FLAG_CHECK( FE_RES_HELLO_FIRSTTALK, SCWK_ANSWER )

  // 初回会話
  IF $SCWK_ANSWER == FALSE THEN 
    _FLAG_SET( FE_RES_HELLO_FIRSTTALK ) // 初回会話フラグを立てる
    //「君の好きな挨拶を教えて？」
    _TALK_OBJ_START()
    _BALLOONWIN_OBJMSG_POS( msg_c03r0101_boy2_02, SCWK_TARGET_OBJID, POS_DL )
  // 通常会話
  ELSE 
    //「また君の好きな挨拶を教えて？」
    _TALK_OBJ_START()
    _BALLOONWIN_OBJMSG_POS( msg_c03r0101_boy2_03, SCWK_TARGET_OBJID, POS_DL )
  ENDIF

  //『はい』or『いいえ』選択
  _YES_NO_WIN( SCWK_ANSWER )
  _BALLOONWIN_CLOSE()

  //『いいえ』
  IF $SCWK_ANSWER == SCR_NO THEN
    //「それじゃ また今度ね」
    _TALK_OBJ_START()
    _BALLOONWIN_OBJMSG_POS( msg_c03r0101_boy2_04, SCWK_TARGET_OBJID, POS_DL )
    _BALLOONWIN_CLOSE() 
    EVENT_END
  ENDIF

  // フリーワード入力画面を呼ぶ
  _CALL_CROSS_COMM_HELLO_MSG_INPUT( SCWK_ANSWER ) 

  // 入力を確定
  IF $SCWK_ANSWER == TRUE THEN
    //「うん！いい挨拶だね！」
    _TALK_OBJ_START()
    _BALLOONWIN_OBJMSG_POS( msg_c03r0101_boy2_05, SCWK_TARGET_OBJID, POS_DL )
    _BALLOONWIN_CLOSE() 
  // 入力をキャンセル
  ELSE
    //「それじゃ また今度ね」
    _TALK_OBJ_START()
    _BALLOONWIN_OBJMSG_POS( msg_c03r0101_boy2_04, SCWK_TARGET_OBJID, POS_DL )
    _BALLOONWIN_CLOSE() 
  ENDIF 
}
EVENT_END 




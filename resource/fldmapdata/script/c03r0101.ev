  // 調査中の依頼IDを取得
  _GET_RESEARCH_REQUEST_ID( v1_1 )

  IF $v1_1 == RESEARCH_REQ_ID_NONE THEN
    $SCWK_ANSWER = FALSE // 受けていない
  ELSE
    $SCWK_ANSWER = TRUE // 受けている
  ENDIF
}
_RET


  _FLAG_CHECK( FE_RES_QUESTION_POKEMON, SCWK_TEMP0 )
  IF $SCWK_TEMP0 == FALSE THEN
    _ASM_ADD_WK v1_1, 1
  ENDIF

  // 未回答アンケートの数を返す
  $SCWK_ANSWER = $v1_1

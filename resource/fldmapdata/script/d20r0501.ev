//		アニメ
//--------------------------------------------------------------------
_ANIME_LABEL	anm_left_move
	_ANIME_DATA	AC_WALK_L_8F,3
	_ANIME_DATA	ACMD_END,0
	
/**************************************************************/
/*		D20R0501	上昇POS									  */
/**************************************************************/
EVENT_START		ev_pos_d20r0501_exit_01

	_SYSWIN_MSG( msg_d20r0501_sys_02 , POS_DOWN )
	_YES_NO_WIN( SCWK_ANSWER )
	_SYSWIN_CLOSE()

	IF $SCWK_ANSWER == SCR_YES THEN
		
		//浮上アニメ
		_PLAYER_UPDOWN_EFFECT( 0, 40, 64, 1 )
		
		_TIME_WAIT( 30 )
		
		//暗転処理
		_BLACK_OUT()
		_DISP_FADE_END_CHECK()
		
		//マップチェンジ
		_MAP_CHANGE( ZONE_ID_D20R0601, 29, 32, DIR_DOWN )
	
	ELSE
	
		DEFINE_LOCAL	LWK_DIR
		_PLAYER_DIR_GET( LWK_DIR )
		
		SWITCH $LWK_DIR
		CASE DIR_UP THEN
			_OBJ_ANIME( MMDL_ID_PLAYER, anm_up_back )
			_OBJ_ANIME_WAIT()
		CASE DIR_DOWN THEN
			_OBJ_ANIME( MMDL_ID_PLAYER, anm_down_back )
			_OBJ_ANIME_WAIT()
		CASE DIR_LEFT THEN
			_OBJ_ANIME( MMDL_ID_PLAYER, anm_left_back )
			_OBJ_ANIME_WAIT()
		CASE DIR_RIGHT THEN
			_OBJ_ANIME( MMDL_ID_PLAYER, anm_right_back )
			_OBJ_ANIME_WAIT()
		ENDSWITCH
		
	ENDIF
	
EVENT_END


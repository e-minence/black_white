/*						サポート母							*/
/************************************************************/
EVENT_START   ev_t01r0201_middlewoman1_01
	_TALK_OBJ_START()

	IF FLAG_ON( SYS_FLAG_GAME_CLEAR ) THEN
		//クリア後なら
		_BALLOONWIN_TALKOBJ_MSG( msg_t01r0201_middlewoman1_03 )
	
	ELSE
		//クリア前なら
		_BALLOONWIN_TALKOBJ_MSG( msg_t01r0201_middlewoman1_02 )

	ENDIF

	_LAST_KEYWAIT()
	_BALLOONWIN_CLOSE()

EVENT_END



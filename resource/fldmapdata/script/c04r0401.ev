	//バスケなら
	IF $WK_OTHER_SPORTS_EVENT == SPORTS_EVENT_BASKETBALL THEN
		_MAP_CHANGE_WARP( ZONE_ID_C04R0404, 6, 25, DIR_UP )

	//テニスなら
	ELSE
		_MAP_CHANGE_WARP( ZONE_ID_C04R0403, 6, 25, DIR_UP )

	ENDIF

EVENT_END



/**************************************************************/
/*   【仮】WhiteForest                                        */
/**************************************************************/
ev_wf_npc:
	// WFBC　会話前処理
	_WFBC_TALKSTART()
	_TALK_OBJ_START()
	
	//BCからの移民かどうかチェック
	DEFINE_LOCAL LWK_EMIG
	_WFBC_GET_DATA( WFBC_GET_PARAM_IS_RIREKI, LWK_EMIG )
	
	//OBJIDを取得
	DEFINE_LOCAL LWK_OBJ_ID
	_WFBC_GET_DATA( WFBC_GET_PARAM_MMDL_ID, LWK_OBJ_ID )
	
	//機嫌値を取得
	DEFINE_LOCAL LWK_MOOD
	/*_WFBC_GET_DATA( WFBC_GET_PARAM_BATTLE_TRAINER_ID, LWK_MOOD ) 修正*/
	_WFBC_GET_DATA( WFBC_GET_PARAM_IS_TAKES_ID, LWK_MOOD )
	
	//移民判別メッセージ定義
	DEFINE_LOCAL LWK_EMIG_MSG
	$LWK_EMIG_MSG = $LWK_OBJ_ID
	
	//機嫌判別メッセージ定義
	DEFINE_LOCAL LWK_MOOD_MSG
	
	//移民ではない場合
	/*IF FLAG_OFF( LWK_EMIG ) THEN 修正*/
	IF $LWK_EMIG == 0 THEN

		_WFBC_GET_AUTO_NPC_MESSAGE( LWK_EMIG_MSG , 2 )
		_BALLOONWIN_OBJMSG( LWK_EMIG_MSG , LWK_OBJ_ID )
		_BALLOONWIN_CLOSE()
	
	//移民である場合
	ELSE
		_WFBC_GET_AUTO_NPC_MESSAGE( LWK_EMIG_MSG , 1 )
		_BALLOONWIN_OBJMSG( LWK_EMIG_MSG , LWK_OBJ_ID )
		_BALLOONWIN_CLOSE()
	
	ENDIF
	
	//WFを気に入っている
	/*IF FLAG_OFF( LWK_MOOD ) THEN 修正*/
	IF $LWK_MOOD == 1 THEN
		_WFBC_GET_AUTO_NPC_MESSAGE( LWK_MOOD_MSG , 4 )
		/*_BALLOONWIN_OBJMSG( LWK_EMIG_MSG , LWK_OBJ_ID ) 修正*/
		_BALLOONWIN_OBJMSG( LWK_MOOD_MSG, LWK_OBJ_ID )
		_LAST_KEYWAIT()
		_BALLOONWIN_CLOSE()
	
	//BCに行きたがっている
	ELSE
		_WFBC_GET_AUTO_NPC_MESSAGE( LWK_MOOD_MSG , 3 )
		/*_BALLOONWIN_OBJMSG( LWK_EMIG_MSG , LWK_OBJ_ID ) 修正*/
		_BALLOONWIN_OBJMSG( LWK_MOOD_MSG, LWK_OBJ_ID )
		_LAST_KEYWAIT()
		_BALLOONWIN_CLOSE()
	
	ENDIF

	// WFBC　会話後処理
	_WFBC_TALKEND()
_END


/**************************************************************/
/*            フィールド初期化スクリプト                      */
/**************************************************************/
INIT_EVENT_START ev_zone_wc10
	
	//人口に応じてOBJを配置

	//2人以上の表示OBJを全て非表示に
	_FLAG_SET( FV_WF10_B )
	_FLAG_SET( FV_WF10_C )
	_FLAG_SET( FV_WF10_D )
	_FLAG_SET( FV_WF10_E )
	
	//現在のBCの人口を取得
	DEFINE_LOCAL LWK_POPULATION
	_WFBC_GET_DATA( WFBC_GET_PARAM_PEOPLE_NUM, LWK_POPULATION )
	
	
	//人口がE層以上の処理
	IF $LWK_POPULATION >= 8 THEN
		
		_FLAG_RESET( FV_WF10_B )
		_FLAG_RESET( FV_WF10_C )
		_FLAG_RESET( FV_WF10_D )
		_FLAG_RESET( FV_WF10_E )
	
	//人口がD層以上の処理
	ELSIF $LWK_POPULATION >= 6 THEN
		
		_FLAG_RESET( FV_WF10_B )
		_FLAG_RESET( FV_WF10_C )
		_FLAG_RESET( FV_WF10_D )
	
	//人口がC層以上の処理
	ELSIF $LWK_POPULATION >= 4 THEN
		
		_FLAG_RESET( FV_WF10_B )
		_FLAG_RESET( FV_WF10_C )
	
	//人口がB層以上の処理
	ELSIF $LWK_POPULATION >= 2 THEN
		
		_FLAG_RESET( FV_WF10_B )
	
	ELSE
	
	ENDIF
		
	
INIT_EVENT_END


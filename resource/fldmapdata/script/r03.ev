	_PLAYER_POS_GET( SCWK_TEMP0, SCWK_TEMP1 )
	IF $SCWK_TEMP1 == 562 THEN
		_OBJ_ANIME( MMDL_ID_PLAYER, anm_egg_player_move_01a )
	ELSIF $SCWK_TEMP1 == 563 THEN

/**************************************************************/
/*  R03 POSで友達とバトル、プラズマ団と出会う*/
/**************************************************************/
EVENT_START   ev_pos_r03_rival_01

	//オブジェクトを出現させる
	_FLAG_RESET(FV_R03_RIVAL_01)
	_FLAG_RESET(FV_R03_SUPPORT_01)
	_OBJ_ADD(R03_RIVAL_01)
	_OBJ_ADD(R03_SUPPORT_01)
	_OBJ_ADD(R03_BABYGIRL_02)
	_OBJ_ADD(R03_HAKAIM_01)
	_OBJ_ADD(R03_HAKAIM_02)
	
	//ライバル曲再生
	_START_TEMP_EVENT_BGM( SEQ_BGM_E_RIVAL )
	
	//オブジェクト駆け寄る
	_OBJ_ANIME(R03_RIVAL_01,anm_rival_01)
	_OBJ_ANIME_WAIT()
	
	_OBJ_ANIME(MMDL_ID_PLAYER,anm_player_00)
	_OBJ_ANIME_WAIT()
	
	//プレイヤーネームを格納
	_PLAYER_NAME(0)
	
	//会話スタート
	_BALLOONWIN_OBJMSG(msg_r03_black_01,R03_RIVAL_01)
	_BALLOONWIN_CLOSE()
	
	{
	//自機座標取得
	DEFINE_LOCAL  LCW_POSX
    DEFINE_LOCAL  LCW_POSZ
    _PLAYER_POS_GET( LCW_POSX,LCW_POSZ ) 
    
    //プレイヤーが通る4グリッド分を用意
    SWITCH $LCW_POSZ
	CASE 561 THEN
	_OBJ_ANIME( MMDL_ID_PLAYER, anm_player_00_z561 )
	_OBJ_ANIME_WAIT()
	
	CASE 562 THEN
	_OBJ_ANIME( MMDL_ID_PLAYER, anm_player_00_z562 )
	_OBJ_ANIME_WAIT()
	
	CASE 563 THEN
	_OBJ_ANIME( MMDL_ID_PLAYER, anm_player_00_z563 )
	_OBJ_ANIME_WAIT()
	
	CASE 564 THEN
	_OBJ_ANIME( MMDL_ID_PLAYER, anm_player_00_z564 )
	_OBJ_ANIME_WAIT()
	
	CASE 565 THEN
	_OBJ_ANIME( MMDL_ID_PLAYER, anm_player_00_z565 )
	_OBJ_ANIME_WAIT()
	
    DEFAULT
    _OBJ_ANIME( MMDL_ID_PLAYER, anm_player_00_z563 )
	_OBJ_ANIME_WAIT()
	
    ENDSWITCH
    
    }
	
	//ライバル隣接
	_OBJ_ANIME(R03_RIVAL_01,anm_rival_01_02)
	_OBJ_ANIME_WAIT()
	
	//ライバルと戦闘（持ちタイプで分岐）
	
	IF $WK_SYS_FIRST_POKETYPE == FIRST_POKETYPE_KUSA THEN
		//最初の３匹で草タイプを選択した時の処理
		_TRAINER_BTL_SET( TRID_RIVAL_04, 0 )
		//結果チェック
		_TRAINER_LOSE_CHECK( SCWK_ANSWER )
		IF $SCWK_ANSWER == SCR_BATTLE_RESULT_WIN THEN
			_TRAINER_WIN()
		ELSE
			//======================================//
			//R03OBJ配置初期化
			_FLAG_SET(FV_R03_RIVAL_01)
			_FLAG_SET(FV_R03_SUPPORT_01)
			//======================================//
			_TRAINER_LOSE()
		ENDIF

	ELSIF $WK_SYS_FIRST_POKETYPE == FIRST_POKETYPE_HONOO THEN	
		//最初の３匹で炎タイプを選択した時の処理
		_TRAINER_BTL_SET( TRID_RIVAL_05, 0 )
		//結果チェック
		_TRAINER_LOSE_CHECK( SCWK_ANSWER )
		IF $SCWK_ANSWER == SCR_BATTLE_RESULT_WIN THEN
			_TRAINER_WIN()
		ELSE
			//======================================//
			//R03OBJ配置初期化
			_FLAG_SET(FV_R03_RIVAL_01)
			_FLAG_SET(FV_R03_SUPPORT_01)
			//======================================//
			_TRAINER_LOSE()
		ENDIF
		
	ELSE
		//最初の３匹で水タイプを選択した時の処理
		_TRAINER_BTL_SET( TRID_RIVAL_06, 0 )
		//結果チェック
		_TRAINER_LOSE_CHECK( SCWK_ANSWER )
		IF $SCWK_ANSWER == SCR_BATTLE_RESULT_WIN THEN
			_TRAINER_WIN()
		ELSE
			//======================================//
			//R03OBJ配置初期化
			_FLAG_SET(FV_R03_RIVAL_01)
			_FLAG_SET(FV_R03_SUPPORT_01)
			//======================================//
			_TRAINER_LOSE()
		ENDIF
		
	ENDIF
	
	//戦闘後会話
	_BALLOONWIN_OBJMSG_POS(msg_r03_black_02,R03_RIVAL_01, POS_UR )
	_BALLOONWIN_CLOSE()
	
	//どけどけー！
	_PLAINWIN_MSG_DOWN( msg_r03_hakaim_01 )
	_MSGWIN_CLOSE()
	
	//トラブル曲再生
	_START_EVENT_BGM( SEQ_BGM_E_TROUBLE )
	
	//プラズマ団駆け抜けてゆく
	_OBJ_ANIME( R03_HAKAIM_01 , anm_hakai_dash_01 )
	_OBJ_ANIME( R03_HAKAIM_02, anm_hakai_dash_01 )

	
	//主人公よける
	_OBJ_ANIME( R03_RIVAL_01 , anm_hakai_bikkuri_rival )
	_OBJ_ANIME( MMDL_ID_PLAYER, anm_hakai_bikkuri_player )
	_OBJ_ANIME_WAIT()
	
	//プラズマ団OBJ消去
	_OBJ_DEL(R03_HAKAIM_01)
	_OBJ_DEL(R03_HAKAIM_02)
	
	//ライバル画面左を見る
	_OBJ_ANIME( R03_RIVAL_01 , anm_rival_01_03 )
	_OBJ_ANIME( MMDL_ID_PLAYER , anm_player_return )
	_OBJ_ANIME_WAIT()
	_BALLOONWIN_OBJMSG_POS( msg_r03_black_03 , R03_RIVAL_01 , POS_DL )
	_BALLOONWIN_CLOSE()
	
	//右を見てサポートに気づく
	_OBJ_ANIME( R03_RIVAL_01 , anm_rival_01_stop_right )
	_OBJ_ANIME( MMDL_ID_PLAYER , anm_rival_01_stop_right )
	_OBJ_ANIME_WAIT()
	_BALLOONWIN_OBJMSG_POS( msg_r03_black_04 , R03_RIVAL_01 , POS_DL )
	_BALLOONWIN_CLOSE()
	
	_OBJ_ANIME( R03_SUPPORT_01 , anm_support_01 )
	_OBJ_ANIME( R03_BABYGIRL_02 , anm_babygirl_01 )
	_OBJ_ANIME_WAIT()
	
	//サポート到着
	_BALLOONWIN_OBJMSG_POS( msg_r03_white_01 , R03_SUPPORT_01 , POS_UR )
	_BALLOONWIN_CLOSE()
	
	//ライバルサポートにつっこむ
	_OBJ_ANIME( R03_RIVAL_01 , anm_rival_01_04 )
	_OBJ_ANIME_WAIT()
	_BALLOONWIN_OBJMSG_POS( msg_r03_black_05 , R03_RIVAL_01 , POS_DL )
	_BALLOONWIN_CLOSE()
	_OBJ_ANIME( R03_RIVAL_01 , anm_rival_01_05)
	_OBJ_ANIME_WAIT()
	_BALLOONWIN_OBJMSG_POS( msg_r03_black_06 , R03_RIVAL_01 , POS_DL )
	_BALLOONWIN_CLOSE()
	
	//なんて逃げ足が早いの！サポート足踏み
	_OBJ_ANIME( R03_SUPPORT_01 , anm_support_01_step )
	_OBJ_ANIME_WAIT()
	_BALLOONWIN_OBJMSG_POS( msg_r03_white_02 , R03_SUPPORT_01 , POS_UR )
	_BALLOONWIN_CLOSE()
	
	//サポートとBABYGIRL向き合って会話
	_OBJ_ANIME( R03_BABYGIRL_02 , anm_babygirl_02 )
	_OBJ_ANIME_WAIT()
	_BALLOONWIN_OBJMSG_POS( msg_r03_babygirl1_01 , R03_BABYGIRL_02 , POS_DR )
	_BALLOONWIN_CLOSE()
	_OBJ_ANIME( R03_SUPPORT_01 , anm_support_02 )
	_OBJ_ANIME_WAIT()
	_BALLOONWIN_OBJMSG_POS( msg_r03_white_03 , R03_SUPPORT_01 , POS_UR )
	_BALLOONWIN_CLOSE()
	
	//ライバルつっこむ
	_OBJ_ANIME( R03_RIVAL_01 , anm_rival_01_06 )
	_OBJ_ANIME_WAIT()
	_BALLOONWIN_OBJMSG_POS( msg_r03_black_07 , R03_RIVAL_01 , POS_DL )
	_BALLOONWIN_CLOSE()
	_OBJ_ANIME( R03_SUPPORT_01 , anm_support_03 )
	_OBJ_ANIME_WAIT()
	_BALLOONWIN_OBJMSG_POS( msg_r03_white_04 , R03_SUPPORT_01 , POS_UR )
	_BALLOONWIN_CLOSE()
	
	//ライバル：はやくいいなよ！
	_BALLOONWIN_OBJMSG_POS( msg_r03_black_08 , R03_RIVAL_01 , POS_DL )
	_BALLOONWIN_CLOSE()
	
	//主人公とチェレン向き合う
	_OBJ_ANIME( R03_RIVAL_01 , anm_rival_01_06_up )
	_OBJ_ANIME( MMDL_ID_PLAYER , anm_player_look_down )
	_OBJ_ANIME_WAIT()
	
	//主人公！ ポケモンを取り戻そう
	_BALLOONWIN_OBJMSG_POS( msg_r03_black_08_01 , R03_RIVAL_01 , POS_DL )
	_BALLOONWIN_CLOSE()
	
	//ライバル洞窟方面へ
	_OBJ_ANIME( MMDL_ID_PLAYER , anm_rival_01_04 )
	_OBJ_ANIME( R03_RIVAL_01 , anm_rival_go01 )
	_OBJ_ANIME_WAIT()
	
	//トラブル曲停止
	_END_EVENT_BGM()
	
	
	//======================================//
	
	//プラズマ団とRIVAL01のフラグをSETして以降非表示に
	_FLAG_SET(FV_R03_RIVAL_01)
	_OBJ_DEL(R03_RIVAL_01)
	
	//洞窟前のRIVALを表示
	//_FLAG_SET(FV_R03_RIVAL_03)
	
	//夢の跡地のSUPPORTを非表示
	_FLAG_SET(FV_D01R0101_SUPPORT_01)
	
	//***フラグ操作：ストッパーを有効にする***
	$WK_SCENE_R03_PLASMA = 1
	
	//======================================//
	
EVENT_END

/**************************************************************/
/*  R03 POSでsupportストッパー*/
/**************************************************************/
EVENT_START   ev_pos_r03_support_01
	{
	
	//プレイヤーネームを格納
	_PLAYER_NAME(0)
	
	//自機座標取得
	DEFINE_LOCAL  LCW_POSX
    DEFINE_LOCAL  LCW_POSZ
    _PLAYER_POS_GET( LCW_POSX,LCW_POSZ ) 
    
	//プレイヤーが通る3グリッド分を用意
	SWITCH $LCW_POSX
	CASE 715 THEN
	_OBJ_ANIME( R03_SUPPORT_01 , anm_support_stop_x715 )

/************************************************************/
/*					ZONE_CHANGE_LABEL						*/
/************************************************************/
INIT_EVENT_START	ev_zone_r03

{
	//バージョンを取得してOBJを変化させる
	_GET_ROM_VERSION( SCWK_ANSWER )
	
	//BlackVERならモンメン
	IF $SCWK_ANSWER == VERSION_BLACK THEN
		$OBJCHRWORK0 = POKE24
	//Whiteならチュリネ
	ELSE
		$OBJCHRWORK0 = POKE18
	ENDIF
}

	//誘拐イベントワークの値によってサポートの位置を変更する
	
	//クリア時
	IF $WK_SCENE_R03_PLASMA == 4 THEN
		_SXY_MOVE_NPC_POS( R03_SUPPORT_01, DIR_RIGHT, 715, 0, 566 )
		_SXY_MOVE_NPC_POS( R03_BABYGIRL_02,DIR_LEFT, 717, 0, 566 )
	
	//初期状態
	ELSIF $WK_SCENE_R03_PLASMA == 0 THEN
		
	//発生後
	ELSIF $WK_SCENE_R03_PLASMA < 4 THEN
		_SXY_MOVE_NPC_POS( R03_SUPPORT_01,DIR_LEFT, 720, 0, 563  )
		_SXY_MOVE_NPC_POS( R03_BABYGIRL_02,DIR_UP, 720, 0, 564  )
	ELSE
	
	ENDIF
	
INIT_EVENT_END

/**************************************************************/
/*  R03 POSでふたごちゃんストッパー*/
/**************************************************************/
EVENT_START   ev_pos_r03_futago_01
	
	//手持ちポケモンカウント
	DEFINE_LOCAL LCW_POKECOUNT
	_GET_PARTY_POKE_COUNT( LCW_POKECOUNT , POKECOUNT_MODE_BATTLE_ENABLE )
	
	//戦えるポケモンが１匹しかいない
	IF $LCW_POKECOUNT < 2 THEN
	
		_OBJ_ANIME(R03_FUTAGO_01,anm_babygirl1_stop_01)
		_OBJ_ANIME_WAIT()
		
		_OBJ_ANIME(MMDL_ID_PLAYER,anm_stoper_player_look_up)
		_OBJ_ANIME_WAIT()
		
		_BALLOONWIN_OBJMSG(msg_r03_futago_02,R03_FUTAGO_01)
		_BALLOONWIN_CLOSE()
		
		_OBJ_ANIME(MMDL_ID_PLAYER,anm_stoper_player_return01)
		_OBJ_ANIME_WAIT()
	
	ELSE
		//「！」
		_OBJ_ANIME( R03_FUTAGO_01, anm_babygirl1_trainer_gyoe )
		_OBJ_ANIME( R03_FUTAGO_01_2, anm_babygirl1_trainer_gyoe )
		_OBJ_ANIME_WAIT()
		
		//視線！ふたごちゃん
		_TRAINER_BGM_SET( TRID_FUTAGO_01 )
		
		{
		//主人公の座標を見て移動
		DEFINE_LOCAL  LCW_POSX
	    DEFINE_LOCAL  LCW_POSZ
	    _PLAYER_POS_GET( LCW_POSX,LCW_POSZ ) 
	    
	    //プレイヤーが通る4グリッド分を用意
	    SWITCH $LCW_POSZ
		CASE 563 THEN
		_OBJ_ANIME( R03_FUTAGO_01, anm_babygirl1_trainer_down_z563 )
		_OBJ_ANIME( R03_FUTAGO_01_2, anm_babygirl1_trainer_down_z563 )
		_OBJ_ANIME(MMDL_ID_PLAYER,anm_stoper_player_look_up)
		_OBJ_ANIME_WAIT()
		
		CASE 564 THEN
		_OBJ_ANIME( R03_FUTAGO_01, anm_babygirl1_trainer_down_z564 )
		_OBJ_ANIME( R03_FUTAGO_01_2, anm_babygirl1_trainer_down_z564 )
		_OBJ_ANIME(MMDL_ID_PLAYER,anm_stoper_player_look_up)
		_OBJ_ANIME_WAIT()
		
		CASE 565 THEN
		_OBJ_ANIME( R03_FUTAGO_01, anm_babygirl1_trainer_down_z565 )
		_OBJ_ANIME( R03_FUTAGO_01_2, anm_babygirl1_trainer_down_z565 )
		_OBJ_ANIME(MMDL_ID_PLAYER,anm_stoper_player_look_up)
		_OBJ_ANIME_WAIT()
		
	    DEFAULT //正面に立った時と同じ処理
	    _OBJ_ANIME( R03_FUTAGO_01, anm_babygirl1_trainer_down_z563 )
		_OBJ_ANIME( R03_FUTAGO_01_2, anm_babygirl1_trainer_down_z563 )
		_OBJ_ANIME(MMDL_ID_PLAYER,anm_stoper_player_look_up)
		_OBJ_ANIME_WAIT()
		
	    ENDSWITCH
		}
		
		//戦闘処理呼び出し
		_CALL ev_r03_futago_batlle
	
	ENDIF

EVENT_END

/**************************************************************/
/*  R03 ふたごちゃん話しかけ（右）*/
/**************************************************************/
EVENT_START   ev_r03_futago_02
	
	//手持ちポケモンカウント
	DEFINE_LOCAL LCW_POKECOUNT02
	_GET_PARTY_POKE_COUNT( LCW_POKECOUNT02 , POKECOUNT_MODE_BATTLE_ENABLE )
	
	//既に戦闘した
	IF $WK_SCENE_R03 == 1 THEN
		//負け台詞
		_EASY_BALLOONWIN_TALKOBJ_MSG( msg_r03_futago_04 )
	
	//戦えるポケモンが１匹しかいない
	ELSIF $LCW_POKECOUNT02 < 2 THEN
		
		_TALK_OBJ_START()
			
		_OBJ_ANIME(R03_FUTAGO_01,anm_babygirl1_stop_01)
		_OBJ_ANIME_WAIT()
		
		_BALLOONWIN_OBJMSG(msg_r03_futago_02,R03_FUTAGO_01)
		_BALLOONWIN_CLOSE()
		
		_OBJ_ANIME(MMDL_ID_PLAYER,anm_stoper_player_return01)
		_OBJ_ANIME_WAIT()
	
	//ポケモンが２匹以上で戦闘もしていない
	ELSE
		_TALK_OBJ_START()
		
		//ふたごちゃん（左）が右を向く
		_OBJ_ANIME( R03_FUTAGO_01_2, anm_babygirl1_trainer_to_right )
		_OBJ_ANIME_WAIT()
		
		//「！」
		_OBJ_ANIME( R03_FUTAGO_01, anm_babygirl1_trainer_gyoe )
		_OBJ_ANIME( R03_FUTAGO_01_2, anm_babygirl1_trainer_gyoe )
		_OBJ_ANIME_WAIT()
		
		//視線！ふたごちゃん
		_TRAINER_BGM_SET( TRID_FUTAGO_01 )
		
		//戦闘処理呼び出し
		_CALL ev_r03_futago_batlle
	
	ENDIF


EVENT_END

/**************************************************************/
/*CALL：ふたごちゃん戦闘処理                               */
/**************************************************************/
ev_r03_futago_batlle:

//ふたごちゃん：あたしたち
	_BALLOONWIN_OBJMSG(msg_r03_futago_03,R03_FUTAGO_01)
	_BALLOONWIN_CLOSE()
	
	//戦闘処理
	_TRAINER_BTL_SET( TRID_FUTAGO_01, 0 )
	//結果チェック
	_TRAINER_LOSE_CHECK( SCWK_ANSWER )
	IF $SCWK_ANSWER == SCR_BATTLE_RESULT_WIN THEN
		_TRAINER_WIN()
	ELSE
		_TRAINER_LOSE()
	ENDIF

	//======================================//
		
	//***フラグ操作：R03の長い草イベントを有効に***
	$WK_SCENE_R03 = 1
	
	//======================================//

_RET


/**************************************************************/
/*CALL：ライバルストッパー                               */
/**************************************************************/
ev_r03_rival_stoper:

	//プレイヤーネームを格納
	_PLAYER_NAME(0)
	
	//初回話しかけ
	IF $WK_SCENE_R03_PLASMA == 1 THEN
		_BALLOONWIN_OBJMSG( msg_r03_black_08a , R03_RIVAL_03 )
		
		//先に行くか質問
		DEFINE_LOCAL SCWK_ANSWER01
		_YES_NO_WIN( SCWK_ANSWER01 )
		_BALLOONWIN_CLOSE()
		
		//はい
		IF $SCWK_ANSWER01 == 0 THEN
		
				_BALLOONWIN_OBJMSG( msg_r03_black_08b , R03_RIVAL_03 )
				_BALLOONWIN_CLOSE()
			
				_OBJ_ANIME( R03_RIVAL_03 , anm_stoper_rival_go )
				_OBJ_ANIME_WAIT()

			
			//======================================//
			
			//OBJ非表示
			_OBJ_DEL(R03_RIVAL_03)
			//洞窟前のRIVALを非表示
			_FLAG_SET(FV_R03_RIVAL_03)
			
			//***フラグ操作：R03R0301のPOS起動***
			$WK_SCENE_R03_PLASMA = 3
			
			//======================================//
		
		ELSE
			
			//準備してこいよ
			_BALLOONWIN_OBJMSG( msg_r03_black_08c , R03_RIVAL_03 )
			_BALLOONWIN_CLOSE()
			_OBJ_ANIME( MMDL_ID_PLAYER , anm_stoper_player_return02 )
			_OBJ_ANIME_WAIT()
			
			//======================================//
			
			//***フラグ操作：ストッパーの会話を２回目に***
			$WK_SCENE_R03_PLASMA = 2
			
			//======================================//
			
		ENDIF
	
	//２回目以降の話しかけ
	ELSE

		_BALLOONWIN_OBJMSG( msg_r03_black_08e , R03_RIVAL_03 )
		
		//先に行くか質問
		DEFINE_LOCAL SCWK_ANSWER02
		_YES_NO_WIN( SCWK_ANSWER02 )
		_BALLOONWIN_CLOSE()
		
		//はい
		IF $SCWK_ANSWER02 == 0 THEN
			
			_BALLOONWIN_OBJMSG( msg_r03_black_08b , R03_RIVAL_03 )
			_BALLOONWIN_CLOSE()
			
			_OBJ_ANIME( R03_RIVAL_03 , anm_stoper_rival_go )
			_OBJ_ANIME_WAIT()
			
			//======================================//
			
			//OBJ非表示
			_OBJ_DEL(R03_RIVAL_03)
			//洞窟前のRIVALを非表示
			_FLAG_SET(FV_R03_RIVAL_03)
			
			//***フラグ操作：R03R0301のPOS起動***
			$WK_SCENE_R03_PLASMA = 3
			
			//======================================//
			
		ELSE

			//準備してこいよ
			_BALLOONWIN_OBJMSG( msg_r03_black_08c , R03_RIVAL_03 )
			_BALLOONWIN_CLOSE()
			_OBJ_ANIME( MMDL_ID_PLAYER , anm_stoper_player_return02 )
			_OBJ_ANIME_WAIT()
			
			//======================================//
			
			//***フラグ操作：ストッパーの会話を２回目に***
			$WK_SCENE_R03_PLASMA = 2
			
			//======================================//

		ENDIF
	
	ENDIF
_RET

/**************************************************************/
/*  R03 R03R0301イベント終了後POSでお礼イベント*/
/**************************************************************/
EVENT_START   ev_pos_r03_support_03

	//プレイヤーネームを格納
	_PLAYER_NAME(0)

	//主人公下を向く
	
	//自機座標取得
	DEFINE_LOCAL  LCW_POSX02
    DEFINE_LOCAL  LCW_POSZ02
    _PLAYER_POS_GET( LCW_POSX02,LCW_POSZ02 ) 
    
    //プレイヤーが通る3グリッド分を用意
    SWITCH $LCW_POSX02
	CASE 715 THEN
	_OBJ_ANIME( MMDL_ID_PLAYER, anm_player_goodbye_x715 )
	_OBJ_ANIME_WAIT()
	
	CASE 716 THEN //デフォルト処理
	_OBJ_ANIME( MMDL_ID_PLAYER , anm_player_02 )
	_OBJ_ANIME_WAIT()
	
	CASE 717 THEN
	_OBJ_ANIME( MMDL_ID_PLAYER, anm_player_goodbye_x717 )
	_OBJ_ANIME_WAIT()
	
    DEFAULT
    _OBJ_ANIME( MMDL_ID_PLAYER , anm_player_02 )
	_OBJ_ANIME_WAIT()
	
    ENDSWITCH


	_BALLOONWIN_OBJMSG( msg_r03_white_07 , R03_SUPPORT_01 )
	_BALLOONWIN_CLOSE()
	
	//性別が格納されるローカル変数を定義
	DEFINE_LOCAL SCWK_SEX
	_GET_MY_SEX(SCWK_SEX)
	
	//男性だった場合
	IF $SCWK_SEX == PM_MALE THEN
	
	_BALLOONWIN_OBJMSG( msg_r03_babygirl1_03 , R03_BABYGIRL_02 )
	_BALLOONWIN_CLOSE()
	
	//女性だった場合
	ELSE
	
	_BALLOONWIN_OBJMSG( msg_r03_babygirl1_04 , R03_BABYGIRL_02 )
	_BALLOONWIN_CLOSE()
	
	ENDIF
	
	//【仮】アイテム入手
	_ITEM_EVENT_KEYWAIT(ITEM_MONSUTAABOORU, 5)
	
	//バイバーイ。サポートとBABYRIRL退場
	_BALLOONWIN_OBJMSG( msg_r03_white_08 , R03_SUPPORT_01 )
	_BALLOONWIN_CLOSE()
	_OBJ_ANIME( R03_SUPPORT_01 , anm_support_goodbye01 )
	_OBJ_ANIME_WAIT()
	_OBJ_ANIME( R03_SUPPORT_01 , anm_support_goodbye02 )
	_OBJ_ANIME( R03_BABYGIRL_02 , anm_babygirl_goodbye01 )
	_OBJ_ANIME_WAIT()
	_OBJ_ANIME( R03_BABYGIRL_02 ,  anm_support_goodbye03 )
	_OBJ_ANIME( R03_SUPPORT_01 , anm_support_goodbye03 )
	_OBJ_ANIME_WAIT()

	//======================================//
	
	//SUPPORT02とBABYGIRL03のフラグをSETして以降非表示に
	_FLAG_SET(FV_R03_SUPPORT_01)
	
	_OBJ_DEL(R03_SUPPORT_01)
	_OBJ_DEL(R03_BABYGIRL_02)
	
	//***フラグ操作：長い草イベントを有効にする***
	$WK_SCENE_R03_PLASMA = 5
	
	//======================================//
	
EVENT_END


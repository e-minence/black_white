	_BALLOONWIN_CLOSE()
	
	//プレイヤーが通る3グリッド分を用意
	SWITCH $LCW_POSX
	CASE 715 THEN
	_OBJ_ANIME( R03_SUPPORT_01 , anm_support_stop_x715_ret )
	_OBJ_ANIME( MMDL_ID_PLAYER , anm_player_stop_01 )
	_OBJ_ANIME_WAIT()
	
	CASE 716 THEN //デフォルト処理

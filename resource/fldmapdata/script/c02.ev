	_OBJ_ANIME_WAIT()
	
	//そっか ソウリュウのジムリーダーなら…
	_BALLOONWIN_OBJMSG_WB(msg_c02_hakase2_stone_03w,msg_c02_hakase2_stone_03b, C02_HAKASE2_01, POS_UR )
	_MSGWIN_CLOSE()
	
	//〜〜よ おまえさんの…
	_PLAYER_NAME( 0 )
	_BALLOONWIN_OBJMSG_POS(msg_c02_hakase1_stone_03, C02_HAKASE1_01,POS_UL) 
	_BALLOONWIN_CLOSE()
	
	//ドラゴンポケモンが…
	_BALLOONWIN_OBJMSG_POS(msg_c02_hakase2_stone_04, C02_HAKASE2_01,POS_UR) 
    _BALLOONWIN_CLOSE()
	
	//博士（父）（娘）の動きと主人公、サポート、アロエの振り向きを合わせるウェイト	
    //博士（父）が画面外に移動
    //博士（娘）が画面外に移動
	_OBJ_ANIME( C02_HAKASE1_01, anm_hakase1_saru_01 )
	_OBJ_ANIME( C02_HAKASE2_01, anm_hakase2_saru_01 )
	//リーダーたち：見送る
	_TIME_WAIT(42)
	_OBJ_ANIME(C02_SUPPORT_02,anm_common_turn_r)
	_TIME_WAIT(2)
	_OBJ_ANIME(C02_LEADER02_02,anm_common_turn_r)
	_OBJ_ANIME(MMDL_ID_PLAYER,anm_common_turn_r)
	_OBJ_ANIME_WAIT()
	
	//振り向きに差をつけるウェイト
	_OBJ_ANIME(C02_LEADER02_02,anm_common_turn_d)
	_TIME_WAIT(4)
	_OBJ_ANIME(MMDL_ID_PLAYER,anm_common_turn_u)
	_TIME_WAIT(2)
	_OBJ_ANIME(C02_SUPPORT_02,anm_common_turn_l)
	_OBJ_ANIME_WAIT()
	
	//安心しな！
	_BALLOONWIN_OBJMSG_POS(msg_c02_leader2_stone_08, C02_LEADER02_02,POS_UR)
	_BALLOONWIN_CLOSE()
	
	//サポート：主人公の横へ
/*	_OBJ_ANIME(C02_SUPPORT_02,anm_support_come_a)
	_TIME_WAIT( 8 )
	_OBJ_ANIME(MMDL_ID_PLAYER,anm_common_turn_r)
	_OBJ_ANIME_WAIT()
*/	
	//…なんだか
	_PLAYER_NAME( 0 )
	_BALLOONWIN_OBJMSG_POS(msg_c02_white_stone_03, C02_SUPPORT_02,POS_DR)
	_BALLOONWIN_CLOSE()
	
	//自機にカメラを戻す
	_CAMERA_RECV_MOVE( 24 )	//_CAMERA_START()を使った時の座標に戻します。引数は移動にかかるフレーム数です
	_CAMERA_WAIT_MOVE()	//カメラ移動待ち
	_CAMERA_BIND()		//カメラバインド　主人公位置をカメラが追従するようになります
	_CAMERA_END()		//カメラ操作終了
	
	//==============フラグワーク操作==============//
	_OBJ_DEL( C02_HAKASE1_01 )
	_OBJ_DEL( C02_HAKASE2_01 )
	
	//博士1、2、チャンピオンのフラグを落とす
	_FLAG_SET(FV_C02_STONEEVENT_01)
	
	//博物館内の石を消す
	_FLAG_SET( FV_MUSEUM_STONE )

	//イベントを無効に
	$WK_SCENE_C02 = 7

	//D08のストッパーを消す
	_FLAG_SET(FV_R08_STOPPER_01)

	_FLAG_SET( FV_C02GYM0202_LEADER2 ) //ジム2室目からジムリーダーを消す
	
	//古代の城にいるライバルを消す
	_FLAG_SET( FV_D03R0101_RIVAL_02 )
	//============================================//
		
EVENT_END


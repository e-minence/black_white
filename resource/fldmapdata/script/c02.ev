INIT_EVENT_START	ev_init_c02
	
	//盗難事件イベント時、博物館でのイベントが終わった後は
	//解決するまで、アロエを3番道路の近くに配置
	//盗難イベント中？
	IF FLAG_ON(FE_MUSEUM_TOUNAN ) THEN
	
		//博物館前のジムリーダーの会話イベントは終わった？	
		IF $WK_SCENE_C02  == 4 THEN 
		
		//アロエの位置をチェンジ
		_OBJ_POS_CHANGE( C02_LEADER02_01 , 665, 0, 600, MV_DIR_RND )
		
		ENDIF
	ENDIF

	//ライバルを配置
	//初期状態では、博物館前に配置されている（後のイベントで使用する為）
	//ポスを踏んだとき、ポケセン案内イベントの位置に配置し直す。
	IF$WK_SCENE_C02 == 0 THEN
		_OBJ_POS_CHANGE( C02_RIVAL_02, 662, 0, 600, DIR_RIGHT )
	ELSIF$WK_SCENE_C02 == 3 THEN
		_OBJ_POS_CHANGE( C02_RIVAL_02, 652, 0, 586, DIR_LEFT )
		_OBJ_POS_CHANGE( C02_SUPPORT_01, 652, 0, 587, DIR_LEFT )
	ELSIF$WK_SCENE_C02 == 7 && FLAG_OFF(FV_C02_STONEEVENT_02) THEN
		_OBJ_POS_CHANGE( C02_LEADER02_02, 644, 0, 584, DIR_RIGHT )
		_OBJ_POS_CHANGE( C02_SUPPORT_02, 646, 0, 584, DIR_LEFT)
	ENDIF
	
INIT_EVENT_END

/**************************************************************/
/*  C02 ライバルがポケセンまで案内してくれる				                     
/**************************************************************/
EVENT_START   ev_pos_c02_rival_01
	

	
    DEFINE_LOCAL  POSX   /* ローカル変数定義 */
    DEFINE_LOCAL  POSZ    /* {}で囲う場合は連続して書かなければならない */

    _PLAYER_POS_GET( POSX,POSZ ) //自機座標取得

	//ライバルが主人公に気づく
	_OBJ_ANIME( C02_RIVAL_02, anm_player_01_kiduku )
	_OBJ_ANIME_WAIT()

    //BGMの再生
    _START_EVENT_BGM( SEQ_BGM_E_TSURETEKE2 )
	
	//間を作るためのウェイト
	_TIME_WAIT(16)
	
    //プレイヤーが通る4グリッド分を用意
	//クロックがやってくる
    SWITCH $POSZ
    CASE 598 THEN
		_OBJ_ANIME( C02_RIVAL_02, anm_rival_01_come_z598  )
		_OBJ_ANIME_WAIT()
    CASE 599 THEN
		_OBJ_ANIME( C02_RIVAL_02, anm_rival_01_come_z599  )
		_OBJ_ANIME_WAIT()
    CASE 600 THEN
		_OBJ_ANIME( C02_RIVAL_02, anm_rival_01_come_z600  )
		_OBJ_ANIME_WAIT()
    CASE 601 THEN
		_OBJ_ANIME( C02_RIVAL_02, anm_rival_01_come_z601  )
		_OBJ_ANIME_WAIT()
    DEFAULT
    ENDSWITCH

	//間を作るためのウェイト
	_TIME_WAIT(16)

	//クロックが喋る
	//クロック『あたらしい　まちについたら
	_BALLOONWIN_OBJMSG_POS( msg_c02_black_01, C02_RIVAL_02,POS_DEFAULT )
    _BALLOONWIN_CLOSE()
	
	//クロックが歩いていく
	_OBJ_ANIME( C02_RIVAL_02, anm_rival_01_walk )
	
	//クロックが歩いていく
	_TIME_WAIT(16)
	
	//主人公もついていく
	_OBJ_ANIME( MMDL_ID_PLAYER, anm_player_01_walk )
	_OBJ_ANIME_WAIT()
	
	//ライバルが振り向く
	_OBJ_ANIME( C02_RIVAL_02, anm_common_turn_r )
	_OBJ_ANIME_WAIT()
	
	//ライバルポケセンについて喋る
	//このまま　まっすぐ　すすめば
	_BALLOONWIN_OBJMSG_POS( msg_c02_black_02, C02_RIVAL_02,POS_DEFAULT )
    _BALLOONWIN_CLOSE()
    
	//間を作るためのウェイト
	_TIME_WAIT(16)
	
	//ライバルが画面端に消えていく
	_OBJ_ANIME( C02_RIVAL_02, anm_rival_01_saru )
	_OBJ_ANIME_WAIT()
	
	//ライバル・サポート・アーティを非表示にする
	_OBJ_DEL( C02_RIVAL_02 )
	_OBJ_DEL( C02_SUPPORT_01 )
	_OBJ_DEL( C02_LEADER3_01 )
	
	//BGMの終了
	_END_EVENT_BGM()
	
	//==============フラグワーク操作==============//
			
	//C02のイベント
	$WK_SCENE_C02 = 1
	
	//ライバル・サポート・アーティを消す
	_FLAG_SET(FV_C02_POSEVENT_01)
	
	//============================================//

EVENT_END


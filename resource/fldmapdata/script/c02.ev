/**************************************************************/
/*  C02 Nとの戦闘イベント				                     
/**************************************************************/
EVENT_START   ev_pos_c02_boss_01

	//Nを出現させる
	//階段音と！マーク音とBGMがかぶらないように、ウェイトで調整
	_SE_PLAY(SEQ_SE_KAIDAN)
	_TIME_WAIT(4)
	_OBJ_ADD_EX( 644, 581, DIR_DOWN, MMDL_ID_EVENTOBJ_00, BOSS, MV_DMY )
	
	//プレイヤーがNにきづく
	_TIME_WAIT(12)
	_OBJ_ANIME( MMDL_ID_PLAYER, anm_common_gyoe)
	_SE_WAIT()
	_OBJ_ANIME_WAIT()

	//NのBGM再生
	_TIME_WAIT(12)
	_START_EVENT_BGM( SEQ_BGM_E_N )
	
	_CAMERA_START()		//カメラ操作開始
	_CAMERA_PURGE()		//カメラのバインドを解く
	
	//主人公がNから下がる
	_OBJ_ANIME( MMDL_ID_PLAYER, anm_player_back_01)
	
	//主人公とNの動きに差をつける為のウェイト
	_TIME_WAIT(8)	
	//Nがやってくる
	_OBJ_ANIME( MMDL_ID_EVENTOBJ_00, anm_boss_01_walk_01)
	_OBJ_ANIME_WAIT()
	
	//間を作るためのウェイト	

	//Nがしゃべる
	//まよえる　トレーナーよ
	_BALLOONWIN_OBJMSG_POS( msg_c02_boss_01, MMDL_ID_EVENTOBJ_00,POS_DEFAULT)
	
	//はい/いいえの選択
	_YES_NO_WIN( SCWK_ANSWER )
	
	IF $SCWK_ANSWER ==  SCR_NO THEN
	
		//Nが喋る・いいえの場合
		//Ｎ『ボクを　からかっているね
		_BALLOONWIN_OBJMSG_POS( msg_c02_boss_03, MMDL_ID_EVENTOBJ_00, POS_DEFAULT )
    	_MSGWIN_CLOSE()
		
	ELSE
		//Nが喋る・はいの場合
		//Ｎ『ボクに　さからうんだね
		_BALLOONWIN_OBJMSG_POS( msg_c02_boss_02, MMDL_ID_EVENTOBJ_00, POS_DEFAULT )
    	_MSGWIN_CLOSE()
    	
	ENDIF
	
	//Nとの戦闘
	_CALL		ev_boss_btl
	
	//Nが喋る
	//Ｎ『いまの　ボクの　ともだちとでは
	_BALLOONWIN_OBJMSG_POS( msg_c02_boss_04, MMDL_ID_EVENTOBJ_00, POS_DEFAULT )
    _MSGWIN_CLOSE()
	

	//Nが画面外に移動する
	_OBJ_ANIME( MMDL_ID_EVENTOBJ_00, anm_boss_01_walk_03 )

	_TIME_WAIT(24)
	_CAMERA_MOVE( 9694,0,970795,42237952,0,38502400,56 )	//一番最後の引数は移動にかかるフレーム数
	
	_TIME_WAIT(8)
	_OBJ_ANIME( MMDL_ID_PLAYER, anm_common_turn_l )
	_OBJ_ANIME_WAIT()
	
	_CAMERA_WAIT_MOVE()	//カメラ移動待ち
	//Nが喋る
	_BALLOONWIN_OBJMSG_WB(msg_c02_boss_05w,msg_c02_boss_05b,MMDL_ID_EVENTOBJ_00,POS_DL)
    _BALLOONWIN_CLOSE()
	
	_OBJ_ANIME( MMDL_ID_EVENTOBJ_00, anm_boss_01_walk_04 )
	_OBJ_ANIME_WAIT()
	
	//Nを消す
	_OBJ_DEL( MMDL_ID_EVENTOBJ_00 )
	
	//BGM終了
	
	_END_EVENT_BGM()

	_CAMERA_DEF_MOVE(32)//引数は移動にかかるフレーム数
	_CAMERA_WAIT_MOVE()	//カメラ移動待ち
	_CAMERA_BIND()		//カメラバインド　主人公位置をカメラが追従するようになります
	_CAMERA_END()		//カメラ操作終了
	
	//==============フラグワーク操作==============//
			
	//C02のイベントを進める
	$WK_SCENE_C02 = 2
	
	//============================================//

EVENT_END

//Nとの戦闘
ev_boss_btl:

//戦闘処理
		_TRAINER_BTL_SET ( TRID_BOSS_02, 0 )
		
		//敗戦チェック
		_TRAINER_LOSE_CHECK( SCWK_ANSWER )
		IF $SCWK_ANSWER == SCR_BATTLE_RESULT_WIN THEN

			//カメラを戦闘前の状態に戻しておく。
			_CAMERA_START()		//カメラ操作開始
			_CAMERA_PURGE()		//カメラのバインドを解く
			_CAMERA_MOVE( 9694,0,970837,42237952,0,38174720,1 )	//一番最後の引数は移動にかかるフレーム数
			_CAMERA_WAIT_MOVE()	//カメラ移動待ち
			
			_TRAINER_WIN()			//勝ち(1)ならトレーナー勝利処理へ
			
		ELSE
			_TRAINER_LOSE()			//負け(0)ならトレーナー敗北処理へ(ここでスクリプト終了します）
		ENDIF
_RET


 	_BALLOONWIN_OBJMSG_POS(msg_c02_champion_stone_02, C02_CHAMPION_01,POS_DL) 
    _BALLOONWIN_CLOSE()
    _OBJ_ANIME_WAIT()
    
    _OBJ_ANIME(C02_CHAMPION_01,anm_common_turn_d)
    _OBJ_ANIME_WAIT()
 	_BALLOONWIN_OBJMSG_POS(msg_c02_champion_stone_03, C02_CHAMPION_01,POS_DL) 
    _BALLOONWIN_CLOSE()
    
    _TIME_WAIT(16)
				
	//カメラ操作　チャンピオンの位置にカメラを合わせる
	_CAMERA_MOVE( 9688,0,970752,42106880,0,38305792,24 )	//一番最後の引数は移動にかかるフレーム数
	_CAMERA_WAIT_MOVE()	//カメラ移動待ち
	
	//チャンピオン：そらをとぶアニメ
	_CALL_NPCFLY_CUTIN(C02_CHAMPION_01)

	_CAMERA_MOVE(9694,0,970795,42237952,0,38240256,24 )	//一番最後の引数は移動にかかるフレーム数
	_CAMERA_WAIT_MOVE()	//カメラ移動待ち
	
	_TIME_WAIT(8)
	_OBJ_ANIME(C02_HAKASE2_01,anm_common_gyoe)
	_OBJ_ANIME_WAIT()
	_TIME_WAIT(4)
	_OBJ_ANIME(C02_LEADER02_02,anm_common_turn_u)
	_BALLOONWIN_OBJMSG_WB(msg_c02_hakase2_stone_03w,msg_c02_hakase2_stone_03b, C02_HAKASE2_01, POS_UR )
	_MSGWIN_CLOSE()
	_OBJ_ANIME_WAIT()

	_TIME_WAIT(16)
	_BALLOONWIN_OBJMSG_POS(msg_c02_hakase1_stone_03, C02_HAKASE1_01,POS_UL) 
    _BALLOONWIN_CLOSE()
	
	_OBJ_ANIME(C02_HAKASE2_01,anm_common_turn_d)
	_BALLOONWIN_OBJMSG_POS(msg_c02_hakase2_stone_04, C02_HAKASE2_01,POS_UR) 
    _BALLOONWIN_CLOSE()
	_OBJ_ANIME_WAIT()
	
    //博士（父）が画面外に移動
    //博士（娘）が画面外に移動
	_OBJ_ANIME( C02_HAKASE1_01, anm_hakase1_saru_01 )
	_OBJ_ANIME( C02_HAKASE2_01, anm_hakase2_saru_01 )
	_TIME_WAIT(42)
	_OBJ_ANIME(C02_SUPPORT_02,anm_common_turn_r)
	_TIME_WAIT(2)
	_OBJ_ANIME(C02_LEADER02_02,anm_common_turn_r)
	_OBJ_ANIME(MMDL_ID_PLAYER,anm_common_turn_r)
	_OBJ_ANIME_WAIT()
	
	_TIME_WAIT(12)
	_OBJ_ANIME(C02_LEADER02_02,anm_common_turn_d)
	_TIME_WAIT(4)
	_OBJ_ANIME(MMDL_ID_PLAYER,anm_common_turn_u)
	_TIME_WAIT(2)
	_OBJ_ANIME(C02_SUPPORT_02,anm_common_turn_l)
	_BALLOONWIN_OBJMSG_POS(msg_c02_leader2_stone_08, C02_LEADER02_02,POS_DR) 
    _BALLOONWIN_CLOSE()
    
    _TIME_WAIT(16)
	_OBJ_ANIME(MMDL_ID_PLAYER,anm_common_turn_r_s1)
	_BALLOONWIN_OBJMSG_POS(msg_c02_white_stone_03, C02_SUPPORT_02,POS_DR)
	_LAST_KEYWAIT()
    _BALLOONWIN_CLOSE()
    _OBJ_ANIME_WAIT()
    
	//自機にカメラを戻す
	_CAMERA_RECV_MOVE( 24 )	//_CAMERA_START()を使った時の座標に戻します。引数は移動にかかるフレーム数です
	_CAMERA_WAIT_MOVE()	//カメラ移動待ち
	_CAMERA_BIND()		//カメラバインド　主人公位置をカメラが追従するようになります
	_CAMERA_END()		//カメラ操作終了
    
	//==============フラグワーク操作==============//
	_OBJ_DEL( C02_HAKASE1_01 )
	_OBJ_DEL( C02_HAKASE2_01 )
	
	//博士1、2、チャンピオンのフラグを落とす
	_FLAG_SET(FV_C02_STONEEVENT_01)
	
	//博物館内の石を消す
	_FLAG_SET( FV_MUSEUM_STONE )

	//イベントを無効に
	$WK_SCENE_C02 = 7

	//D08のストッパーを消す
	_FLAG_SET(FV_R08_STOPPER_01)

	_FLAG_SET( FV_C02GYM0202_LEADER2 ) //ジム2室目からジムリーダーを消す
	//============================================//
		
EVENT_END


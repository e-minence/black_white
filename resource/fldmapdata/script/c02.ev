	//サポートも博物館の中へ
	_OBJ_ANIME( C02_SUPPORT_01, anm_support_back  )
	_OBJ_ANIME_WAIT()
	
	//ライバル・サポート・アーティを消す
	_OBJ_DEL( C02_RIVAL_02 )
	_OBJ_DEL( C02_SUPPORT_01 )
	_OBJ_DEL( C02_LEADER3_01 )
	
	//アロエの位置をチェンジ

EVENT_START   ev_pos_c02_rival_01
	
    DEFINE_LOCAL  POSX   /* ローカル変数定義 */
    DEFINE_LOCAL  POSZ    /* {}で囲う場合は連続して書かなければならない */

    _PLAYER_POS_GET( POSX,POSZ ) //自機座標取得

	//ライバルが主人公に気づく
	_OBJ_ANIME( C02_RIVAL_02, anm_player_01_kiduku )
	_OBJ_ANIME_WAIT()

    //BGMの再生
    _START_EVENT_BGM( SEQ_BGM_E_TSURETEKE2 )
	
    //プレイヤーが通る4グリッド分を用意
	//クロックがやってくる
    SWITCH $POSZ
    CASE 598 THEN
		_OBJ_ANIME( C02_RIVAL_02, anm_rival_01_come_z598  )
		_OBJ_ANIME_WAIT()
    CASE 599 THEN
		_OBJ_ANIME( C02_RIVAL_02, anm_rival_01_come_z599  )
		_OBJ_ANIME_WAIT()
    CASE 600 THEN
		_OBJ_ANIME( C02_RIVAL_02, anm_rival_01_come_z600  )
		_OBJ_ANIME_WAIT()
    CASE 601 THEN
		_OBJ_ANIME( C02_RIVAL_02, anm_rival_01_come_z601  )
		_OBJ_ANIME_WAIT()
    DEFAULT
    ENDSWITCH

	//クロックが喋る
	//クロック『あたらしい　まちについたら
	_BALLOONWIN_OBJMSG_POS( msg_c02_black_01, C02_RIVAL_02,POS_DEFAULT )
    _BALLOONWIN_CLOSE()
	
	//クロックが歩いていく
	_OBJ_ANIME( C02_RIVAL_02, anm_rival_01_walk )
	
	//主人公とライバルの動きに差をつける
	_TIME_WAIT(4)
	
	//主人公もついていく
	_OBJ_ANIME( MMDL_ID_PLAYER, anm_player_01_walk )
	_OBJ_ANIME_WAIT()
	
	//ライバルが振り向く
	_OBJ_ANIME( C02_RIVAL_02, anm_common_turn_r )
	_OBJ_ANIME_WAIT()
	
	//ライバルポケセンについて喋る
	//このまま　まっすぐ　すすめば
	_BALLOONWIN_OBJMSG_POS( msg_c02_black_02, C02_RIVAL_02,POS_DEFAULT )
    _BALLOONWIN_CLOSE()
    
    //アイテムをあげる為に近づく
    _OBJ_ANIME(C02_RIVAL_02,anm_rival_item)
    _OBJ_ANIME_WAIT()
   
    //アイテム入手処理
	_ITEM_EVENT_KEYWAIT(ITEM_KAGONOMI, 3 )
   
    //カゴの実の説明
  	_BALLOONWIN_OBJMSG_POS( msg_c02_black_02a, C02_RIVAL_02,POS_DEFAULT )
    _BALLOONWIN_CLOSE()
    
	//ライバルが画面端に消えていく
	_OBJ_ANIME( C02_RIVAL_02, anm_rival_01_saru )
	_TIME_WAIT( 30 )
	//BGMの終了
	_END_EVENT_BGM()
	_OBJ_ANIME_WAIT()
	
	//ライバル・サポート・アーティを非表示にする
	_OBJ_DEL( C02_RIVAL_02 )
	_OBJ_DEL( C02_SUPPORT_01 )
	_OBJ_DEL( C02_LEADER3_01 )
	
	
	//==============フラグワーク操作==============//
	//C02到着フラグをセット ※そらとび問題のためイベント終了後に到着フラグをセットしています
	_FLAG_SET( SYS_FLAG_ARRIVE_C02 )
	
	//C02のイベント
	$WK_SCENE_C02 = 1
	
	//ライバル・サポート・アーティを消す
	_FLAG_SET(FV_C02_POSEVENT_01)
	
	//============================================//

EVENT_END


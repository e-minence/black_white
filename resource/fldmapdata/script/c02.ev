		//ライバル・サポート・アーティの出現フラグを消す
		_FLAG_SET(FV_C02_POSEVENT_01)
		
		//ライバル・サポートが博物館に現れる
		_FLAG_RESET(FV_C02GYM0101_FRIENDS)

	//============================================//
	
EVENT_END


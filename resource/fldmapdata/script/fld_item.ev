//
ev_itemget_flditem_common_10:
  /*冒険ノートデータ作成*/
//  _FNOTE_DATA_MAKE  FNOTE_ID_ITEMGET,SCWK_TEMP0,0,0,0
  
  _SYSWIN_MSG_DOWN( msg_fld_item_get_10 )

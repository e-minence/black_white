/**************************************************************/
/*  R03R0101 WOMAN3（回復処理）*/
/**************************************************************/
EVENT_START   ev_r03r0101_woman3_02
	_TALK_OBJ_START()
	
	//手持ちポケモンカウント
	DEFINE_LOCAL LCW_POKECOUNT
	_GET_PARTY_POKE_COUNT( LCW_POKECOUNT , POKECOUNT_MODE_NOT_EGG )
	
	//カウント変数定義
	DEFINE_LOCAL LCW_COUNTER
	$LCW_COUNTER = 0
	//HPチェック変数定義
	DEFINE_LOCAL LCW_HP
	//HP減り匹数チェック変定義
	DEFINE_LOCAL LCW_MINUS_POKE
	$LCW_MINUS_POKE = 0
	
	//全手持ちポケモンのHPチェック
	WHILE $LCW_POKECOUNT > $LCW_COUNTER
	
		_CHECK_TEMOTI_HP  ( LCW_HP,LCW_COUNTER )
		
		IF $LCW_HP == FALSE THEN
			//体力が減っているポケモン匹数にプラス
			$LCW_MINUS_POKE += 1
		ENDIF
		
		//カウントアップ
		$LCW_COUNTER += 1
	ENDWHILE
	
	//体力の減ったポケモンが１匹以上いる
	IF $LCW_MINUS_POKE >= 1 THEN
	
		//やすんでいきなさい
		_BALLOONWIN_OBJMSG( msg_r03r0101_woman3a_02,R03R0101_WOMAN3_02 )
		_BALLOONWIN_CLOSE()
		
		//暗転して手持ちポケモンを回復
		_BLACK_OUT()
		_DISP_FADE_END_CHECK()
		_TEMOTI_POKEMON_KAIFUKU()		//回復処理
		_ME_PLAY( SEQ_ME_ASA )
		_ME_WAIT()
		_BLACK_IN()
		_DISP_FADE_END_CHECK()
	
	//体力の減ったポケモンはいない
	ELSE
		
		//元気ね
		_BALLOONWIN_OBJMSG( msg_r03r0101_woman3a_01,R03R0101_WOMAN3_02 )
		_BALLOONWIN_CLOSE()
	
	ENDIF
EVENT_END

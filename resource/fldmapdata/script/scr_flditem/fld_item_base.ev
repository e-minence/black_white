flditem_bag_poke_15:
  //ポケットナンバーをSCWK_ANSWERに代入
  _GET_POCKET_ID(  SCWK_TEMP0,SCWK_ANSWER )
  _POCKET_NAME(  2,SCWK_ANSWER )
  _CALL ev_itemget_flditem_common_10
  _RET


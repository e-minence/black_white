/**************************************************************/
EVENT_START		ev_c03p09_iceline_05
	{
	//今日既にイベントを終えたかチェック
	IF FLAG_ON( TMFLG_C03P09_SWEETS ) THEN
		
		_TALK_OBJ_START()
		_BALLOONWIN_OBJMSG_POS( msg_c03p09_iceline_05d , C03P09_ICELINE_01 , POS_UL )
		_BALLOONWIN_CLOSE()
		_OBJ_ANIME( C03P09_ICELINE_05 ,  anm_iceline_look_up )
		_OBJ_ANIME_WAIT()
		
	//イベントを終えていない
	ELSE

		//曜日チェック
		DEFINE_LOCAL LWK_WEEKCK
		_GET_WEEK( LWK_WEEKCK )
		
		//火曜日である
		IF $LWK_WEEKCK == RTC_WEEK_TUESDAY THEN
			_TALK_OBJ_START()
			_BALLOONWIN_OBJMSG_POS( msg_c03p09_iceline_05a , C03P09_ICELINE_01 , POS_UL )
			_YES_NO_WIN( SCWK_ANSWER )
			
			//はい
			IF $SCWK_ANSWER == 0 THEN
				_BALLOONWIN_OBJMSG_POS( msg_c03p09_iceline_05b , C03P09_ICELINE_01 , POS_UL )
				_BALLOONWIN_CLOSE()
				
				//話しかけ時のため最後尾に移動（話しかけ方向で処理を分岐）
				DEFINE_LOCAL LWK_DIR
				_PLAYER_DIR_GET( LWK_DIR )
				SWITCH $LWK_DIR
				CASE DIR_LEFT THEN
					_OBJ_ANIME( C03P09_ICELINE_05 ,  anm_iceline_look_up )
					_OBJ_ANIME( MMDL_ID_PLAYER ,  anm_iceline_player_go_last_l )
					_OBJ_ANIME_WAIT()
				CASE DIR_RIGHT THEN
					_OBJ_ANIME( C03P09_ICELINE_05 ,  anm_iceline_look_up )
					_OBJ_ANIME( MMDL_ID_PLAYER ,  anm_iceline_player_go_last_r )
					_OBJ_ANIME_WAIT()
				ENDSWITCH
				
				//行列処理をコール
				_CALL ev_r03_ice_procession
				//購入処理をコール
				_CALL ev_r03_ice_shop_buy
			ELSE
				_BALLOONWIN_OBJMSG_POS( msg_c03p09_iceline_05c , C03P09_ICELINE_01 , POS_UL )
				_BALLOONWIN_CLOSE()
				_OBJ_ANIME( C03P09_ICELINE_05 ,  anm_iceline_look_up )
				_OBJ_ANIME_WAIT()
			ENDIF
		
		//火曜日ではない
		ELSE
			_TALK_OBJ_START()
			_BALLOONWIN_OBJMSG_POS( msg_c03p09_iceline_05e , C03P09_ICELINE_01 , POS_UL )
			_BALLOONWIN_CLOSE()
			_OBJ_ANIME( C03P09_ICELINE_05 ,  anm_iceline_look_up )
			_OBJ_ANIME_WAIT()
			
		ENDIF
	
	ENDIF
	}
EVENT_END


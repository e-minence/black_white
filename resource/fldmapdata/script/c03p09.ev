/************************************************************/
/*				購入処理						             */
/************************************************************/
ev_r03_ice_shop_buy:
   	DEFINE_LOCAL	LWK_ICE_NUM_SELECT
  	DEFINE_LOCAL	LWK_ICE_GOLD    
  	DEFINE_LOCAL	LWK_GOLD_CHK
   	DEFINE_LOCAL	LWK_BAG_CHK
 
	//ヒウンアイスの金額を設定
	$LWK_ICE_GOLD  = 100

	//店員：ヒウンシティめいぶつ！
	_BALLOONWIN_OBJMSG_POS( msg_c03p09_ice_shop_01 , C03P09_SHOPW_01, POS_DL )
  	
   	//所持金の表示
   	_GOLD_WIN_OPEN( MENU_X1, MENU_Y1 )
   	
 	//買う・買わない選択画面作成
  	_BMPMENU_INIT_RIGHT( MENU_X2, MENU_Y2, 0, 1, LWK_ICE_NUM_SELECT  )
	
	_BMPMENU_MAKE_LIST( msg_c03p09_ice_shop_07, 0 )	//買う
	_BMPMENU_MAKE_LIST( msg_c03p09_ice_shop_08, 1 )	//やめる
	
	_BMPMENU_START()
	_MSGWIN_CLOSE()
	
	//ヒウンアイスを買う場合の処理
	IF $LWK_ICE_NUM_SELECT == 0 THEN	
		
		//バッグ空きチェック（チェックする対象が仮）
		_ADD_ITEM_CHK(ITEM_HIUNAISU,1,LWK_BAG_CHK)
		//金額チェック
		_CHECK_GOLD( LWK_GOLD_CHK, LWK_ICE_GOLD  )

		//バッグがいっぱい
		IF $LWK_BAG_CHK == 0 THEN 
		 	_BALLOONWIN_OBJMSG_POS( msg_c03p09_ice_shop_04 , C03P09_SHOPW_01, POS_DL )
			_LAST_KEYWAIT()
			_MSGWIN_CLOSE()
			
			_GOLD_WIN_CLOSE()
		
		//お金が足りない
		ELSIF $LWK_GOLD_CHK == 0 THEN
		 	_BALLOONWIN_OBJMSG_POS( msg_c03p09_ice_shop_03 , C03P09_SHOPW_01, POS_DL )
			_LAST_KEYWAIT()
			_MSGWIN_CLOSE()		
			
			_GOLD_WIN_CLOSE()
		
		//購入条件は満たしている
		ELSE
			_BALLOONWIN_OBJMSG_POS( msg_c03p09_ice_shop_02 , C03P09_SHOPW_01, POS_DL )
			_MSGWIN_CLOSE()	
			
			_SUBTRACT_GOLD( LWK_ICE_GOLD )
			_GOLD_WIN_UPDATE( 1, 1 )
			_TIME_WAIT( 30 )
			_GOLD_WIN_CLOSE()
						
			//コマンドが変更になる予定
			_SE_PLAY( SEQ_SE_SYS_22 )
			_SE_WAIT()
			_ITEM_EVENT_SUCCESS_NOWAIT( ITEM_HIUNAISU, 1 )
			
		ENDIF
	
	//買わないを1回選んだ
	ELSE
	
		//店員：ええっ本当に買わないんですか？
		_BALLOONWIN_OBJMSG_POS( msg_c03p09_ice_shop_01b , C03P09_SHOPW_01, POS_DL )
	
		//買う・買わない選択画面作成
	  	_BMPMENU_INIT_RIGHT( MENU_X2, MENU_Y2, 0, 1, LWK_ICE_NUM_SELECT  )
		
		_BMPMENU_MAKE_LIST( msg_c03p09_ice_shop_07, 0 )	//買う
		_BMPMENU_MAKE_LIST( msg_c03p09_ice_shop_08, 1 )	//やめる
		
		_BMPMENU_START()
		_MSGWIN_CLOSE()
		
		//ヒウンアイスを買う場合の処理
		IF $LWK_ICE_NUM_SELECT == 0 THEN	
			
			//バッグ空きチェック（チェックする対象が仮）
			_ADD_ITEM_CHK(ITEM_HIUNAISU,1,LWK_BAG_CHK)
			//金額チェック
			_CHECK_GOLD( LWK_GOLD_CHK, LWK_ICE_GOLD  )

			//バッグがいっぱい
			IF $LWK_BAG_CHK == 0 THEN 
			 	_BALLOONWIN_OBJMSG_POS( msg_c03p09_ice_shop_04 , C03P09_SHOPW_01, POS_DL )
				_LAST_KEYWAIT()
				_MSGWIN_CLOSE()
				
				_GOLD_WIN_CLOSE()
				
			
			//お金が足りない
			ELSIF $LWK_GOLD_CHK == 0 THEN
			 	_BALLOONWIN_OBJMSG_POS( msg_c03p09_ice_shop_03 , C03P09_SHOPW_01, POS_DL )
				_LAST_KEYWAIT()
				_MSGWIN_CLOSE()		
				
				_GOLD_WIN_CLOSE()
			
			//購入条件は満たしている
			ELSE
				_BALLOONWIN_OBJMSG_POS( msg_c03p09_ice_shop_02 , C03P09_SHOPW_01, POS_DL )
				_MSGWIN_CLOSE()	
				
				_SUBTRACT_GOLD( LWK_ICE_GOLD )
				_GOLD_WIN_UPDATE( 1, 1 )
				_TIME_WAIT( 30 )
				_GOLD_WIN_CLOSE()
							
				//コマンドが変更になる予定
				_SE_PLAY( SEQ_SE_SYS_22 )
				_SE_WAIT()
				_ITEM_EVENT_SUCCESS_NOWAIT( ITEM_HIUNAISU, 1 )
				
			ENDIF
		
		//買わない
		ELSE
		
			_BALLOONWIN_OBJMSG_POS( msg_c03p09_ice_shop_05  , C03P09_SHOPW_01, POS_DL )
			_LAST_KEYWAIT()
			_MSGWIN_CLOSE()
			_GOLD_WIN_CLOSE()
		
		ENDIF
		
	ENDIF
	
	//主人公行列から外れる
	_OBJ_ANIME( MMDL_ID_PLAYER ,  anm_iceline_player_goodbye_01 )
	_OBJ_ANIME( C03P09_ICELINE_06 ,  anm_iceline_last_line_top )
	_OBJ_ANIME( C03P09_ICELINE_07 ,  anm_iceline_line_go )
	_OBJ_ANIME( C03P09_ICELINE_08 ,  anm_iceline_line_go )
	_OBJ_ANIME_WAIT()
	
	//======================================//
	
	//タイムフラグをセットして次の日になるまでイベントを無効にする
	_FLAG_SET(TMFLG_C03P09_SWEETS)
	//POSを起動しないようにする
	$WK_SCENE_C03P09_SWEETS = 1
	//======================================//
	
_RET


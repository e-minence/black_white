EVENT_START		ev_pos_c03p09_iceshop_01
	{
	
	//プレイヤーに気づいて振り向いて質問
	_OBJ_ANIME( C03P09_ICELINE_05 ,  anm_iceline_lastman_01 )
	_OBJ_ANIME_WAIT()
	
	//話しかけ方向取得
	DEFINE_LOCAL LWK_DIR
	_PLAYER_DIR_GET(LWK_DIR)
	IF $LWK_DIR != DIR_UP THEN
		_OBJ_ANIME( MMDL_ID_PLAYER ,  anm_iceline_player_look_lastman_01 )
		_OBJ_ANIME_WAIT()
	ENDIF
	
	_BALLOONWIN_OBJMSG_POS( msg_c03p09_iceline_05a , C03P09_ICELINE_01 , POS_UL )
	_YES_NO_WIN( SCWK_ANSWER )
	
	//はい
	IF $SCWK_ANSWER == 0 THEN
		_BALLOONWIN_OBJMSG_POS( msg_c03p09_iceline_05b , C03P09_ICELINE_01 , POS_UL )
		_BALLOONWIN_CLOSE()
		_OBJ_ANIME( C03P09_ICELINE_05 ,  anm_iceline_look_up )
		_OBJ_ANIME_WAIT()
		
		//行列処理をコール
		_CALL ev_r03_ice_procession
		//購入処理をコール
		_CALL ev_r03_ice_shop_buy
	ELSE
		_BALLOONWIN_OBJMSG_POS( msg_c03p09_iceline_05c , C03P09_ICELINE_01 , POS_UL )
		_BALLOONWIN_CLOSE()
		_OBJ_ANIME( C03P09_ICELINE_05 ,  anm_iceline_look_up )
		_OBJ_ANIME_WAIT()
	ENDIF
	}
EVENT_END


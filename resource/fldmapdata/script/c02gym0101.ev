	_BALLOONWIN_OBJMSG_POS( msg_c02gym0101_ad_07a , C02GYM0101_AD_01, POS_DR )
	_LAST_KEYWAIT()
	_MSGWIN_CLOSE()
	
	//ジムリーダー：消す
	_OBJ_DEL( MMDL_ID_EVENTOBJ_00 )

	_CAMERA_MOVE(9694,0,970837,753664,0,819200,8)
    _CAMERA_WAIT_MOVE()	//カメラ移動待ち
	_CAMERA_BIND()		//カメラバインド
	_CAMERA_END()		//カメラ操作終了
	

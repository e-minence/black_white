	_OBJ_ANIME(MMDL_ID_PLAYER, anm_common_gyoe )
	_OBJ_ANIME_WAIT()
	
	//アロエが化石まで移動
	_OBJ_ANIME(MMDL_ID_EVENTOBJ_00, anm_leader_idou_tounan_a )
	_OBJ_ANIME_WAIT()
	
	//アロエが喋る

	_OBJ_DEL( C02GYM0101_HAKAIM_03 )
	_OBJ_DEL( C02GYM0101_HAKAIM_04 )
	_OBJ_DEL( C02GYM0101_HAKAIM_05 )
	_OBJ_DEL( C02GYM0101_HAKAIM_06 )
	

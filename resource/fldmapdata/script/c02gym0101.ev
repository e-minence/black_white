EVENT_START		ev_c02gym0101_ad_01
	
	//バッジを入手しているかどうか、チェック
	 _GET_BADGE_FLAG( SCWK_TEMP0, BADGE_ID_02 )
	
	////盗難イベント中？
	IF FLAG_ON( FE_MUSEUM_TOUNAN ) THEN
		//盗難イベントが発生中
		_EASY_BALLOONWIN_TALKOBJ_MSG  ( msg_c02gym0101_ad_07 ) 
	
	ELSE

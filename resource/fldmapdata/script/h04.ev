//ガール1（イベント依頼人）
EVENT_START   ev_h04_girl1_01
	

	_CAMERA_START()		//カメラ操作開始
	_CAMERA_PURGE()		//カメラのバインドを解く
				
	//カメラ操作　チャンピオンの位置にカメラを合わせる
	_CAMERA_MOVE( 9170,0,1089626,4082719,217088,1757184,45 )	//一番最後の引数は移動にかかるフレーム数

	_TALK_OBJ_START()
	IF FLAG_OFF(FE_H04_DELIVERY_01) && $WK_SCENE_H04_ITEMNUM == 0 THEN
	
		_FLAG_SET(FE_H04_DELIVERY_01)
		_FLAG_RESET(FV_H04_ITEM_02)
		_OBJ_ADD(H04_MONSTERBALL_01)
		$WK_SCENE_H04_ITEMNUM = 0
			
		_BALLOONWIN_OBJMSG(msg_h04_poke_01,H04_POKE100_01)
		_VOICE_PLAY( MONSNO_278, 0 )
		_VOICE_WAIT()
		_MSGWIN_CLOSE()
		
		_OBJ_ANIME(H04_POKE100_01,anm_common_turn_d)
		_OBJ_ANIME_WAIT()
		_TIME_WAIT(16)
		_OBJ_ANIME(H04_POKE100_01,anm_common_turn_l)
		_OBJ_ANIME_WAIT()
		_TIME_WAIT(8)
		_OBJ_ANIME(H04_POKE100_01,anm_common_turn_r)
		_OBJ_ANIME_WAIT()
		_TIME_WAIT(8)
		_OBJ_ANIME(H04_POKE100_01,anm_common_turn_l)
		_OBJ_ANIME_WAIT()		
		_TIME_WAIT(24)	
		_OBJ_ANIME(H04_POKE100_01,anm_common_turn_d)
		_OBJ_ANIME_WAIT()
		
		_TIME_WAIT(16)
		_BALLOONWIN_OBJMSG(msg_h04_girl1_01a,H04_GIRL1_01)
		_LAST_KEYWAIT()
		_MSGWIN_CLOSE()
	
	ELSE
	
		IF FLAG_ON(FE_H04_ITEMHAVING_01) THEN
		
			_BALLOONWIN_TALKOBJ_MSG(msg_h04_girl1_02)
			_MSGWIN_CLOSE()
			
			_OBJ_ANIME(H04_POKE100_01,anm_common_turn_l)
			_OBJ_ANIME_WAIT()
			
			//手紙を渡すようなアニメ
			_OBJ_ANIME(H04_GIRL1_01,anm_common_turn_r)
			_OBJ_ANIME_WAIT()

			_TIME_WAIT(16)
			_VOICE_PLAY( MONSNO_278, 0 )
			_VOICE_WAIT()
			_TIME_WAIT(8)			
			_OBJ_ANIME(H04_POKE100_01,anm_common_jump_d)
			_BALLOONWIN_OBJMSG_POS(msg_h04_poke_02,H04_POKE100_01,POS_DEFAULT)
			_MSGWIN_CLOSE()
			_OBJ_ANIME_WAIT()
			
			_TURN_HERO_SITE()
			//手紙を一枚見つけた
			IF $WK_SCENE_H04_ITEMNUM == 1 THEN
				_BALLOONWIN_OBJMSG_POS(msg_h04_girl1_03,H04_GIRL1_01,POS_DEFAULT)
				_LAST_KEYWAIT()
				_MSGWIN_CLOSE()
						
			//手紙を二枚見つけた
			ELSIF $WK_SCENE_H04_ITEMNUM == 2 THEN
				_BALLOONWIN_OBJMSG_POS(msg_h04_girl1_04,H04_GIRL1_01,POS_DEFAULT)
				_LAST_KEYWAIT()
				_MSGWIN_CLOSE()
			
			//手紙を三枚見つけた
			ELSIF $WK_SCENE_H04_ITEMNUM == 3 THEN
				_BALLOONWIN_OBJMSG_POS(msg_h04_girl1_05,H04_GIRL1_01,POS_DEFAULT)
				_MSGWIN_CLOSE()
				
				_TIME_WAIT(24)
				_VOICE_PLAY( MONSNO_278, 0 )
				_VOICE_WAIT()
				_BALLOONWIN_OBJMSG_POS(msg_h04_poke_03,H04_POKE100_01,POS_DEFAULT)
				_MSGWIN_CLOSE()
				
				_TIME_WAIT(16)
				_OBJ_ANIME(H04_POKE100_01,anm_kyamome_wing)
				_OBJ_ANIME_WAIT()

    			//フェードイン
    			_BLACK_OUT()
    			_DISP_FADE_END_CHECK()
    			
    			_OBJ_DEL(H04_POKE100_01)
    			_FLAG_SET(FV_H04_POKE_01)
				
				_TIME_WAIT(24)
				_SE_PLAY(SEQ_SE_KAIDAN)
				_SE_WAIT()
				
			    //ちょっと待つ
			    _TIME_WAIT( 16 )
			    //フェードイン
			    _BLACK_IN()
			    _DISP_FADE_END_CHECK()
    			
    			_TIME_WAIT(16)
				_SYSWIN_MSG( msg_h04_sys_01, POS_DEFAULT )
				_MSGWIN_CLOSE()
				
				_ITEM_EVENT_KEYWAIT(ITEM_AKAIITO,1)
				
			ENDIF
			
			_FLAG_RESET(FE_H04_ITEMHAVING_01)
		
		ELSE			

			//手紙を見つけていない
			IF $WK_SCENE_H04_ITEMNUM == 0 THEN
				_BALLOONWIN_OBJMSG_POS(msg_h04_girl1_01,H04_GIRL1_01,POS_DEFAULT)
				_LAST_KEYWAIT()
				_MSGWIN_CLOSE()	
								
			//手紙を一枚見つけた
			ELSIF $WK_SCENE_H04_ITEMNUM == 1 THEN
				_BALLOONWIN_OBJMSG_POS(msg_h04_girl1_03,H04_GIRL1_01,POS_DEFAULT)
				_LAST_KEYWAIT()
				_MSGWIN_CLOSE()
						
			//手紙を二枚見つけた
			ELSIF $WK_SCENE_H04_ITEMNUM == 2 THEN
				_BALLOONWIN_OBJMSG_POS(msg_h04_girl1_04,H04_GIRL1_01,POS_DEFAULT)
				_LAST_KEYWAIT()
				_MSGWIN_CLOSE()

			//手紙を三枚見つけた（イベントをクリアしている）
			ELSIF $WK_SCENE_H04_ITEMNUM == 3 THEN
				_BALLOONWIN_OBJMSG_POS(msg_h04_girl1_06,H04_GIRL1_01,POS_DEFAULT)
				_LAST_KEYWAIT()
				_MSGWIN_CLOSE()
			
			ENDIF
		
		ENDIF

	ENDIF
	_CAMERA_WAIT_MOVE()	//カメラ移動待ち
	
	//自機にカメラを戻す
	_CAMERA_RECV_MOVE( 20 )	//_CAMERA_START()を使った時の座標に戻します。引数は移動にかかるフレーム数です
	_CAMERA_WAIT_MOVE()	//カメラ移動待ち
	_CAMERA_BIND()		//カメラバインド　主人公位置をカメラが追従するようになります
	_CAMERA_END()		//カメラ操作終了

EVENT_END


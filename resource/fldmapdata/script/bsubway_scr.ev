    ENDIF
  ENDIF
  
  IF $play_mode == BSWAY_MODE_MULTI || $play_mode == BSWAY_MODE_S_MULTI THEN
    _CALL sub_receipt_flag_set_geton_first  //AIマルチ　フラグ初期化
    

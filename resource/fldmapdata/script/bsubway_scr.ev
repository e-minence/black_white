  CASE DIR_DOWN THEN
    _OBJ_ANIME( objid, anm_receipt_demo_partner_in_anm1 )
  CASE DIR_LEFT THEN
    _OBJ_ANIME( objid, anm_receipt_demo_partner_in_anm2 )
  DEFAULT

//--------------------------------------------------------------
//  トレインタウン受付　話し掛け本体
//--------------------------------------------------------------
sub_bsw_ttown_receipt_talk:
{
  DEFINE_LOCAL pos_event
  
  $pos_event = $SCWK_TEMP0
  
  $msg_id = msg_bsw_ttown_01

  //戻るか？
  _BALLOONWIN_OBJMSG_POS( msg_id, C04R0109_RECEIPT, POS_DOWN )
  _YES_NO_WIN( ret )
  
  IF $ret == SCR_YES THEN
    $msg_id = msg_bsw_ttown_02 //ご乗車下さい
  ELSE
    $msg_id = msg_bsw_ttown_03 //またお越し下さい
    
    IF $pos_event == TRUE THEN
      $msg_id = msg_bsw_ttown_04
    ENDIF
  ENDIF
  
  _BALLOONWIN_OBJMSG_POS( msg_id, C04R0109_RECEIPT, POS_DOWN )
  
  IF $msg_id == msg_bsw_ttown_03 THEN
    _LAST_KEYWAIT()
  ENDIF
  
  _MSGWIN_CLOSE()
  
  IF $ret == SCR_YES THEN
    //トレインタウンの電車状態を決定する
    _GET_TRAIN_TOWN_COND( WK_OTHER_T05_TRAIN )
    _CALL sub_ttown_demo_start_train
    
    //マップ遷移
    _MAP_FADE_BLACK_OUT()
    _MAP_FADE_END_CHECK()
    _MAP_CHANGE_NO_FADE( ZONE_ID_T05, 22, 0, 54, DIR_LEFT )
    _MAP_FADE_BLACK_IN()
    _MAP_FADE_END_CHECK()
  ELSE
    _CALL sub_receipt_demo_leave_stopper
  ENDIF
}
_RET

//--------------------------------------------------------------
//  トレインタウン　電車発車デモ
//--------------------------------------------------------------
sub_ttown_demo_start_train:
{
  //自機高さを固定化
  _BSUBWAY_TOOL( BSWTOOL_OBJ_HEIGHT_OFF, MMDL_ID_PLAYER, 0, BSW_NULL )
  
  _PLAYER_DIR_GET( SCWK_ANSWER )
  
  //電車へ移動
  SWITCH $SCWK_ANSWER
  CASE DIR_UP THEN
    _OBJ_ANIME( C04R0109_RECEIPT, anm_receipt_demo_start_train_receipt1 )
    _OBJ_ANIME( MMDL_ID_PLAYER, anm_receipt_demo_start_train_jiki1 )
  CASE DIR_DOWN THEN
    _OBJ_ANIME( C04R0109_RECEIPT, anm_receipt_demo_start_train_receipt0 )
    _OBJ_ANIME( MMDL_ID_PLAYER, anm_receipt_demo_start_train_jiki0 )
  CASE DIR_LEFT THEN
    _OBJ_ANIME( C04R0109_RECEIPT, anm_receipt_demo_start_train_receipt3 )
    _OBJ_ANIME( MMDL_ID_PLAYER, anm_receipt_demo_start_train_jiki3 )
  DEFAULT
    _OBJ_ANIME( C04R0109_RECEIPT, anm_receipt_demo_start_train_receipt2 )
    _OBJ_ANIME( MMDL_ID_PLAYER, anm_receipt_demo_start_train_jiki2 )
  ENDSWITCH
  
  //OBJアニメ待ち
  _OBJ_ANIME_WAIT()
  
  //電車移動
  _BSUBWAY_TOOL( BSWTOOL_SET_TRAIN_ANM, BTRAIN_ANIME_TYPE_START_HOME, BSW_NULL, BSW_NULL )
  _SE_PLAY( SEQ_SE_BDEMO_01 ) //電車扉音
  _TIME_WAIT( 20 )
  _SE_PLAY( SEQ_SE_BDEMO_02 ) //電車発射音
  
  _TIME_WAIT( 30 ) //アニメを少し見せてフェードアウト
}
_RET

//--------------------------------------------------------------
//  トレインタウン　電車到着
//--------------------------------------------------------------
ev_bsw_ttown_demo_train_arrival:
{
  DEFINE_LOCAL objid_receipt
  
  $objid_receipt = C04R0109_RECEIPT
  
  //自機高さを固定化
  _BSUBWAY_TOOL( BSWTOOL_OBJ_HEIGHT_OFF, MMDL_ID_PLAYER, 0, BSW_NULL )
  
  //自機座標を入り口に
  _OBJ_POS_CHANGE( MMDL_ID_PLAYER, 16, 0, 13, DIR_DOWN )
  
  //自機非表示
  _BSUBWAY_TOOL( BSWTOOL_OBJ_VANISH, MMDL_ID_PLAYER, TRUE, BSW_NULL )
  
  //受付の向きを右に
  _OBJ_ANIME( objid_receipt, anm_receipt_demo_train_arrival_receipt0 )
  _OBJ_ANIME_WAIT()
  
  //マップフェードイン
  _MAP_FADE_BLACK_IN()
  _MAP_FADE_END_CHECK()
  
  //一寸待ち
  _TIME_WAIT( 30 )
  
  //受付アニメ
  _OBJ_ANIME( objid_receipt, anm_receipt_demo_train_arrival_receipt1 )

  //自機移動アニメ
  _OBJ_ANIME( MMDL_ID_PLAYER, anm_receipt_demo_train_arrival_jiki0 )

  //OBJアニメ待ち
  _OBJ_ANIME_WAIT()
  
  //自機高さを戻す
  _BSUBWAY_TOOL( BSWTOOL_OBJ_HEIGHT_ON, MMDL_ID_PLAYER, 0, BSW_NULL )
  
  _CHG_LOCAL_SCR
}
_RET


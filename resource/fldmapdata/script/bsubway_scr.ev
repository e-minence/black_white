//=====================================================================
//  受付　対戦キャンセル、負け戻り
//=====================================================================
//--------------------------------------------------------------
//  受付　チャレンジキャンセル、負け戻り
//--------------------------------------------------------------
ev_bsw_game_after_lose:
{
  //電車到着デモ
  _CALL sub_receipt_demo_train_arrival
  
  //フラグクリア
  _CALL sub_receipt_flag_clear
  
  //プレイモード取得
  _BSUBWAY_TOOL( BSWTOOL_GET_DATA_PLAY_MODE, BSW_NULL, BSW_NULL, play_mode )
  
  //負けた際のスコアセット
  _BSUBWAY_TOOL( BSWSUB_SET_LOSE_SCORE, BSW_NULL, BSW_NULL, BSW_NULL )
  
  //WiFiモードであればランク操作
  IF $play_mode == BSWAY_MODE_WIFI THEN
    _BSUBWAY_TOOL( BSWTOOL_WIFI_CHK_SEL_DL_BTL, BSW_NULL, BSW_NULL, ret )
    
    IF $ret == TRUE THEN //新規プレイである
      //ランクダウン処理
      _BSUBWAY_TOOL( BSWTOOL_DOWN_WIFI_RANK, BSW_NULL, BSW_NULL, ret )
      
      IF $ret == TRUE THEN //ランク下がった
        _BSUBWAY_TOOL( BSWTOOL_GET_WIFI_RANK, BSW_NULL, BSW_NULL, ret )
        //ランク文字列に
        _NUMBER( 0, ret, 2 )
        //ランクが下がった
        $SCWK_TEMP0 = msg_bsw_scr_79
        _CALL sub_bsw_common_bwin_receipt
        _MSGWIN_CLOSE()
      ENDIF
      
      //未アップロードフラグセット
      _BSUBWAY_TOOL( BSWTOOL_WIFI_SET_UPLOAD_FLAG, 1, BSW_NULL, BSW_NULL )
    ENDIF
  ENDIF
  
  //成績をレポートに
  _SYSWIN_MSG( msg_bsw_scr_36 , POS_DOWN )
  _REPORT_CALL( SCWK_ANSWER )
  _MSGWIN_CLOSE()
  
  //WiFiモードで新規プレイであれば成績アップロード
  IF $play_mode == BSWAY_MODE_WIFI THEN
    _BSUBWAY_TOOL( BSWTOOL_WIFI_CHK_SEL_DL_BTL, BSW_NULL, BSW_NULL, ret )
    
    IF $ret == TRUE THEN
      $SCWK_TEMP0 = msg_bsw_scr_100
      _CALL sub_bsw_common_bwin_receipt
      _YES_NO_WIN( ret )
      _MSGWIN_CLOSE()
      
      IF $ret == SCR_YES THEN //送る
        _CALL sub_common_wifi_upload_score
        
        IF $SCWK_ANSWER == TRUE THEN  //成績を送りました！
          $SCWK_TEMP0 = msg_bsw_scr_51
          _CALL sub_bsw_common_bwin_receipt
          _MSGWIN_CLOSE()
          
          //レポート
          _CALL sub_bsw_common_auto_save
        ENDIF
      ENDIF
    ENDIF
  ENDIF
  
  //またのご利用を
  _CALL sub_bsw_common_exit
  
  _CHG_LOCAL_SCR
}
_END


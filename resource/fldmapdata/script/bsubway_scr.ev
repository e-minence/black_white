  //場所変更　入り口へ
  _OBJ_POS_CHANGE( objid, 2, 1, 12, DIR_RIGHT )
  
  //自機話し掛け位置取得
  _CALL sub_bsw_common_check_jiki_talkpos
  
  //自機の隣まで歩くアニメ
  SWITCH $SCWK_TEMP2
  CASE DIR_UP THEN

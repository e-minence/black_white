//--------------------------------------------------------------
//  受付　挑戦処理　wifi
//--------------------------------------------------------------
sub_receipt_challenge_wifi:
{
  DEFINE_LOCAL dl_play
  DEFINE_LOCAL loop
  
  //wifi接続フラグをワークがクリアされる前に取得
  _BSUBWAY_TOOL( BSWTOOL_WIFI_CHK_SEL_DL_BTL, BSW_NULL, BSW_NULL, dl_play )
  
  IF $dl_play == TRUE THEN
    //DS本体 通信機能チェック

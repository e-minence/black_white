//--------------------------------------------------------------
//  受付　連勝中であれば連勝中メッセージ表示
//--------------------------------------------------------------
sub_bsw_common_renshou_msg:
{
  DEFINE_LOCAL count
  DEFINE_LOCAL comm_count
  DEFINE_LOCAL comm_mode
  
  _BSUBWAY_TOOL( BSWTOOL_GET_ZONE_PLAY_MODE, BSW_NULL, BSW_NULL, play_mode )
  
  IF $play_mode == BSWAY_MODE_MULTI || $play_mode == BSWAY_MODE_S_MULTI THEN
    //マルチトレイン
    IF $play_mode == BSWAY_MODE_MULTI THEN
      $comm_mode = BSWAY_MODE_COMM_MULTI
    ELSE
      $comm_mode = BSWAY_MODE_S_COMM_MULTI
    ENDIF
    
    //ステージ存在チェック
    _BSUBWAY_TOOL( BSWTOOL_CHK_EXIST_STAGE, play_mode, BSW_NULL, ret )
    _BSUBWAY_TOOL( BSWTOOL_CHK_EXIST_STAGE, comm_mode, BSW_NULL, comm_ret )
    
    //連勝数取得
    _BSUBWAY_TOOL( BSWTOOL_GET_SAVE_RENSHOU, play_mode, BSW_NULL, count )
    _BSUBWAY_TOOL( BSWTOOL_GET_SAVE_RENSHOU, comm_mode, BSW_NULL, comm_count )
    
    IF $count > 9999 THEN
      $count = 9999
    ENDIF
      
    IF $comm_count > 9999 THEN
      $comm_count = 9999
    ENDIF
    
    //ステージ数が存在しているのであれば連勝中メッセージ
    IF $ret == TRUE && $comm_ret == TRUE THEN //AI,通信マルチ共にあり
      IF $count != 0 && $comm_count != 0 THEN //どちらにも連勝数あり
        _PLAYER_NAME( 0 )
        _NUMBER( 1, count, 4 )
        _NUMBER( 2, comm_count, 4 )
        
        $SCWK_TEMP0 = msg_bsw_scr_106
        _CALL sub_bsw_common_bwin_receipt
      ELSIF $count != 0 THEN //AIマルチのみ連勝数あり
        _PLAYER_NAME( 0 )
        _NUMBER( 1, count, 4 )
        
        $SCWK_TEMP0 = msg_bsw_scr_104
        _CALL sub_bsw_common_bwin_receipt
      ELSIF $comm_count != 0 THEN //通信マルチのみ連勝数あり
        _PLAYER_NAME( 0 )
        _NUMBER( 1, comm_count, 4 )
        
        $SCWK_TEMP0 = msg_bsw_scr_105
        _CALL sub_bsw_common_bwin_receipt
      ENDIF
    ELSIF $ret == TRUE THEN //AIマルチのみ
      IF $count != 0 THEN
        _PLAYER_NAME( 0 )
        _NUMBER( 1, count, 4 )
        
        $SCWK_TEMP0 = msg_bsw_scr_104
        _CALL sub_bsw_common_bwin_receipt
      ENDIF
    ELSIF $comm_ret == TRUE THEN //通信マルチのみ
      IF $comm_count != 0 THEN
        _PLAYER_NAME( 0 )
        _NUMBER( 1, comm_count, 4 )
        
        $SCWK_TEMP0 = msg_bsw_scr_105
        _CALL sub_bsw_common_bwin_receipt
      ENDIF
    ENDIF
  ELSE //その他トレイン
    //ステージ数が存在しているのであれば連勝中メッセージ
    _BSUBWAY_TOOL( BSWTOOL_CHK_EXIST_STAGE, play_mode, BSW_NULL, ret )
    
    IF $ret == TRUE THEN
      _BSUBWAY_TOOL( BSWTOOL_GET_SAVE_RENSHOU, play_mode, BSW_NULL, count )
      
      IF $count != 0 THEN
        _PLAYER_NAME( 0 )
      
        IF $count > 9999 THEN
          $count = 9999
        ENDIF
        
        _NUMBER( 1, count, 4 )
        
        $SCWK_TEMP0 = msg_bsw_scr_08
        _CALL sub_bsw_common_bwin_receipt
      ENDIF
    ENDIF
  ENDIF
}
_RET


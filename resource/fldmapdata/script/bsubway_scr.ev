//--------------------------------------------------------------
//  受付　AIマルチのポケモン選択。
//  ポケモン選択後のパートナーロードも行う
//  @param SCWK_TEMP0 OBJ ID
//  @retval SCWK_ANSWER TRUE=選択 FALSE=やめる
//--------------------------------------------------------------
ev_bsw_select_ai_multi_pokemon:
{
  DEFINE_LOCAL obj_id
  
  $obj_id = $SCWK_TEMP0
  
  //どんなポケモンを参加させる？
  _BALLOONWIN_OBJMSG_MF( msg_bsw_scr_103, msg_bsw_scr_102, obj_id, POS_DOWN )
  
  _BMPMENU_INIT_RIGHT( MENU_X1, MENU_Y1, 0, 0, SCWK_ANSWER )
  _BMPMENU_MAKE_LIST( msg_bsw_scr_63, 0 ) //攻撃重視
  _BMPMENU_MAKE_LIST( msg_bsw_scr_64, 1 ) //防御重視
  _BMPMENU_MAKE_LIST( msg_bsw_scr_65, 2 ) //バランス重視
//  _BMPMENU_MAKE_LIST( msg_bsw_scr_41, 3 ) //やめる->なくなりました
  _BMPMENU_START()
  
  SWITCH $SCWK_ANSWER
  CASE 0 THEN //攻撃
    _BSUBWAY_TOOL( BSWSUB_SET_PARTNER_NO, 0, BSW_NULL, BSW_NULL )
    _BALLOONWIN_OBJMSG_MF( msg_bsw_scr_69, msg_bsw_scr_66, obj_id, POS_DOWN )
    $SCWK_ANSWER = TRUE
  CASE 1 THEN //防御
    _BSUBWAY_TOOL( BSWSUB_SET_PARTNER_NO, 1, BSW_NULL, BSW_NULL )
    _BALLOONWIN_OBJMSG_MF( msg_bsw_scr_70, msg_bsw_scr_67, obj_id, POS_DOWN )
    $SCWK_ANSWER = TRUE
  DEFAULT //バランス
    _BSUBWAY_TOOL( BSWSUB_SET_PARTNER_NO, 2, BSW_NULL, BSW_NULL )
    _BALLOONWIN_OBJMSG_MF( msg_bsw_scr_71, msg_bsw_scr_68, obj_id, POS_DOWN )
    $SCWK_ANSWER = TRUE
  /*
  DEFAULT //やめる
    $SCWK_ANSWER = FALSE
  */
  ENDSWITCH
  
  _MSGWIN_CLOSE()
  
  //セットされたパートナーナンバーからパートナーロード
  IF $SCWK_ANSWER == TRUE THEN
    _BSUBWAY_TOOL( BSWSUB_CHOICE_BTL_SEVEN, BSW_NULL, BSW_NULL, BSW_NULL )
  ENDIF
  
  _CHG_LOCAL_SCR
}
_RET


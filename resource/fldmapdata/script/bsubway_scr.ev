//======================================================================
//  バトルサブウェイ　受付話し掛け
//======================================================================
//--------------------------------------------------------------
//  受付話し掛け
//--------------------------------------------------------------
EVENT_START ev_bsw_receipt_talk
{
  DEFINE_LOCAL play_mode
  
  _BSUBWAY_WORK_CLEAR() //バトルサブウェイワーク　クリア
  
  _TALK_OBJ_START()
  
  //ゾーン別プレイモード取得
  _BSUBWAY_TOOL( BSWTOOL_GET_ZONE_PLAY_MODE, BSW_NULL, play_mode )
  
  //プレイモード別ようこそメッセージ
  _CALL sub_bsw_receipt_msg_greet
  
  //連勝中メッセージ表示
  _BSUBWAY_TOOL( BSWTOOL_GET_RENSHOU_CNT, play_mode, SCWK_ANSWER )
  
  IF $SCWK_ANSWER != 0 THEN
    _PLAYER_NAME( 0 )
    _NUMBER( 1, SCWK_ANSWER, 3 )
    _SYSWIN_MSG_DOWN( msg_bsw_scr_08 ) //連勝中です
    _AB_KEYWAIT()
  ENDIF
  
  //選択メニュー
  IF $play_mode == BSWAY_MODE_WIFI THEN //wifiメニュー
    _CALL sub_bsw_receipt_challenge_menu_wifi
  ELSE //通常メニュー
    _CALL sub_bsw_receipt_challenge_menu
  ENDIF
  
  IF $SCWK_ANSWER == 0 THEN //挑戦する
    _CALL sub_bsw_receipt_challenge
  ELSE //やめる
    _CALL sub_bsw_receipt_exit
  ENDIF
}
EVENT_END


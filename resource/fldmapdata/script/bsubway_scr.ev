//--------------------------------------------------------------
//  受付話し掛け　挑戦する
//--------------------------------------------------------------
sub_bsw_receipt_challenge:
{
  DEFINE_LOCAL play_mode
  
  //ゾーン別プレイモード取得
  _BSUBWAY_TOOL( BSWTOOL_GET_ZONE_PLAY_MODE, BSW_NULL, play_mode )
  
  //プレイモード別に選択処理
  SWITCH $play_mode
  CASE BSWAY_MODE_SINGLE THEN
    _CALL sub_bsw_receipt_single_double_select
  CASE BSWAY_MODE_DOUBLE THEN
    _CALL sub_bsw_receipt_single_double_select
  CASE BSWAY_MODE_MULTI THEN
    _CALL sub_bsw_receipt_multi_select
  CASE BSWAY_MODE_WIFI THEN
    _CALL sub_bsw_receipt_wifi_select
  ENDSWITCH
  
  _RET
}

//--------------------------------------------------------------
//  受付話し掛け　シングル、ダブル　選択
//--------------------------------------------------------------
sub_bsw_receipt_single_double_select:
{
  DEFINE_LOCAL play_mode
  
  //ゾーン別プレイモード取得
  _BSUBWAY_TOOL( BSWTOOL_GET_ZONE_PLAY_MODE, BSW_NULL, play_mode )
  
  //ワーク作成
  _BSUBWAY_WORK_CREATE( BSWAY_PLAY_NEW, play_mode )
  
  //手持ちポケモンチェック
  _BSUBWAY_TOOL( BSWTOOL_CHK_ENTRY_POKE_NUM, BSW_NULL, SCWK_ANSWER )
  
  IF $SCWK_ANSWER == 0 THEN //参加条件合わない
    _CALL sub_bsw_receipt_msg_poke_error
    _CALL sub_bsw_receipt_exit
    _RET
  ENDIF
  
  //それでは参加するポケモンを選んでください
  _SYSWIN_MSG_DOWN( msg_bsw_scr_23 )
  _AB_KEYWAIT()
  _SYSWIN_CLOSE()
  
  //ポケモン選択
  _BSUBWAY_TOOL( BSWSUB_SELECT_POKE, BSW_NULL, BSW_NULL )
  
  //ポケモン選択結果
  _BSUBWAY_TOOL( BSWSUB_GET_ENTRY_POKE, BSW_NULL, SCWK_ANSWER )
  
  IF $SCWK_ANSWER == 0 THEN
    _CALL sub_bsw_receipt_exit
    _RET
  ENDIF
   
  //フラグ初期化
  _CALL sub_bsw_receipt_set_train_flag_first
  
  //現在位置Push
  _BSUBWAY_TOOL( BSWTOOL_PUSH_NOW_LOCATION, BSW_NULL, BSW_NULL )
  
  //レポート
  _REPORT_EVENT_CALL( SCWK_ANSWER )
  
  IF $SCWK_ANSWER == 1 THEN //キャンセル
    _BSUBWAY_TOOL( BSWTOOL_POP_NOW_LOCATION, BSW_NULL, BSW_NULL )
    _CALL sub_bsw_receipt_init_flag
    _CALL sub_bsw_receipt_exit
    _RET
  ENDIF
  
  //回復
  _TEMOTI_POKEMON_KAIFUKU()
  
  //トレーナー抽選
  _BSUBWAY_TOOL( BSWSUB_BTL_TRAINER_SET, BSW_NULL, BSW_NULL )
  
  //乗車メッセージ
  _CALL sub_bsw_receipt_msg_geton_train
  
  //乗車アニメ
  _CALL sub_bsw_receipt_anm_geton_train
  
  //電車移動
  _CALL sub_bsw_receipt_demo_start_train
  
  //マップ遷移
  _CALL sub_bsw_receipt_map_train_change

  _RET
}

//--------------------------------------------------------------
//  受付話し掛け　マルチ　選択
//--------------------------------------------------------------
sub_bsw_receipt_multi_select:
{
  DEFINE_LOCAL play_mode
  
  //手持ちポケモンチェック
  _BSUBWAY_TOOL( BSWTOOL_CHK_ENTRY_POKE_NUM, BSW_NULL, SCWK_ANSWER )
  
  IF $SCWK_ANSWER == 0 THEN //参加条件合わない
    _CALL sub_bsw_receipt_msg_poke_error
    _CALL sub_bsw_receipt_exit
    _RET
  ENDIF
  
  $play_mode = BSWAY_MODE_MULTI
  
  //お友達と一緒に対戦？
  _SYSWIN_MSG_DOWN( msg_bsw_scr_48 )
  _YES_NO_WIN( SCWK_ANSWER )
  
  IF $SCWK_ANSWER == SCR_YES THEN
    $play_mode = BSWAY_MODE_COMM_MULTI
  ENDIF
  
  //ワーク作成
  _BSUBWAY_WORK_CREATE( BSWAY_PLAY_NEW, play_mode )
  
  //それでは参加するポケモンを選んでください
  _SYSWIN_MSG_DOWN( msg_bsw_scr_23 )
  _AB_KEYWAIT()
  _SYSWIN_CLOSE()
  
  //ポケモン選択
  _BSUBWAY_TOOL( BSWSUB_SELECT_POKE, BSW_NULL, BSW_NULL )
  
  //ポケモン選択結果
  _BSUBWAY_TOOL( BSWSUB_GET_ENTRY_POKE, BSW_NULL, SCWK_ANSWER )
  
  IF $SCWK_ANSWER == 0 THEN
    _CALL sub_bsw_receipt_exit
    _RET
  ENDIF
  
  //フラグ初期化
  _CALL sub_bsw_receipt_set_train_flag_first
  
  //現在位置Push
  _BSUBWAY_TOOL( BSWTOOL_PUSH_NOW_LOCATION, BSW_NULL, BSW_NULL )
  
  //レポート
  _REPORT_EVENT_CALL( SCWK_ANSWER )
  
  IF $SCWK_ANSWER == 1 THEN //キャンセル
    _BSUBWAY_TOOL( BSWTOOL_POP_NOW_LOCATION, BSW_NULL, BSW_NULL )
    _CALL sub_bsw_receipt_init_flag
    _CALL sub_bsw_receipt_exit
    _RET
  ENDIF
  
  //回復
  _TEMOTI_POKEMON_KAIFUKU()
  
  IF $play_mode == BSWAY_MODE_MULTI THEN //AIマルチ
    _CALL sub_bsw_receipt_multi_select_ai
  ELSE //通信マルチ
    _CALL sub_bsw_receipt_multi_select_comm
  ENDIF
  
  _RET
}

//--------------------------------------------------------------
//  受付話し掛け　AIマルチ 選択
//--------------------------------------------------------------
sub_bsw_receipt_multi_select_ai:
{
  //サポート登場アニメ
  
  //初遭遇か？
  _BSUBWAY_TOOL( BSWTOOL_GET_SUPPORT_ENCOUNT_END, BSW_NULL, SCWK_ANSWER )
  
  IF $SCWK_ANSWER == 0 THEN
    _SYSWIN_MSG_DOWN( msg_bsw_scr_57 ) //始めまして 性別切り替え必要
    _BSUBWAY_TOOL( BSWTOOL_SET_SUPPORT_ENCOUNT_END, BSW_NULL, BSW_NULL )
  ELSE
    _SYSWIN_MSG_DOWN( msg_bsw_scr_59 ) //またあったね 性別切り替え必要
  ENDIF
  
  _AB_KEYWAIT()
  
  //どんなポケモンを参加させる？ 性別切り替え必要
  _SYSWIN_MSG_DOWN( msg_bsw_scr_61 )
  
  _BMPMENU_INIT_EX( 1, 1, 0, 1, SCWK_ANSWER )
  _BMPMENU_MAKE_LIST( msg_bsw_scr_63, 0 ) //攻撃重視
  _BMPMENU_MAKE_LIST( msg_bsw_scr_64, 1 ) //防御重視
  _BMPMENU_MAKE_LIST( msg_bsw_scr_65, 2 ) //バランス重視
  _BMPMENU_MAKE_LIST( msg_bsw_scr_41, 3 ) //やめる
  _BMPMENU_START()
  
  SWITCH $SCWK_ANSWER
  CASE 0 THEN //攻撃
    _SYSWIN_MSG_DOWN( msg_bsw_scr_66 )  //性別切り替えが必要
  CASE 1 THEN //防御
    _SYSWIN_MSG_DOWN( msg_bsw_scr_67 )  //性別切り替えが必要
  CASE 2 THEN //バランス
    _SYSWIN_MSG_DOWN( msg_bsw_scr_68 )  //性別切り替えが必要
  CASE 3 THEN //やめる
    _SYSWIN_MSG_DOWN( msg_bsw_scr_72 ) //さよなら
    _AB_KEYWAIT()
    _CALL sub_bsw_receipt_exit //サポート退場アニメ
    _RET
  ENDSWITCH
  
  _AB_KEYWAIT()
  
  //乗車メッセージ
  _CALL sub_bsw_receipt_msg_geton_train
  
  //乗車アニメ
  _CALL sub_bsw_receipt_anm_geton_train
  
  //電車移動
  _CALL sub_bsw_receipt_demo_start_train
  
  //マップ遷移
  _CALL sub_bsw_receipt_map_train_change
  
  _RET
}

//--------------------------------------------------------------
//  受付話し掛け　通信マルチ 選択
//--------------------------------------------------------------
sub_bsw_receipt_multi_select_comm:
{
  DEFINE_LOCAL ret
  DEFINE_LOCAL connect_on
  
  $connect_on = FALSE
  
  //ワイヤレス通信開始します
  _SYSWIN_MSG_DOWN( msg_bsw_scr_test )
  _YES_NO_WIN( ret )
  
  IF $ret == SCR_YES THEN
    $connect_on = TRUE
  ENDIF
  
  IF $connect_on == TRUE THEN
    _FIELD_COMM_EXIT_EVENT_CALL( ret ) //通信切断
    
    IF $ret == SCR_FIELD_COMM_EXIT_CANCEL THEN
      $connect_on = FALSE
    ELSIF $ret == SCR_FIELD_COMM_EXIT_ERROR THEN
      $connect_on = FALSE
    ENDIF
  ENDIF
  
  //通信前のレポート
  IF $connect_on == TRUE THEN
    // レポートを書く
    _REPORT_EVENT_CALL_WIRELESS( ret )
    // 書き込みに失敗
    IF $ret != SCR_REPORT_OK THEN
      $connect_on = FALSE
    ENDIF
  ENDIF
  
  //親になるか子になるか
  IF $connect_on == TRUE THEN
    _SYSWIN_MSG_DOWN( 0 )
    _BMPMENU_INIT_EX( 1, 1, 0, 1, ret )
    _BMPMENU_MAKE_LIST( msg_bsw_scr_test, 0 ) //リーダー
    _BMPMENU_MAKE_LIST( msg_bsw_scr_test, 1 ) //グループ
    _BMPMENU_MAKE_LIST( msg_bsw_scr_test, 2 ) //やめる
    _BMPMENU_START()
    
    SWITCH $SCWK_ANSWER
    CASE 0 THEN //リーダー
      _CALL sub_bsw_receipt_multi_select_comm_connect_leader
      $connect_on = $SCWK_ANSWER
    CASE 1 THEN //グループ
      _CALL sub_bsw_receipt_multi_select_comm_connect_group
      $connect_on = $SCWK_ANSWER
    CASE 2 THEN //やめる
      $connect_on = FALSE
    ENDSWITCH
  ENDIF
  
  //互いの参加ポケモンチェック
  IF $connect_on == TRUE THEN
    //通信同期
    _BSUBWAY_TOOL( BSWSUB_COMM_TIMSYNC, BSW_COMM_MULTI_POKE_SELECT, BSW_NULL )
    //受信バッファクリア
    _BSUBWAY_TOOL( BSWSUB_RECV_BUF_CLEAR, BSW_NULL, BSW_NULL )
    //お互いが選んだポケモンデータを交換
    _BSUBWAY_TOOL( BSWSUB_COMM_SEND_BUF, 0, BSW_NULL )
    _BSUBWAY_TOOL( BSWSUB_COMM_RECV_BUF, 0, SCWK_ANSWER )
    
    SWITCH $SCWK_ANSWER
    CASE 1 THEN //同じポケモン 1
      _NOP
    CASE 2 THEN //同じポケモン 2
      _NOP
    CASE 3 THEN //同じポケモン 3
      _NOP
    ENDSWITCH
  ENDIF
  
  //トレーナーデータ
  IF $connect_on == TRUE THEN 
    //トレーナーセット
    _BSUBWAY_TOOL( BSWSUB_COMM_TIMSYNC, BSW_COMM_MULTI_BTL_TRAINER_SET, BSW_NULL )
    //親機なら対戦トレーナー抽選
    _BSUBWAY_TOOL( BSWSUB_COMM_GET_CURRENT_ID, BSW_NULL, SCWK_ANSWER )
    
    IF $SCWK_ANSWER == 0 THEN //親
        
    ELSE //子機は親からデータを受け取る
        
    ENDIF
  ENDIF
  
  //データセット後の通信同期とマップ遷移
  IF $connect_on == TRUE THEN
    //ワークセット
    //現在位置のプッシュ
    //オートセーブ
    //それではバトルルームへ
  ENDIF
  
  //接続したか
  IF $connect_on != TRUE THEN
    _CALL sub_bsw_receipt_exit
  ENDIF
  
  _RET
}

//--------------------------------------------------------------
//  受付話し掛け　通信マルチ　選択　リーダー接続
//  @retval SCWK_ANSWER FALSE=接続無し
//--------------------------------------------------------------
sub_bsw_receipt_multi_select_comm_connect_leader:
{
  //親参加メニュー
  _BSUBWAY_TOOL( BSWSUB_COMM_ENTRY_PARENT_MENU, BSW_NULL, SCWK_ANSWER )
  
  SWITCH $SCWK_ANSWER
  CASE BSWAY_COMM_PERENT_ENTRY_OK THEN //OK
    $SCWK_ANSWER = TRUE
  CASE BSWAY_COMM_PERENT_ENTRY_CANCEL THEN //キャンセル
    $SCWK_ANSWER = FALSE
  CASE BSWAY_COMM_PERENT_ENTRY_ERROR THEN //エラー
    $SCWK_ANSWER = FALSE
  ENDSWITCH
  
  _RET
}

//--------------------------------------------------------------
//  受付話し掛け　通信マルチ　選択　グループ接続
//  @retval SCWK_ANSWER FALSE=接続無し
//--------------------------------------------------------------
sub_bsw_receipt_multi_select_comm_connect_group:
{
  //子参加メニュー
  _BSUBWAY_TOOL( BSWSUB_COMM_ENTRY_CHILD_MENU, BSW_NULL, SCWK_ANSWER )
  
  SWITCH $SCWK_ANSWER
  CASE BSWAY_COMM_CHILD_ENTRY_OK THEN //OK
    $SCWK_ANSWER = TRUE
  CASE BSWAY_COMM_CHILD_ENTRY_NG THEN //NG
    $SCWK_ANSWER = FALSE
  ENDSWITCH
  

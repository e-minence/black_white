//--------------------------------------------------------------
//  受付　挑戦処理　通信マルチ
//--------------------------------------------------------------
sub_receipt_challenge_multi_comm:
{
  DEFINE_LOCAL irc
  DEFINE_LOCAL save_on
  DEFINE_LOCAL comm_id
  
  //まずフラグを何も無い状態へ
  _CALL sub_receipt_flag_clear
  
  _BSUBWAY_TOOL( BSWSUB_GET_COMM_IRC_FLAG, BSW_NULL, BSW_NULL, irc )
  
  IF $irc == TRUE THEN
    $SCWK_TEMP0 = msg_bsw_scr_90  //赤外線通信開始しますか
  ELSE
    $SCWK_TEMP0 = msg_bsw_scr_76  //ワイヤレス通信開始しますか
  ENDIF
  
  _CALL sub_bsw_common_bwin_receipt
  _YES_NO_WIN( ret )
  
  IF $ret == SCR_NO THEN //やめる
    _CALL sub_bsw_common_exit
    _RET
  ENDIF
  
  _MSGWIN_CLOSE()
  
  //フィールド通信切断
  _CALL sub_common_exit_field_comm
  
  IF $SCWK_ANSWER == FALSE THEN //切断失敗
    $SCWK_TEMP0 = msg_bsw_scr_77
    _CALL sub_bsw_common_bwin_receipt
    _CALL sub_bsw_common_exit
    _RET
  ENDIF
  
  //通信前レポート
  $save_on = TRUE

/*
  コンフィグのIRレポート設定は無視するように変更となった。
  
  IF $irc == TRUE THEN
    _GET_WIRELESS_SAVEMODE( ret ) //IRCレポート設定
    
    IF $ret == WIRELESS_SAVEMODE_OFF THEN
      $save_on = FALSE  //IRC通信前レポート無し
    ENDIF
  ENDIF
*/
  
  IF $save_on == TRUE THEN
    _REPORT_EVENT_CALL( ret )
  ELSE
    $ret = SCR_REPORT_OK
  ENDIF
  
  IF $ret != SCR_REPORT_OK THEN //レポートしない
    _CALL sub_bsw_common_exit
    _RET
  ENDIF
  
  IF $irc == TRUE THEN //IRC通信
    //irc接続
    _BSUBWAY_TOOL( BSWSUB_COMM_IRC_ENTRY, BSW_NULL, BSW_NULL, BSW_NULL )
    
    //結果
    _BSUBWAY_TOOL( BSWSUB_COMM_IRC_ENTRY_RESULT, BSW_NULL, BSW_NULL, ret )
    
    IF $ret != BSWAY_COMM_IRC_RESULT_OK THEN //エラー
      _REBOOT_BEACON_SEARCH() //通信切断後のビーコンサーチ再開
      _CALL sub_bsw_common_exit
      _RET
    ENDIF
    
    //通信開始
    _BSUBWAY_TOOL( BSWSUB_COMM_START, BSW_NULL, BSW_NULL, BSW_NULL )
  ELSE //ワイヤレス
    //親になるか子になるか
    $SCWK_TEMP0 = msg_bsw_scr_53
    _CALL sub_bsw_common_bwin_receipt
    
    _BMPMENU_INIT_RIGHT( MENU_X1, MENU_Y1, 0, 1, ret )
    _BMPMENU_MAKE_LIST( msg_bsw_scr_75, 1 ) //グループ
    _BMPMENU_MAKE_LIST( msg_bsw_scr_74, 0 ) //リーダー
    _BMPMENU_MAKE_LIST( msg_bsw_scr_41, 2 ) //やめる
    _BMPMENU_START()
    
    IF $ret == 2 || $ret == EV_WIN_B_CANCEL THEN //やめる
      _CALL sub_bsw_common_exit
      _RET
    ENDIF
    
    _MSGWIN_CLOSE()
     
    //通信開始
    _BSUBWAY_TOOL( BSWSUB_COMM_START, BSW_NULL, BSW_NULL, BSW_NULL )
    
    //リーダー、グループ別参加処理
    IF $ret == 0 THEN //リーダー
      _CALL sub_receipt_challenge_multi_comm_connect_leader
    ELSE //グループ
      _CALL sub_receipt_challenge_multi_comm_connect_group
    ENDIF
    
    IF $SCWK_ANSWER == FALSE THEN //失敗
      _BSUBWAY_TOOL( BSWSUB_COMM_CHK_NET_ERROR, BSW_NULL, BSW_NULL, comm_ret )
      
      IF $comm_ret == TRUE THEN //通信エラー
        _CALL sub_bsw_common_comm_error_end
        _CALL sub_bsw_common_exit_none_msg
      ELSE //非参加
        _CALL sub_bsw_common_comm_end
        _CALL sub_bsw_common_exit
      ENDIF
      
      _RET
    ENDIF
  ENDIF    
  
  //通信エラーチェック
  _BSUBWAY_TOOL( BSWSUB_COMM_CHK_NET_ERROR, BSW_NULL, BSW_NULL, comm_ret )
  
  IF $comm_ret == TRUE THEN
    _CALL sub_bsw_common_comm_error_end
    _CALL sub_bsw_common_exit_none_msg
    _RET
  ENDIF
  
  //通信待機中…
  _SYSWIN_MSG_ALLPUT( msg_bsw_scr_101, POS_DOWN )
  
  //通信中フラグON
  _BSUBWAY_TOOL( BSWSUB_SET_COMM_FLAG, TRUE, BSW_NULL, BSW_NULL )
  
  //受信バッファクリア
  _BSUBWAY_TOOL( BSWSUB_RECV_BUF_CLEAR, BSW_NULL, BSW_NULL, BSW_NULL )
  
  //互いのプレイモード確認前の通信同期
  _BSUBWAY_TOOL( BSWSUB_COMM_TIMSYNC, BSW_COMM_MULTI_RECEIPT_SEND_PLAY_MODE, BSW_NULL, comm_ret )
  
  IF $comm_ret == FALSE THEN
    _SYSWIN_CLOSE() //通信待機中…消し
    _CALL sub_bsw_common_comm_error_end
    _CALL sub_bsw_common_exit_none_msg
    _RET
  ENDIF
  
  //プレイモード送信
  _BSUBWAY_TOOL( BSWSUB_COMM_SEND_BUF, BSWAY_COMM_PLAY_MODE, BSW_NULL, BSW_NULL )
  //通信エラーチェック
  _BSUBWAY_TOOL( BSWSUB_COMM_CHK_NET_ERROR, BSW_NULL, BSW_NULL, comm_ret )
  
  IF $comm_ret == TRUE THEN
    _SYSWIN_CLOSE() //通信待機中…消し
    _CALL sub_bsw_common_comm_error_end
    _CALL sub_bsw_common_exit_none_msg
    _RET
  ENDIF
  
  //プレイモード受信
  _BSUBWAY_TOOL( BSWSUB_COMM_RECV_BUF, BSWAY_COMM_PLAY_MODE, BSW_NULL, ret )
  
  //通信エラーチェック
  _BSUBWAY_TOOL( BSWSUB_COMM_CHK_NET_ERROR, BSW_NULL, BSW_NULL, comm_ret )
  
  IF $comm_ret == TRUE THEN
    _SYSWIN_CLOSE() //通信待機中…消し
    _CALL sub_bsw_common_comm_error_end
    _CALL sub_bsw_common_exit_none_msg
    _RET
  ENDIF
  
  //プレイモードが違う
  IF $ret == FALSE THEN
    _SYSWIN_CLOSE() //通信待機中…消し

    $SCWK_TEMP0 = msg_bsw_scr_56
    _CALL sub_bsw_common_bwin_receipt
    _MSGWIN_CLOSE()
    
    //相手のメッセージ表示完了待ち
    _SYSWIN_MSG_ALLPUT( msg_bsw_scr_101, POS_DOWN )
    _TIME_WAIT( 15 )
    _BSUBWAY_TOOL( BSWSUB_COMM_TIMSYNC, BSW_COMM_MULTI_RECEIPT_PLAYMODE_ERROR_MSG_WAIT, BSW_NULL, comm_ret )
    _MSGWIN_CLOSE()
    
    IF $comm_ret == FALSE THEN
      _CALL sub_bsw_common_comm_error_end
      _CALL sub_bsw_common_exit_none_msg
    ELSE
      _CALL sub_bsw_common_comm_end
      _CALL sub_bsw_common_exit
    ENDIF
    
    _RET
  ENDIF
  
  //受信バッファクリア
  _BSUBWAY_TOOL( BSWSUB_RECV_BUF_CLEAR, BSW_NULL, BSW_NULL, BSW_NULL )
	
  //ポケモンデータ交換前の通信同期
  _BSUBWAY_TOOL( BSWSUB_COMM_TIMSYNC, BSW_COMM_MULTI_RECEIPT_POKE_SELECT, BSW_NULL, comm_ret )
  
  IF $comm_ret == FALSE THEN
    _SYSWIN_CLOSE() //通信待機中…消し
    _CALL sub_bsw_common_comm_error_end
    _CALL sub_bsw_common_exit_none_msg
    _RET
  ENDIF
  
  //お互いが選んだポケモンデータを交換　送信
  _BSUBWAY_TOOL( BSWSUB_COMM_SEND_BUF, BSWAY_COMM_PLAYER_DATA, BSW_NULL, BSW_NULL )
  //通信エラーチェック
  _BSUBWAY_TOOL( BSWSUB_COMM_CHK_NET_ERROR, BSW_NULL, BSW_NULL, comm_ret )
  
  IF $comm_ret == TRUE THEN
    _SYSWIN_CLOSE() //通信待機中…消し
    _CALL sub_bsw_common_comm_error_end
    _CALL sub_bsw_common_exit_none_msg
    _RET
  ENDIF
  
  //お互いが選んだポケモンデータを交換　受信
  _BSUBWAY_TOOL( BSWSUB_COMM_RECV_BUF, BSWAY_COMM_PLAYER_DATA, BSW_NULL, ret )
  
  //通信エラーチェック
  _BSUBWAY_TOOL( BSWSUB_COMM_CHK_NET_ERROR, BSW_NULL, BSW_NULL, comm_ret )
  
  IF $comm_ret == TRUE THEN
    _SYSWIN_CLOSE() //通信待機中…消し
    _CALL sub_bsw_common_comm_error_end
    _CALL sub_bsw_common_exit_none_msg
    _RET
  ENDIF
  
  //ポケモン被りで終了
  IF $ret != 0 THEN
    _SYSWIN_CLOSE() //通信待機中…消し
    
    IF $ret == 1 THEN //一体のみ
      _BSUBWAY_TOOL( BSWSUB_GET_MEMBER_POKENO, 0, BSW_NULL, ret )
      _MONS_NAME( 0, ret )
      $SCWK_TEMP0 = msg_bsw_scr_54
    ELSE //複数化振り
      _BSUBWAY_TOOL( BSWSUB_GET_MEMBER_POKENO, 0, BSW_NULL, ret )
      _MONS_NAME( 0, ret )
      _BSUBWAY_TOOL( BSWSUB_GET_MEMBER_POKENO, 1, BSW_NULL, ret )
      _MONS_NAME( 1, ret )
      $SCWK_TEMP0 = msg_bsw_scr_55
    ENDIF
    
    _CALL sub_bsw_common_bwin_receipt
    _MSGWIN_CLOSE()
    
    //相手のメッセージ表示完了待ち
    _SYSWIN_MSG_ALLPUT( msg_bsw_scr_101, POS_DOWN )
    _TIME_WAIT( 15 )
    _BSUBWAY_TOOL( BSWSUB_COMM_TIMSYNC, BSW_COMM_MULTI_RECEIPT_REGU_ERROR_MSG_WAIT, BSW_NULL, comm_ret )
    _MSGWIN_CLOSE()
    
    IF $comm_ret == FALSE THEN
      _CALL sub_bsw_common_comm_error_end
      _CALL sub_bsw_common_exit_none_msg
    ELSE
      _CALL sub_bsw_common_comm_timing_end
      _CALL sub_bsw_common_exit
    ENDIF
    
    _RET
  ENDIF
  
  //受信バッファクリア
  _BSUBWAY_TOOL( BSWSUB_RECV_BUF_CLEAR, BSW_NULL, BSW_NULL, BSW_NULL )
  
  //MYSTATUS送信
  _BSUBWAY_TOOL( BSWSUB_COMM_TIMSYNC, BSW_COMM_MULTI_RECEIPT_SEND_MYST, BSW_NULL, comm_ret )
  
  IF $comm_ret == FALSE THEN
    _SYSWIN_CLOSE() //通信待機中…消し
    _CALL sub_bsw_common_comm_error_end
    _CALL sub_bsw_common_exit_none_msg
    _RET
  ENDIF
  
  _BSUBWAY_TOOL( BSWSUB_COMM_SEND_BUF, BSWAY_COMM_MYSTATUS_DATA, BSW_NULL, BSW_NULL )
  
  //通信エラーチェック
  _BSUBWAY_TOOL( BSWSUB_COMM_CHK_NET_ERROR, BSW_NULL, BSW_NULL, comm_ret )
  
  IF $comm_ret == TRUE THEN
    _SYSWIN_CLOSE() //通信待機中…消し
    _CALL sub_bsw_common_comm_error_end
    _CALL sub_bsw_common_exit_none_msg
    _RET
  ENDIF
  
  //MYSTATUS受信
  _BSUBWAY_TOOL( BSWSUB_COMM_RECV_BUF, BSWAY_COMM_MYSTATUS_DATA, BSW_NULL, BSW_NULL )
  
  //通信エラーチェック
  _BSUBWAY_TOOL( BSWSUB_COMM_CHK_NET_ERROR, BSW_NULL, BSW_NULL, comm_ret )
  
  IF $comm_ret == TRUE THEN
    _SYSWIN_CLOSE() //通信待機中…消し
    _CALL sub_bsw_common_comm_error_end
    _CALL sub_bsw_common_exit_none_msg
    _RET
  ENDIF
  
  //受信バッファクリア
  _BSUBWAY_TOOL( BSWSUB_RECV_BUF_CLEAR, BSW_NULL, BSW_NULL, BSW_NULL )
  
  //トレーナーセット開始
  _BSUBWAY_TOOL( BSWSUB_COMM_TIMSYNC, BSW_COMM_MULTI_RECEIPT_BTL_TRAINER_SET, BSW_NULL, comm_ret )
  
  IF $comm_ret == FALSE THEN
    _SYSWIN_CLOSE() //通信待機中…消し
    _CALL sub_bsw_common_comm_error_end
    _CALL sub_bsw_common_exit_none_msg
    _RET
  ENDIF
  
  //通信相手をユニオン知り合いグループとして登録
  _BSUBWAY_TOOL( BSWSUB_COMM_SET_UNION_ACQ, BSW_NULL, BSW_NULL, BSW_NULL )
  
  //親機なら対戦トレーナー抽選
  _BSUBWAY_TOOL( BSWSUB_COMM_GET_CURRENT_ID, BSW_NULL, BSW_NULL, comm_id )
  
  IF $comm_id == 0 THEN //親機なら対戦トレーナー抽選
    _BSUBWAY_TOOL( BSWSUB_BTL_TRAINER_SET, BSW_NULL, BSW_NULL, BSW_NULL )
  ENDIF
  
  //トレーナーデータ受送信開始
  _BSUBWAY_TOOL( BSWSUB_COMM_TIMSYNC, BSW_COMM_MULTI_RECEIPT_SEND_TRDATA, BSW_NULL, comm_ret )
  
  IF $comm_ret == FALSE THEN
    _SYSWIN_CLOSE() //通信待機中…消し
    _CALL sub_bsw_common_comm_error_end
    _CALL sub_bsw_common_exit_none_msg
    _RET
  ENDIF
  
  IF $comm_id == 0 THEN  
    //子機に選んだデータを送信
    _BSUBWAY_TOOL( BSWSUB_COMM_SEND_BUF, BSWAY_COMM_TR_DATA, BSW_NULL, ret )
  ELSE //子機は親からデータを受け取る
    _BSUBWAY_TOOL( BSWSUB_COMM_RECV_BUF, BSWAY_COMM_TR_DATA, BSW_NULL, LOCALWORK0 ) 
  ENDIF
  
  //通信エラーチェック
  _BSUBWAY_TOOL( BSWSUB_COMM_CHK_NET_ERROR, BSW_NULL, BSW_NULL, comm_ret )
  
  IF $comm_ret == TRUE THEN
    _SYSWIN_CLOSE() //通信待機中…消し
    _CALL sub_bsw_common_comm_error_end
    _CALL sub_bsw_common_exit_none_msg
    _RET
  ENDIF
  
  //トレーナーデータ送受信完了待ち
  _BSUBWAY_TOOL( BSWSUB_COMM_TIMSYNC, BSW_COMM_MULTI_RECEIPT_SEND_TRDATA_END, BSW_NULL, comm_ret )
  
  IF $comm_ret == FALSE THEN
    _SYSWIN_CLOSE() //通信待機中…消し
    _CALL sub_bsw_common_comm_error_end
    _CALL sub_bsw_common_exit_none_msg
    _RET
  ENDIF
 
  _SYSWIN_CLOSE() //通信待機中…消し
  _TIME_WAIT( 30 )
  
  //現在位置セーブ
  _BSUBWAY_TOOL( BSWTOOL_PUSH_NOW_LOCATION, BSW_NULL, BSW_NULL, BSW_NULL )
  
  //フラグ初期化
  _CALL sub_receipt_flag_set_geton_first
  
  //オートセーブ
  _CALL sub_bsw_common_auto_save
  
  //乗車メッセージ
  _CALL sub_receipt_msg_geton_train
  
  //通信待機中…
  _SYSWIN_MSG_ALLPUT( msg_bsw_scr_101, POS_DOWN )
  _TIME_WAIT( 15 )
  
  //通信同期待ち
  _BSUBWAY_TOOL( BSWSUB_COMM_TIMSYNC, BSW_COMM_MULTI_RECEIPT_AUTO_SAVE, BSW_NULL, comm_ret )
  
  _MSGWIN_CLOSE()

  IF $comm_ret == FALSE THEN
    _CALL sub_bsw_common_comm_error_end
    _CALL sub_bsw_common_exit_none_msg
    _RET
  ENDIF
  
  //ゲーム開始スコア設定
  _BSUBWAY_TOOL( BSWSUB_GAME_START_SCORE, BSW_NULL, BSW_NULL, BSW_NULL )
  
  //バトルサブウェイ挑戦中のビーコンセット
  _BEACON_SET_REQ_SUBWAY_START()
  
  //デモ　出発
  _CALL sub_receipt_demo_start_train
  
  //マップ遷移
  _CALL sub_common_map_change_train
}
_RET

//--------------------------------------------------------------
//  受付　挑戦処理　通信マルチ　リーダー接続
//  @retval SCWK_ANSWER FALSE=接続無し
//--------------------------------------------------------------
sub_receipt_challenge_multi_comm_connect_leader:
{
  //親参加メニュー
  _BSUBWAY_TOOL( BSWSUB_COMM_ENTRY_PARENT_MENU, BSW_NULL, BSW_NULL, SCWK_ANSWER )
  
  SWITCH $SCWK_ANSWER
  CASE BSWAY_COMM_PERENT_ENTRY_OK THEN //OK
    $SCWK_ANSWER = TRUE
  CASE BSWAY_COMM_PERENT_ENTRY_CANCEL THEN //キャンセル
    $SCWK_ANSWER = FALSE
  CASE BSWAY_COMM_PERENT_ENTRY_ERROR THEN //エラー
    $SCWK_ANSWER = FALSE
  DEFAULT
    $SCWK_ANSWER = FALSE
  ENDSWITCH
}
_RET


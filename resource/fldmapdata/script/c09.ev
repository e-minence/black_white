/************************************************************/
EVENT_START	ev_pos_c09_forbidden
	//ベテラン（中央）：！マーク
	_OBJ_ANIME( C09_VETERANM_01, anm_gyoe )
	_OBJ_ANIME_WAIT()
	
	//ベテラン：主人公を見る
	_OBJ_ANIME( C09_VETERANM_01, anm_stay_walk_r )

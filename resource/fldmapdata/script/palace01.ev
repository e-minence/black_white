/**************************************************************/
/*  パレスじいさん 話しかけ [100213斉藤マ]                    */
/**************************************************************/
EVENT_START ev_palace01_oldman1_01
	_TALK_OBJ_START()
	
	//初回会話分岐
	IF FLAG_OFF( FE_PALACE01_OLDMANTALK) THEN
		//初めてなら
		_BALLOONWIN_OBJMSG_POS( plc_oldman1_01_01, PALACE01_OLDMAN1_01, POS_DOWN )
		_MSGWIN_CLOSE()
		
		//デルダマ＊５入手
		_ITEM_EVENT_KEYWAIT( ITEM_DERUDAMA, 5 )
		
		//========================================//
		//初回会話済み
		_FLAG_SET( FE_PALACE01_OLDMANTALK )
		//========================================//
		
	ELSE
		//２回目以降
		_BALLOONWIN_OBJMSG_POS( plc_oldman1_01_04, PALACE01_OLDMAN1_01, POS_DOWN )
		
	ENDIF
	
	//パレス質問メニューへ
	_CALL	ev_oldman1_guide

EVENT_END


//パレス質問メニュー（共通）
ev_oldman1_guide:
	{
	DEFINE_LOCAL  lwk_loop
	DEFINE_LOCAL  lwk_bmpans
	
	WHILE $lwk_loop != 555
	
		//パレスに興味があるのか？
		_BALLOONWIN_OBJMSG_POS( plc_oldman1_01_02, PALACE01_OLDMAN1_01, POS_DOWN )
	
		//メニュー作成
		_BMPMENU_INIT_RIGHT( MENU_X1, MENU_Y1, 0, 1, lwk_bmpans )
		//リスト追加
		_BMPMENU_MAKE_LIST( plc_oldman1_01_07, 0 )	//パレスとは
		_BMPMENU_MAKE_LIST( plc_oldman1_01_08, 1 )	//アクセスとは
		_BMPMENU_MAKE_LIST( plc_oldman1_01_09, 10 )	//やめる
		//メニュー表示
		_BMPMENU_START()
		
		SWITCH $lwk_bmpans
		CASE 0 THEN
			//パレスとは
			_BALLOONWIN_OBJMSG_POS( plc_oldman1_01_05, PALACE01_OLDMAN1_01, POS_DOWN )
		CASE 1 THEN
			//アクセスとは
			_BALLOONWIN_OBJMSG_POS( plc_oldman1_01_06, PALACE01_OLDMAN1_01, POS_DOWN )
		DEFAULT
			//やめる
			$lwk_loop = 555
		ENDSWITCH
	
	ENDWHILE
	
	}
	
	//終了メッセージ
	_BALLOONWIN_OBJMSG_POS( plc_oldman1_01_03, PALACE01_OLDMAN1_01, POS_DOWN )
	_LAST_KEYWAIT()
	_MSGWIN_CLOSE()
	
_RET


	//パレスじじい：下を向いて
	_OBJ_ANIME( PALACE01_OLDMAN1_01, anm_stay_walk_d )
	_OBJ_ANIME_WAIT()
	
	//ここはイッシュの中心にある…
	_BALLOONWIN_OBJMSG( plc_oldman1_01_11, PALACE01_OLDMAN1_01 )

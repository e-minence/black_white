	_OBJ_ANIME( PALACE01_OLDMAN1_01, anm_oldman1_look_01 )
	_OBJ_ANIME_WAIT()
	
	//パレスじじい：主人公横へ
	_OBJ_ANIME( PALACE01_OLDMAN1_01, anm_oldman1_move_01 )

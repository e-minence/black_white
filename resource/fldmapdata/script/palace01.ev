		_MSGWIN_CLOSE()
	ELSE
		//ミッションを受けたことがある
		
		//だれか世界に入り込み……
//		_BALLOONWIN_OBJMSG_POS( plc_oldman1_01_04, PALACE01_OLDMAN1_01, POS_DOWN )
		
		//パレス質問メニューへ
		_CALL	ev_oldman1_guide

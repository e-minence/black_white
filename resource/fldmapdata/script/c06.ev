/**************************************************************/
/*  C06 博士とフウロのPOSイベントスクリプト                   */
/**************************************************************/
EVENT_START    ev_pos_c06_hakase1_01
	
	DEFINE_LOCAL	LWK_GIAN_CHECK
	DEFINE_LOCAL	LWK_HOKAKU_COUNT
	DEFINE_LOCAL	LWK_YES
	DEFINE_LOCAL	LWK_PLY_X
	DEFINE_LOCAL	LWK_PLY_Z

	//主人公位置の座標取得
	_PLAYER_POS_GET( LWK_PLY_X, LWK_PLY_Z )
	
	$LWK_YES = 1

	IF $LWK_PLY_Z == 296 THEN
		_OBJ_POS_CHANGE( C06_LEADER6_01, 77, 0, 295, DIR_DOWN )
		_OBJ_POS_CHANGE( C06_HAKASE1_01, 77, 0, 296, DIR_DOWN )
	ELSIF $LWK_PLY_Z == 297 THEN
		_OBJ_POS_CHANGE( C06_LEADER6_01, 77, 0, 296, DIR_DOWN )
		_OBJ_POS_CHANGE( C06_HAKASE1_01, 77, 0, 297, DIR_DOWN )
	ELSIF $LWK_PLY_Z == 298 THEN
		_OBJ_POS_CHANGE( C06_LEADER6_01, 77, 0, 297, DIR_DOWN )
		_OBJ_POS_CHANGE( C06_HAKASE1_01, 77, 0, 298, DIR_DOWN )
	ENDIF

	//ギアンを捕まえているかのチェック
	//511はギアンのポケモンナンバー
	_GET_ZUKAN_FLAG( ZUKANCTRL_MODE_GET, 511, LWK_GIAN_CHECK )
	
	//捕まえたポケモンの数をカウント
	_GET_ZUKAN_COUNT( ZUKANCTRL_MODE_GET, LWK_HOKAKU_COUNT )

	//主人公が博士とジムリーダーに気づく
	_OBJ_ANIME( MMDL_ID_PLAYER,anm_hakase1_gyoe)
	_OBJ_ANIME_WAIT()
	
	//博士とジムリーダーが歩いてくる
	_OBJ_ANIME( C06_LEADER6_01,anm_leader06_kuru_01)
	_OBJ_ANIME( C06_HAKASE1_01,anm_hakase1_kuru_01)
	_OBJ_ANIME_WAIT()

	//博士とジムリーダーが主人公に気づく
	_OBJ_ANIME( C06_HAKASE1_01,anm_hakase1_gyoe)
	_OBJ_ANIME_WAIT()
	
	//博士が主人公に隣接
	_OBJ_ANIME( C06_HAKASE1_01,anm_hakase1_kuru_02)
	_OBJ_ANIME_WAIT()

	//プレイヤーの名前の格納
	_PLAYER_NAME(0)
	
	//博士が主人公に話しかける
	//博士:おお！　おまえさん！　[1:00:トレーナー名:0]だろ！！
		
	_BALLOONWIN_OBJMSG( msg_c06_hakase1_01, C06_HAKASE1_01)
	_BALLOONWIN_CLOSE()
	
	//捕獲数を格納
	_NUMBER( 0, LWK_HOKAKU_COUNT, 3 )
	
	//博士が主人公に話しかける
	//博士:ちょいと　ずかんを　みせてもらうよ
	_BALLOONWIN_OBJMSG( msg_c06_hakase1_02, C06_HAKASE1_01)
	_BALLOONWIN_CLOSE()
		
	//ギアンがいるかどうかで、分岐	
	//ギアンを捕まえている？
	IF $LWK_GIAN_CHECK ==  LWK_YES	THEN
	
		//捕まえている
		_BALLOONWIN_OBJMSG( msg_c06_hakase1_03, C06_HAKASE1_01)
		_BALLOONWIN_CLOSE()
	
	ELSE
		
		//捕まえていない
		_BALLOONWIN_OBJMSG( msg_c06_hakase1_04, C06_HAKASE1_01)
		_BALLOONWIN_CLOSE()
	
	ENDIF
	
	//博士が主人公に話しかける
	//博士:おぉ　すまない！　ちと　こうふん　してな
	_BALLOONWIN_OBJMSG( msg_c06_hakase1_05, C06_HAKASE1_01)
	_BALLOONWIN_CLOSE()
	
	//【仮】ポケモン図鑑がパワーアップする処理
	//博士が主人公に話しかける
	//博士:では　であいを　きねんして　おまえさんの　ポケモンずかんを
	_BALLOONWIN_OBJMSG( msg_c06_hakase1_06, C06_HAKASE1_01)
	_BALLOONWIN_CLOSE()
	
	//博士が主人公に話しかける
	//博士:アララギ『よし！　これで　ポケモンの　みた　すがたなら
	_BALLOONWIN_OBJMSG( msg_c06_hakase1_07, C06_HAKASE1_01)
	_BALLOONWIN_CLOSE()
	
	//ジムリーダーが主人公に隣接
	_OBJ_ANIME( C06_LEADER6_01,anm_leader06_kuru_02)
	_OBJ_ANIME_WAIT()
	
	//ジムリーダーが博士を向く
	_OBJ_ANIME( C06_LEADER6_01,anm_leader06_muku_01)
	_OBJ_ANIME_WAIT()
	
	//ジムリーダーフウロが喋る
	//フウロ:？？？『アララギはかせ　そちらの　トレーナーは？
	_BALLOONWIN_OBJMSG( msg_c06_leader6_01, C06_LEADER6_01)
	_BALLOONWIN_CLOSE()
	
	//博士がフウロを向く
	_OBJ_ANIME( C06_HAKASE1_01,anm_hakase1_muku_01)
	_OBJ_ANIME_WAIT()
	
	//プレイヤーの名前の格納
	_PLAYER_NAME(0)
	
	//博士がフウロに喋る
	//博士:『おお！　おう！　すまんすまん
	_BALLOONWIN_OBJMSG( msg_c06_hakase1_08, C06_HAKASE1_01)
	_BALLOONWIN_CLOSE()
	
	//ジムリーダーが主人公を向く
	_OBJ_ANIME( C06_LEADER6_01,anm_leader06_muku_02)
	_OBJ_ANIME_WAIT()
	
	//ジムリーダーフウロが喋る
	//フウロ:フウロ『わあ！　だったら　ジムに　ちょうせん　するよね！
	_BALLOONWIN_OBJMSG( msg_c06_leader6_02, C06_LEADER6_01)
	_BALLOONWIN_CLOSE()	
	
	//博士が主人公を向く
	_OBJ_ANIME( C06_HAKASE1_01,anm_hakase1_muku_02)
	_OBJ_ANIME_WAIT()
	
	//博士がフウロに喋る
	//博士:『そうだな　[1:00:トレーナー名:0]くん
	_BALLOONWIN_OBJMSG( msg_c06_hakase1_09, C06_HAKASE1_01)
	_BALLOONWIN_CLOSE()
	
	//博士がフウロに喋る
	//博士:『ではな　フウロくん　また　なにかあったら　たのむぞ
	_BALLOONWIN_OBJMSG( msg_c06_hakase1_10, C06_HAKASE1_01)
	_BALLOONWIN_CLOSE()

	//ジムリーダーが博士を向く
	_OBJ_ANIME( C06_LEADER6_01,anm_leader06_muku_01)
	_OBJ_ANIME_WAIT()
	
	//ジムリーダーフウロが喋る
	//フウロ:『……はかせ　アタシの　ひこうきは　かもつき！
	_BALLOONWIN_OBJMSG( msg_c06_leader6_03, C06_LEADER6_01)
	_BALLOONWIN_CLOSE()	

	//博士がフウロを向く
	_OBJ_ANIME( C06_HAKASE1_01,anm_hakase1_muku_01)
	_OBJ_ANIME_WAIT()
	
	//博士がフウロに喋る
	//博士:『おいおい　かわいい　かおして
	_BALLOONWIN_OBJMSG( msg_c06_hakase1_11, C06_HAKASE1_01)
	_BALLOONWIN_CLOSE()
	
	//博士が画面外に移動
	
	IF $LWK_PLY_Z == 296 THEN
		_OBJ_ANIME( C06_HAKASE1_01,anm_hakase1_saru_01_posz296)
		_TIME_WAIT  ( 32 )
		_OBJ_ANIME( MMDL_ID_PLAYER,anm_player_muku_01_posz296)
	
	ELSIF $LWK_PLY_Z == 297 THEN
		_OBJ_ANIME( C06_HAKASE1_01,anm_hakase1_saru_01_posz297)
		_TIME_WAIT  ( 32 )
		_OBJ_ANIME( MMDL_ID_PLAYER,anm_player_muku_01_posz297)
	
	ELSIF $LWK_PLY_Z == 298 THEN
	
		_OBJ_ANIME( C06_HAKASE1_01,anm_hakase1_saru_01_posz298)
		_TIME_WAIT  ( 32 )
		_OBJ_ANIME( MMDL_ID_PLAYER,anm_player_muku_01_posz298)
	ENDIF
	
	//ジムリーダーが博士を向く
	//主人公が博士を向く

	_OBJ_ANIME( C06_LEADER6_01,anm_leader06_muku_03)
	_OBJ_ANIME_WAIT()
	
	//主人公がジムリーダーを向く
	_OBJ_ANIME( MMDL_ID_PLAYER,anm_player_muku_02)
	_OBJ_ANIME_WAIT()
	
	//ジムリーダーフウロが喋る
	//フウロ:フウロ『……ったく！　あんな　いいかげんな　かんじで
	_BALLOONWIN_OBJMSG( msg_c06_leader6_04, C06_LEADER6_01)
	_BALLOONWIN_CLOSE()	
	
	//ジムリーダーが主人公を向く
	_OBJ_ANIME( C06_LEADER6_01,anm_leader06_muku_02)
	_OBJ_ANIME_WAIT()
	
	//ジムリーダーフウロが喋る
	//フウロ:さてと……　[1:00:トレーナー名:0]くん　だっけ！
	_BALLOONWIN_OBJMSG( msg_c06_leader6_05, C06_LEADER6_01)
	_BALLOONWIN_CLOSE()		
	
	//ジムリーダーが画面外に移動
	_OBJ_ANIME( C06_LEADER6_01,anm_leader06_saru_01)
	_OBJ_ANIME_WAIT()
	
	//博士とジムリーダーの姿を消す
	_OBJ_DEL( C06_LEADER6_01 )
	_OBJ_DEL( C06_HAKASE1_01 )

	//===============フラグ操作===============//
	//POSイベントを無効に
	$WK_SCENE_C06 = 1

	//博士とジムリーダーを消す
	_FLAG_SET( FV_C06_ZUKANCHK_01 )

	//========================================//

EVENT_END


/*     博士によるポケセン案内イベント                         */
/**************************************************************/
ev_t02pc0101_doctor_guide:
	_OBJ_ANIME MMDL_ID_PLAYER,anime_t02pc0101_guide00
	_OBJ_ANIME_WAIT

	_TALK_OBJ_PAUSE_ALL
	_TURN_HERO_SITE
	_TALKWIN_OPEN
	_TALKMSG_ALLPUT msg_t02pc0101_hakase2_01 //入ってすぐ
	_AB_KEYWAIT
	_TALKWIN_CLOSE

	_OBJ_ANIME T02PC0101_DOCTOR,anime_t02pc0101_guide01
	_OBJ_ANIME MMDL_ID_PLAYER,anime_t02pc0101_guide01a
	_OBJ_ANIME_WAIT

	_TURN_HERO_SITE
	_TALKWIN_OPEN
	_TALKMSG_ALLPUT msg_t02pc0101_hakase2_02 //カウンター前で
	_AB_KEYWAIT
	_TALKWIN_CLOSE

	_OBJ_ANIME T02PC0101_DOCTOR,anime_t02pc0101_guide02
	_OBJ_ANIME MMDL_ID_PLAYER,anime_t02pc0101_guide02a
	_OBJ_ANIME_WAIT

	_TURN_HERO_SITE
	_TALKWIN_OPEN
	_TALKMSG_ALLPUT msg_t02pc0101_hakase2_04 //パソコン前で
	_AB_KEYWAIT
  	_TALKWIN_CLOSE

	_OBJ_ANIME T02PC0101_DOCTOR,anime_t02pc0101_guide03
	_OBJ_ANIME MMDL_ID_PLAYER,anime_t02pc0101_guide03a
	_OBJ_ANIME_WAIT

	_TURN_HERO_SITE
	_TALKWIN_OPEN
	_TALKMSG_ALLPUT msg_t02pc0101_hakase2_06 //ショップ前で
	_AB_KEYWAIT
  	_TALKWIN_CLOSE

	_OBJ_ANIME MMDL_ID_PLAYER,anime_t02pc0101_guide03b
	_OBJ_ANIME_WAIT

	_TALKWIN_OPEN
	_TALKMSG_ALLPUT msg_t02pc0101_hakase2_07 //ショップ前で
	_AB_KEYWAIT
  	_TALKWIN_CLOSE

	_OBJ_ANIME T02PC0101_DOCTOR,anime_t02pc0101_guide04
	_OBJ_ANIME_WAIT
//博士の動作モデルを削除する処理
	_OBJ_DEL T02PC0101_DOCTOR

  _OBJ_PAUSE_CLEAR_ALL
  _LDVAL SVSCRWK_START,1
  _LDVAL WK_0907ROM04,1

  _END


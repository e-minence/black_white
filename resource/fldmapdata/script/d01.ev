/**************************************************************/
/*  D01 サポートとジムリーダーの出会い　　                    */
/**************************************************************/
EVENT_START    ev_pos_d01_support_01

	//サポート主人公に駆け寄って話をする
	_OBJ_ANIME(D01_SUPPORT,anm_d01_support_01)
	_OBJ_ANIME_WAIT()
	_BALLOONWIN_OBJMSG_OPEN(mes_d01_white_01,D01_SUPPORT)
	_AB_KEYWAIT()
	_BALLOONWIN_CLOSE()
	
	//サポート何かに気づく
	_OBJ_ANIME(D01_SUPPORT,anm_d01_support_02)
	_OBJ_ANIME_WAIT()
	_BALLOONWIN_OBJMSG_OPEN(mes_d01_white_02,D01_SUPPORT)
	_AB_KEYWAIT()
	_BALLOONWIN_CLOSE()
	
	//二人で下に移動
	_OBJ_ANIME(D01_SUPPORT,anm_d01_support_03)
	_OBJ_ANIME(MMDL_ID_PLAYER,anm_d01_support_03)
	_OBJ_ANIME_WAIT()
	
	//ジムリーダー独り言
	_BALLOONWIN_OBJMSG_OPEN(mes_d01_leader1_01,D01_GYMLD)
	_AB_KEYWAIT()
	_BALLOONWIN_CLOSE()
	
	//ジムリーダー二人に気づいて去る
	_OBJ_ANIME(D01_GYMLD,anm_d01_gymld_01)
	_OBJ_ANIME_WAIT()
	_BALLOONWIN_OBJMSG_OPEN(mes_d01_leader1_02,D01_GYMLD)
	_AB_KEYWAIT()
	_BALLOONWIN_CLOSE()
	_OBJ_ANIME(D01_GYMLD,anm_d01_gymld_02)
	_OBJ_ANIME_WAIT()
	
	//サポート、主人公を見て話す
	_OBJ_ANIME(D01_SUPPORT,anm_d01_support_04)
	_OBJ_ANIME(MMDL_ID_PLAYER,anm_d01_player_01)
	_OBJ_ANIME_WAIT()
	_BALLOONWIN_OBJMSG_OPEN(mes_d01_white_03,D01_SUPPORT)
	_AB_KEYWAIT()
	_BALLOONWIN_CLOSE()
	_OBJ_DEL(D01_GYMLD)
	_FLAG_SET(FV_D01_GYM_LEADER)
	$WK_SCENE_D01 = 1

EVENT_END


/*     ジム前のサングラス男  ジムバッジ入手前                 */
/**************************************************************/
EVENT_START		ev_c01gym0101_sunglasses_01
	
	//分岐：ジムバッジ取得しているか、いないか
	_GET_BADGE_FLAG( SCWK_TEMP0, BADGE_ID_01 )
	
	//ジムバッジを取得していない場合
	IF $SCWK_TEMP0 == 0 THEN
	
	//【仮】ジムバッジフラグが０の場合
		_EASY_TALK_ITEM_EVENT(ITEM_OISIIMIZU, 1, FE_C01GYM_ITEM, msg_c01gym0101_glasses_01, msg_c01gym0101_glasses_02, msg_c01gym0101_glasses_02 )	
	
	//ジムバッジフラグがそれ以外の場合
	ELSE
	
	//ジムバッジを　てにいれた　きょう　という　すばらしい　ひを
		_EASY_BALLOONWIN_TALKOBJ_MSG( msg_c01gym0101_glasses_03 )
	
	ENDIF

EVENT_END

/**************************************************************/
/*     ポケモン像		      					              */
/**************************************************************/
EVENT_START		ev_bg_c01gym0101_pokezou
	_TALK_OBJ_START()
	
	_TALKWIN_OPEN()
	
	//分岐：ジムバッジ取得しているか、いないか
	_GET_BADGE_FLAG( SCWK_TEMP0, BADGE_ID_01 )

	//ジムバッジを取得していない場合
	IF $SCWK_TEMP0 == 0 THEN
		_PLAYER_NAME( 0 )
		_TALKMSG( msg_c01gym0101_statue_01 )
		
	//ジムバッジを取得している場合
	ELSE
	
		//【仮】分岐処理・C02到着していないなら　到着フラグが動いていない！
		IF FLAG_OFF( SYS_FLAG_ARRIVE_C02 ) THEN
			_PLAYER_NAME( 0 )
			_TALKMSG( msg_c01gym0101_statue_02 )
		
		//C02到着している場合
		ELSE
			_PLAYER_NAME( 0 )
			_TALKMSG( msg_c01gym0101_statue_03 )
			
		ENDIF
	
	ENDIF
	
	_LAST_KEYWAIT()	
	_TALKWIN_CLOSE()

EVENT_END

/**************************************************************/
/*     コーン・ポッド・デント	ジムバトル　ＰＯＳ発動        */
/**************************************************************/
EVENT_START	ev_pos_c01gym0101_leader_battle
	
	//ローカル変数を定義
	DEFINE_LOCAL	HERO_X
	DEFINE_LOCAL	HERO_Z
	
	//自機の位置取得
	_PLAYER_POS_GET( HERO_X,HERO_Z )
	
	IF $HERO_X == 11 THEN
	//X軸が11グリッドの場合
		_OBJ_ANIME( MMDL_ID_PLAYER, anm_player_tikaduku_11 )
		_OBJ_ANIME_WAIT()
		
	ELSIF $HERO_X == 12 THEN
	//X軸が12グリッドの場合
		_OBJ_ANIME( MMDL_ID_PLAYER, anm_player_tikaduku_12 )
		_OBJ_ANIME_WAIT()
		
	ELSE
	//X軸が13グリッドの場合
		_OBJ_ANIME( MMDL_ID_PLAYER, anm_player_tikaduku_13 )
		_OBJ_ANIME_WAIT()
		
	ENDIF
	_OBJ_ANIME_WAIT()
	
	//コーン：その場ジャンプ
	_OBJ_ANIME( C01GYM0101_LEADER1_01, anm_leader_jump )
	_OBJ_ANIME_WAIT()
	
	//ようこそ！！　サンヨウシティ　ポケモンジムへ！
	_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_01 , C01GYM0101_LEADER1_01 )
	_BALLOONWIN_CLOSE()
	
	//ポッドとデントのバニッシュフラグをreset、オブジェクトを出現させる。
	_FLAG_RESET( FV_C01GYM0101_LEADERS )
	_OBJ_ADD( C01GYM0101_LEADER1_02 )
	_OBJ_ADD( C01GYM0101_LEADER1_03 )

	//ポッドとデント：コーンから左右に１マス展開し、自機の方に向く
	_OBJ_ANIME( C01GYM0101_LEADER1_02, anm_pod_tenkai )
	_OBJ_ANIME( C01GYM0101_LEADER1_03, anm_dento_tenkai )
	_OBJ_ANIME_WAIT()
	
	//コーン：その場ジャンプ
	_OBJ_ANIME( C01GYM0101_LEADER1_01, anm_leader_jump )
	_OBJ_ANIME_WAIT()
	
	//オレたちは　それぞれ		
	_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_02 , C01GYM0101_LEADER1_01 )
	_BALLOONWIN_CLOSE()
	
	//ポッド：くるっとその場で回る
	_OBJ_ANIME( C01GYM0101_LEADER1_02, anm_leader_turn )
	_OBJ_ANIME_WAIT()

	//オレは　ほのおタイプの　ポケモンで
	_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_03a , C01GYM0101_LEADER1_02 )
	_BALLOONWIN_CLOSE()
	
	//コーン：くるっとその場で回る
	_OBJ_ANIME( C01GYM0101_LEADER1_01, anm_leader_turn )
	_OBJ_ANIME_WAIT()	
	
	//みずタイプの　ポケモンが　すきな
	_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_03b , C01GYM0101_LEADER1_01 )
	_BALLOONWIN_CLOSE()	
	
	//デント：くるっとその場で回る
	_OBJ_ANIME( C01GYM0101_LEADER1_03, anm_leader_turn )
	_OBJ_ANIME_WAIT()		
	
	//そして　オレが　くさタイプの
	_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_03c , C01GYM0101_LEADER1_03 )
	_BALLOONWIN_CLOSE()	

	//三人一斉に１マス下がる
	_OBJ_ANIME( C01GYM0101_LEADER1_01, anm_leader_back )
	_OBJ_ANIME( C01GYM0101_LEADER1_02, anm_leader_back )
	_OBJ_ANIME( C01GYM0101_LEADER1_03, anm_leader_back )
	_OBJ_ANIME_WAIT()

	//三人一斉にその場ジャンプ
	_OBJ_ANIME( C01GYM0101_LEADER1_01, anm_leader_jump )
	_OBJ_ANIME( C01GYM0101_LEADER1_02, anm_leader_jump )
	_OBJ_ANIME( C01GYM0101_LEADER1_03, anm_leader_jump )
	_OBJ_ANIME_WAIT()	
	
	//コーン：その場足ふみ
	_OBJ_ANIME( C01GYM0101_LEADER1_01, anm_leader_stay )
	_OBJ_ANIME_WAIT()	
	
	//オレたち　３人は！
	_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_04 , C01GYM0101_LEADER1_01 )
	_BALLOONWIN_CLOSE()	

	//分岐処理・最初に選んだポケモンから苦手なタイプになる

		//くさタイプ選択の場合
	IF $WK_SYS_FIRST_POKE_NO  == MONSNO_HUSIGIDANE THEN
		
		//ポッド：自機の前に移動
		_OBJ_ANIME( C01GYM0101_LEADER1_02, anm_pod_move )	
		
		//コーン：場所をポッドと交代
		_OBJ_ANIME( C01GYM0101_LEADER1_01, anm_corn_podchange )
		_OBJ_ANIME_WAIT()		
	
		//ということで　ほのおタイプの
		_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_05a , C01GYM0101_LEADER1_02 )
		_BALLOONWIN_CLOSE()			
		
		//ほのおタイプ選択の場合
	ELSIF $WK_SYS_FIRST_POKE_NO  == MONSNO_HITOKAGE THEN
		
		//コーン：一歩前へ
		_OBJ_ANIME( C01GYM0101_LEADER1_01, anm_leader_walk )
		
		//ということで　みずタイプの
		_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_05b , C01GYM0101_LEADER1_01 )
		_BALLOONWIN_CLOSE()
		
		//みずタイプ選択の場合
	ELSE

		//デント：自機の前に移動
		_OBJ_ANIME( C01GYM0101_LEADER1_03, anm_dento_move )	
		
		//コーン：場所をデントと交代
		_OBJ_ANIME( C01GYM0101_LEADER1_01, anm_corn_dentochange )
		_OBJ_ANIME_WAIT()	
	
		//ということで　くさタイプを
		_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_05c , C01GYM0101_LEADER1_03 )
		_BALLOONWIN_CLOSE()
		
	ENDIF
	
	//===========フラグワーク操作===========//
	
	//ジムリーダー演出イベント終了
	$WK_SCENE_C01GYM0101 = 1
	
	//======================================//

EVENT_END


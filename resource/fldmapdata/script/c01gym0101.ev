/**************************************************************/
/*     コーン・ポッド・デント	ジムバトル　ＰＯＳ発動        */
/**************************************************************/
EVENT_START	ev_pos_c01gym0101_leader_battle
	
	//ローカル変数を定義
	DEFINE_LOCAL	HERO_X
	DEFINE_LOCAL	HERO_Z
	
	//自機の位置取得
	_PLAYER_POS_GET( HERO_X,HERO_Z )
	
	IF $HERO_X == 11 THEN
	//X軸が11グリッドの場合
		_OBJ_ANIME( MMDL_ID_PLAYER, anm_player_tikaduku_11 )
		_OBJ_ANIME_WAIT()
	ELSIF $HERO_X == 12 THEN
	//X軸が12グリッドの場合
		_OBJ_ANIME( MMDL_ID_PLAYER, anm_player_tikaduku_12 )
		_OBJ_ANIME_WAIT()
	ELSE
	//X軸が13グリッドの場合
		_OBJ_ANIME( MMDL_ID_PLAYER, anm_player_tikaduku_13 )
		_OBJ_ANIME_WAIT()
	ENDIF
	_OBJ_ANIME_WAIT()
	
	//コーン：その場ジャンプ
	_OBJ_ANIME( C01GYM0101_LEADER1_01, anm_leader_jump )
	_OBJ_ANIME_WAIT()
	
	//ようこそ！！　サンヨウシティ　ポケモンジムへ！
	_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_01 , C01GYM0101_LEADER1_01 )
	_AB_KEYWAIT()
	_BALLOONWIN_CLOSE()
	
	
	//ポッドとデントのバニッシュフラグをreset、オブジェクトを出現させる。
	_FLAG_RESET( FV_C01GYM0101_LEADERS )
	_OBJ_ADD( C01GYM0101_LEADER1_02 )
	_OBJ_ADD( C01GYM0101_LEADER1_03 )

	//ポッドとデント：コーンから左右に１マス展開し、自機の方に向く
	_OBJ_ANIME( C01GYM0101_LEADER1_02, anm_pod_tenkai )
	_OBJ_ANIME( C01GYM0101_LEADER1_03, anm_dento_tenkai )
	_OBJ_ANIME_WAIT()
	
	//コーン：その場ジャンプ
	_OBJ_ANIME( C01GYM0101_LEADER1_01, anm_leader_jump )
	_OBJ_ANIME_WAIT()
	
	//オレたちは　それぞれ		
	_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_02 , C01GYM0101_LEADER1_01 )
	_AB_KEYWAIT()
	_BALLOONWIN_CLOSE()
	
	//ポッド：くるっとその場で回る
	_OBJ_ANIME( C01GYM0101_LEADER1_02, anm_leader_turn )
	_OBJ_ANIME_WAIT()

	//オレは　ほのおタイプの　ポケモンで
	_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_03a , C01GYM0101_LEADER1_02 )
	_AB_KEYWAIT()
	_BALLOONWIN_CLOSE()
	
	//コーン：くるっとその場で回る
	_OBJ_ANIME( C01GYM0101_LEADER1_01, anm_leader_turn )
	_OBJ_ANIME_WAIT()	
	
	//みずタイプの　ポケモンが　すきな
	_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_03b , C01GYM0101_LEADER1_01 )
	_AB_KEYWAIT()
	_BALLOONWIN_CLOSE()	
	
	//デント：くるっとその場で回る
	_OBJ_ANIME( C01GYM0101_LEADER1_03, anm_leader_turn )
	_OBJ_ANIME_WAIT()		
	
	//そして　オレが　くさタイプの
	_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_03c , C01GYM0101_LEADER1_03 )
	_AB_KEYWAIT()
	_BALLOONWIN_CLOSE()	

	//三人一斉にその場ジャンプ
	_OBJ_ANIME( C01GYM0101_LEADER1_01, anm_leader_jump )
	_OBJ_ANIME( C01GYM0101_LEADER1_02, anm_leader_jump )
	_OBJ_ANIME( C01GYM0101_LEADER1_03, anm_leader_jump )
	_OBJ_ANIME_WAIT()	
	
	//オレたち　３人は！
	_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_04 , C01GYM0101_LEADER1_01 )
	_AB_KEYWAIT()
	_BALLOONWIN_CLOSE()	

	//分岐処理・最初に選んだポケモンから苦手なタイプになる
		
		//くさタイプ選択の場合
		
		//ポッド：自機の前に移動
		_OBJ_ANIME( C01GYM0101_LEADER1_02, anm_pod_move )
		_OBJ_ANIME_WAIT()	
		
		//コーン：場所をポッドと交代
		_OBJ_ANIME( C01GYM0101_LEADER1_01, anm_corn_podchange )
		_OBJ_ANIME_WAIT()		
	
		//ということで　ほのおタイプの
		_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_05a , C01GYM0101_LEADER1_02 )
		_AB_KEYWAIT()
		_BALLOONWIN_CLOSE()			
		
		//ほのおタイプ選択の場合
		
		//コーン：自機の前に移動
	
		//ということで　みずタイプの
		
		
		
		
		//みずタイプ選択の場合
		
		//デント：自機の前に移動
	
		//ということで　くさタイプを

	//wkに１追加

EVENT_END


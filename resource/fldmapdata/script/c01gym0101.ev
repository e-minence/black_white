/*         ジムリーダーコーン（画面中央）  戦闘前             */
/**************************************************************/

//【仮】	ジムバッジフラグがない

EVENT_START		ev_c01gym0101_leader1_01
	_TALK_OBJ_START()
	
	//分岐：ジムバッジ取得しているか、いないか

	//ジムバッジを取得していない場合
			
		//分岐：炎タイプを選択しているか、いないか

		//炎タイプを選択している場合
		
		IF $WK_SYS_FIRST_POKE_NO == MONSNO_HITOKAGE THEN

			//さんにんの　なかで　いちばん　つよい　オレが
			_BALLOONWIN_TALKOBJ_OPEN( msg_c01gym0101_leader1_20b )
			_BALLOONWIN_CLOSE()
		
			//【仮】戦闘処理	画面フェードを仮で入れています。
			/*_TRAINER_BTL_SET LEADER1C_01,0*/
		
			//すごいぜ！　おまえ！！　ポケモンリーグの　きまりだ
			_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_06b , C01GYM0101_LEADER1_01 )
			_BALLOONWIN_CLOSE()

			//〜〜は　コーンから　トライバッジを　もらった
			_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_07b , C01GYM0101_LEADER1_01 )
			_BALLOONWIN_CLOSE()

			//トライバッジ入手処理
		
			//ジムバッジは　トレーナーの　つよさの　あかし！
			_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_08 , C01GYM0101_LEADER1_01 )
			_BALLOONWIN_CLOSE()

			//わざマシン入手
			_ITEM_EVENT_KEYWAIT( ITEM_WAZAMASIN01, 1 )

			//その　わざマシンの　なかみは　〜〜！！
			_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_09 , C01GYM0101_LEADER1_01 )
			_BALLOONWIN_CLOSE()
		
			//ジムバッジ入手フラグをＯＮにする



		//炎タイプ選択じゃない場合
		ELSE
			//ざんねん　ですね　ぼくが　おあいて　したかったです
			_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_21b , C01GYM0101_LEADER1_01 )
			_BALLOONWIN_CLOSE()
			
		ENDIF
	//ジムバッジ入手後の場合
		
		//ぼくたち　イッシュちほう　では　まだ　かけだしの　ジムリーダーです
		
EVENT_END
		
/**************************************************************/
/*         ジムリーダーポッド（画面左）  戦闘前	              */
/**************************************************************/

//【仮】	ジムバッジフラグがない

EVENT_START		ev_c01gym0101_leader1_02
	_TALK_OBJ_START()
	//分岐：ジムバッジ取得しているか、いないか

	//ジムバッジを取得していない場合
			
		//分岐：草タイプを選択しているか、いないか

			//草タイプを選択している場合
		IF $WK_SYS_FIRST_POKE_NO == MONSNO_HUSIGIDANE THEN

			//さんにんの　なかで　いちばん　つよい　オレが
			_BALLOONWIN_TALKOBJ_OPEN( msg_c01gym0101_leader1_20a )
			_BALLOONWIN_CLOSE()

			//【仮】戦闘処理	画面フェードを仮で入れています。
			_WHITE_OUT( 4 )
			_DISP_FADE_END_CHECK()
			_WHITE_IN( 4 )
			_DISP_FADE_END_CHECK()

			//すごいぜ！　おまえ！！　ポケモンリーグの　きまりだ
			_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_06a , C01GYM0101_LEADER1_02 )
			_BALLOONWIN_CLOSE()
			
			//〜〜は　ポッドから　トライバッジを　もらった
			_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_07a , C01GYM0101_LEADER1_02 )
			_BALLOONWIN_CLOSE()

			//トライバッジ入手処理
		
			//ポッド：コーンの場所へ移動
			_OBJ_ANIME( C01GYM0101_LEADER1_02, anm_pod_return )
			
			//コーン：自機の前に移動
			_OBJ_ANIME( C01GYM0101_LEADER1_01, anm_corn_podback )
			_OBJ_ANIME_WAIT()
			
			//ジムバッジは　トレーナーの　つよさの　あかし！
			_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_08 , C01GYM0101_LEADER1_01 )
			_BALLOONWIN_CLOSE()

			//わざマシン入手
			_ITEM_EVENT_KEYWAIT( ITEM_WAZAMASIN01, 1 )

			//その　わざマシンの　なかみは　〜〜！！
			_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_09 , C01GYM0101_LEADER1_01 )
			_BALLOONWIN_CLOSE()

			//ジムバッジ入手フラグをＯＮにする

		//草タイプ選択じゃない場合
		ELSE
			
			//なんだよーッ！　オレが　たたかいたかったのになー！！
			_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_21a , C01GYM0101_LEADER1_02 )
			_BALLOONWIN_CLOSE()
		
		ENDIF

	//ジムバッジ入手後の場合
		
		//わざマシンは　なんどだって　つかえると　いうことは
		
EVENT_END


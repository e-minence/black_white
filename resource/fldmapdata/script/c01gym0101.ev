			_TRAINER_LOSE()			//負け(0)ならトレーナー敗北処理へ(ここでスクリプト終了します）
			ENDIF

			//すごいぜ！　おまえ！！　ポケモンリーグの　きまりだ
			_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_06c , C01GYM0101_LEADER1_03 )
			_BALLOONWIN_CLOSE()
				
			//トライバッジ入手処理
			_SET_BADGE_FLAG( BADGE_ID_01 )
			_TALKWIN_OPEN()
			_PLAYER_NAME( 0 )
			//〜〜は　デントから　トライバッジを　もらった
			_TALKMSG_ALLPUT( msg_c01gym0101_leader1_07c )
			_ME_PLAY( SEQ_ME_BADGE )
			_ME_WAIT()
			_TALKWIN_CLOSE()
		
			//デント：コーンの場所へ移動
			_OBJ_ANIME( C01GYM0101_LEADER1_03, anm_dento_return )
			
			//コーン：自機の前に移動
			_OBJ_ANIME( C01GYM0101_LEADER1_01, anm_corn_dentoback )
			_OBJ_ANIME_WAIT()
			
			//ジムバッジは　トレーナーの　つよさの　あかし！
			_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_08 , C01GYM0101_LEADER1_01 )
			_BALLOONWIN_CLOSE()

			//【仮】わざマシン入手
			_ITEM_EVENT_KEYWAIT( ITEM_WAZAMASIN01, 1 )

			//その　わざマシンの　なかみは　〜〜！！
			_ITEM_NAME( 0, ITEM_WAZAMASIN01 )
			_ITEM_WAZA_NAME( 1, ITEM_WAZAMASIN01 )
			_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_09 , C01GYM0101_LEADER1_01 )
			_BALLOONWIN_CLOSE()
			
			//============フラグワーク操作=============//

			//トレーナーズスクールのライバル削除
			_FLAG_SET( FV_C01R0501_RIVAL_01 )
			
			//発明家マコモのバニッシュフラグリセット
			_FLAG_RESET( FV_C01_INVENTOR_01 )
	

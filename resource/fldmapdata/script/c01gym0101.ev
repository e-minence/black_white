EVENT_START		ev_c01gym0101_leader1_03
	_TALK_OBJ_START()

	//分岐：ジムバッジ取得しているか、いないか

	//ジムバッジを取得していない場合
			
		//分岐：水タイプを選択しているか、いないか

		//水タイプを選択している場合
		IF $WK_SYS_FIRST_POKE_NO == MONSNO_ZENIGAME THEN

			//さんにんの　なかで　いちばん　つよい　オレが
			_BALLOONWIN_TALKOBJ_OPEN( msg_c01gym0101_leader1_20c )
			_BALLOONWIN_CLOSE()

			//【仮】戦闘処理	画面フェードを仮で入れています。
			_WHITE_OUT( 4 )
			_DISP_FADE_END_CHECK()
			_WHITE_IN( 4 )
			_DISP_FADE_END_CHECK()

			//すごいぜ！　おまえ！！　ポケモンリーグの　きまりだ
			_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_06c , C01GYM0101_LEADER1_03 )
			_BALLOONWIN_CLOSE()
				
			//〜〜は　デントから　トライバッジを　もらった
			_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_07c , C01GYM0101_LEADER1_03 )
			_BALLOONWIN_CLOSE()

			//トライバッジ入手処理
		
			//デント：コーンの場所へ移動
			_OBJ_ANIME( C01GYM0101_LEADER1_03, anm_dento_return )
			
			//コーン：自機の前に移動
			_OBJ_ANIME( C01GYM0101_LEADER1_01, anm_corn_dentoback )
			_OBJ_ANIME_WAIT()
			
			//ジムバッジは　トレーナーの　つよさの　あかし！
			_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_08 , C01GYM0101_LEADER1_01 )
			_BALLOONWIN_CLOSE()

			//わざマシン入手
			_ITEM_EVENT_KEYWAIT( ITEM_WAZAMASIN01, 1 )

			//その　わざマシンの　なかみは　〜〜！！
			_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_09 , C01GYM0101_LEADER1_01 )
			_BALLOONWIN_CLOSE()

			//ジムバッジ入手フラグをＯＮにする



		//水タイプ選択じゃない場合
		ELSE		
			//オレが　いちばん　つよいのに！　どうして　みずタイプ　なんだよ！
			_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_21c , C01GYM0101_LEADER1_03 )
			_BALLOONWIN_CLOSE()

		ENDIF
	
	//ジムバッジ入手後の場合
		
		//オレたちが　もし　１７人　きょうだい　だったら
		
EVENT_END


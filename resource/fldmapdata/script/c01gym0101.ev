	//分岐処理・ジムバッジを入手しているかいないか
	IF FLAG_OFF(FH_01) THEN
	
	//ジムバッジを取得していない場合
		_EASY_MSG( msg_c01gym0101_statue_02 )
	
	//ジムバッジを取得している場合
	ELSE

		//分岐処理・C02到着していないなら
		IF FLAG_OFF( SYS_FLAG_ARRIVE_C02 ) THEN
			_EASY_MSG( msg_c01gym0101_statue_02 )
		//C02到着している場合
		ELSE
			_EASY_MSG( msg_c01gym0101_statue_03 )
		ENDIF
	ENDIF
		
EVENT_END


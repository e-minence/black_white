/**************************************************************/
/*         ジムリーダーコーン（画面中央）  戦闘前             */
/**************************************************************/
EVENT_START		ev_c01gym0101_leader1_01
	_TALK_OBJ_START()
	
	//分岐：ジムバッジ取得しているか、いないか
	_GET_BADGE_FLAG( SCWK_TEMP0, BADGE_ID_01 )
	
	//ジムバッジを取得していない場合
	IF $SCWK_TEMP0 == 0 THEN
			
		//分岐：炎タイプを選択しているか、いないか

		//炎タイプを選択している場合
		
		IF $WK_SYS_FIRST_POKE_NO == MONSNO_HITOKAGE THEN

			//さんにんの　なかで　いちばん　つよい　オレが
			_BALLOONWIN_TALKOBJ_OPEN( msg_c01gym0101_leader1_20b )
			_BALLOONWIN_CLOSE()
		
			//戦闘処理
			_TRAINER_BTL_SET( TRID_LEADER1C_01, 0 )
			//敗戦チェック
			_TRAINER_LOSE_CHECK( SCWK_ANSWER )
			IF $SCWK_ANSWER == 0 THEN
			_TRAINER_LOSE()			//負け(0)ならトレーナー敗北処理へ(ここでスクリプト終了します）
			ENDIF
		
			//すごいぜ！　おまえ！！　ポケモンリーグの　きまりだ
			_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_06b , C01GYM0101_LEADER1_01 )
			_BALLOONWIN_CLOSE()
			
			//トライバッジ入手処理
			_SET_BADGE_FLAG( BADGE_ID_01 )
			_TALKWIN_OPEN()
			_PLAYER_NAME( 0 )
			
			//〜〜は　コーンから　トライバッジを　もらった
			_TALKMSG_ALLPUT( msg_c01gym0101_leader1_07b )
			_ME_PLAY( SEQ_ME_BADGE )
			_ME_WAIT()
			_TALKWIN_CLOSE()
		
			//ジムバッジは　トレーナーの　つよさの　あかし！
			_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_08 , C01GYM0101_LEADER1_01 )
			_BALLOONWIN_CLOSE()

			//わざマシン入手
			_ITEM_EVENT_KEYWAIT( ITEM_WAZAMASIN01, 1 )

			//その　わざマシンの　なかみは　〜〜！！
			_ITEM_NAME( 0, ITEM_WAZAMASIN01 )
			_ITEM_WAZA_NAME( 1, ITEM_WAZAMASIN01 )
			_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_09 , C01GYM0101_LEADER1_01 )
			_BALLOONWIN_CLOSE()
			
			//============フラグワーク操作=============//
			
			//トレーナーズスクールのライバル削除
			_FLAG_SET( FV_C01R0501_RIVAL_01 )
			
			//発明家マコモのバニッシュフラグリセット
			_FLAG_RESET( FV_C01_INVENTOR_01 )
	
			//C01のＰＤＷ誘導イベント終了
			$WK_SCENE_C01 = 1

			//========================================//

		//炎タイプ選択じゃない場合
		ELSE
			//ざんねん　ですね　ぼくが　おあいて　したかったです
			_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_21b , C01GYM0101_LEADER1_01 )
			_BALLOONWIN_CLOSE()
			
		ENDIF
	//ジムバッジ入手後の場合
	ELSE	
		//ぼくたち　イッシュちほう　では　まだ　かけだしの　ジムリーダーです
		_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_10 , C01GYM0101_LEADER1_01 )
		_BALLOONWIN_CLOSE()
	
	ENDIF
	
EVENT_END
		
/**************************************************************/
/*         ジムリーダーポッド（画面左）  戦闘前	              */
/**************************************************************/
EVENT_START		ev_c01gym0101_leader1_02
	_TALK_OBJ_START()
	
	//分岐：ジムバッジ取得しているか、いないか
	_GET_BADGE_FLAG( SCWK_TEMP0, BADGE_ID_01 )
	
	//【仮】ジムバッジを取得していない場合
	IF $SCWK_TEMP0 == 0 THEN
		//分岐：草タイプを選択しているか、いないか

			//草タイプを選択している場合
		IF $WK_SYS_FIRST_POKE_NO == MONSNO_HUSIGIDANE THEN

			//さんにんの　なかで　いちばん　つよい　オレが
			_BALLOONWIN_TALKOBJ_OPEN( msg_c01gym0101_leader1_20a )
			_BALLOONWIN_CLOSE()

			//戦闘処理
			_TRAINER_BTL_SET( TRID_LEADER1A_01, 0 )
			//敗戦チェック
			_TRAINER_LOSE_CHECK( SCWK_ANSWER )
			IF $SCWK_ANSWER == 0 THEN
			_TRAINER_LOSE()			//負け(0)ならトレーナー敗北処理へ(ここでスクリプト終了します）
			ENDIF

			//すごいぜ！　おまえ！！　ポケモンリーグの　きまりだ
			_BALLOONWIN_OBJMSG_OPEN( msg_c01gym0101_leader1_06a , C01GYM0101_LEADER1_02 )
			_BALLOONWIN_CLOSE()
			
			//トライバッジ入手処理
			_SET_BADGE_FLAG( BADGE_ID_01 )
			_TALKWIN_OPEN()
			_PLAYER_NAME( 0 )
			//〜〜は　ポッドから　トライバッジを　もらった
			_TALKMSG_ALLPUT( msg_c01gym0101_leader1_07a )
			_ME_PLAY( SEQ_ME_BADGE )
			_ME_WAIT()
			_TALKWIN_CLOSE()
		

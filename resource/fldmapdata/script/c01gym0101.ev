//【仮】	ジムバッジフラグがない

EVENT_START		ev_c01gym0101_sunglasses_01
	_TALK_OBJ_START()
	//分岐処理・ジムバッジのフラグが０か１か
	IF FLAG_OFF(FH_01) THEN
	//ジムバッジフラグが０の場合
		_EASY_TALK_ITEM_EVENT(ITEM_OISIIMIZU, 1, FH_01, msg_c01gym0101_glasses_01, msg_c01gym0101_glasses_02, msg_c01gym0101_glasses_02 )	
	//ジムバッジフラグがそれ以外の場合
	ELSE
	//ジムバッジを　てにいれた　きょう　という　すばらしい　ひを
		_EASY_BALLOONWIN_TALKOBJ_MSG( msg_c01gym0101_glasses_03 )
	ENDIF

EVENT_END


/**************************************************************/
/*  R09 バッドマンがアイテムをくれるイベント                  */
/**************************************************************/
EVENT_START   ev_scene_r09_badman_01
	
	IF FLAG_OFF(FE_R09_ITEMGET_01) THEN
		_TIME_WAIT(4)
		_OBJ_ANIME(R09_BADMAN_01,anm_common_gyoe)
		_OBJ_ANIME_WAIT()
		
		_TIME_WAIT(4)
		_BALLOONWIN_OBJMSG_POS(msg_r09_badman_01,R09_BADMAN_01,POS_DR)
		_MSGWIN_CLOSE()
		
		_OBJ_ANIME(R09_BADMAN_01,anm_common_turn_l)
		_OBJ_ANIME_WAIT()
		
		_TIME_WAIT(8)
		
		_OBJ_ANIME(MMDL_ID_PLAYER,anm_common_turn_r)
		_OBJ_ANIME_WAIT()
		
		_ITEM_EVENT_KEYWAIT(ITEM_WAZAMASIN56,1)
//		_FLAG_SET(FE_R09_ITEMGET_01)
		
		_TIME_WAIT(4)
		
		_BALLOONWIN_OBJMSG_POS( msg_r09_badman_02, R09_BADMAN_01, POS_DR )
		_LAST_KEYWAIT()
		_MSGWIN_CLOSE()
	
	ELSE
		_BALLOONWIN_OBJMSG_POS(msg_r09_badman_02,R09_BADMAN_01,POS_DR)
		_LAST_KEYWAIT()
		_MSGWIN_CLOSE()
	
	ENDIF
	
	//==============フラグワーク操作==============//
	$WK_SCENE_R09 = 1
	//============================================//

EVENT_END

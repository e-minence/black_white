//POSイベント起動判定
check_posevt_start:
  DEFINE_LOCAL	chk_total
  DEFINE_LOCAL	chk_val

  //シーンワークで分岐
  SWITCH $WK_SCENE_C11GATE
  CASE 0 THEN     //初回
    $chk_val = 0
  CASE 1 THEN     //1ヶ国
    $chk_val = 1
  CASE 2 THEN     //3ヶ国
    $chk_val = 3
  CASE 3 THEN     //6ヶ国
    $chk_val = 6
  CASE 4 THEN     //10ヶ国
    $chk_val = 10
  CASE 5 THEN     //15
    $chk_val = 15
  CASE 6 THEN     //20
    $chk_val = 20
  CASE 7 THEN     //30
    $chk_val = 30
  CASE 8 THEN     //40
    $chk_val = 40
  CASE 9 THEN     //50
    $chk_val = 50
  CASE 10 THEN    //60
    $chk_val = 60
  CASE 11 THEN    //70
    $chk_val = 70
  CASE 12 THEN    //80
    $chk_val = 80
  CASE 13 THEN    //90
    $chk_val = 90
  CASE 14 THEN    //100
    $chk_val = 100
  CASE 15 THEN    //150
    $chk_val = 150
  CASE 16 THEN    //233
    $chk_val = 233
  DEFAULT
    //何もしないでリターン
    _RET
  ENDSWITCH

  //ヶ国数取得
  _UN_GET_COUNTRY_NUM( chk_total )
  //POS起動条件を満たす国数まで到達したか？
  IF $chk_total >= $chk_val THEN
    $LOCALWORK1 = 1   //POS起動
  ENDIF
_RET


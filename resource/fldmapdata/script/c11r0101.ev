//アニメ
player_in_anm:
  //受付開ける
  _OBJ_ANIME( UN_ENTRANCE_RECEPTION_01, anm_reception_open )
	_OBJ_ANIME_WAIT()
  //自機移動
  _OBJ_ANIME( MMDL_ID_PLAYER, anm_move_elev )
	_OBJ_ANIME_WAIT()

  //エレベータ開く

  //自機絵エレベータに入る
  _OBJ_ANIME( MMDL_ID_PLAYER, anm_move_elev_in )
	_OBJ_ANIME_WAIT()

  //エレベータ閉まる

_RET



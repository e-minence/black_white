_EVENT_DATA    ev_d06r0201_middleman1_01
_EVENT_DATA    ev_d06r0201_middleman1_02
_EVENT_DATA_END

/**************************************************************/
/*  D06R0201 きんたまおじさん（兄）のイベントスクリプト       */
/**************************************************************/
EVENT_START    ev_d06r0201_middleman1_01
    
	//アイテムを貰っていなかったら、こっち
	IF FLAG_OFF(FH_01) THEN 
	
	    //兄がしゃべる
	    _TURN_HERO_SITE()
	    _BALLOONWIN_OBJMSG(msg_d06r0201_gold1_01,D06R0201_MIDDLEMAN1_01)
	    _MSGWIN_CLOSE()
	    
	    //おとうとがしゃべる
	    _BALLOONWIN_OBJMSG(msg_d06r0201_gold2_01,D06R0201_MIDDLEMAN1_02)
	    _MSGWIN_CLOSE()
	   
	    //兄が移動するかも 
	    //兄からアイテムをもらう
		_BALLOONWIN_OBJMSG(msg_d06r0201_gold1_02,D06R0201_MIDDLEMAN1_01)
	    _MSGWIN_CLOSE()
	    _ITEM_EVENT_KEYWAIT(ITEM_KINNOTAMA,1)
	    
	    //おとうとが移動するかも
	    //おとうとからアイテムを貰う
	    _BALLOONWIN_OBJMSG(msg_d06r0201_gold2_02,D06R0201_MIDDLEMAN1_02)
	    _MSGWIN_CLOSE()
	    _ITEM_EVENT_KEYWAIT(ITEM_KINNOTAMA,1)
	    
	    _FLAG_SET(FH_01)
	
	//アイテムを貰っていたらこっち
	ELSE    

	    _EASY_BALLOONWIN_TALKOBJ_MSG(msg_d06r0201_gold1_03)
    
    ENDIF
    
EVENT_END

/**************************************************************/
/*  D06R0201 きんたまおじさん（おとうと）のイベントスクリプト */
/**************************************************************/
EVENT_START    ev_d06r0201_middleman1_02
    
	//アイテムを貰っていなかったら、こっち
	IF FLAG_OFF(FH_01) THEN 
	
	    //兄がしゃべる
	    _TURN_HERO_SITE()
	    _BALLOONWIN_OBJMSG(msg_d06r0201_gold1_01,D06R0201_MIDDLEMAN1_01)
	    _MSGWIN_CLOSE()
	    
	    //おとうとがしゃべる
	    _BALLOONWIN_OBJMSG(msg_d06r0201_gold2_01,D06R0201_MIDDLEMAN1_02)
	    _MSGWIN_CLOSE()
	   
	    //兄からアイテムをもらう
		_BALLOONWIN_OBJMSG(msg_d06r0201_gold1_02,D06R0201_MIDDLEMAN1_01)
	    _MSGWIN_CLOSE()
	    _ITEM_EVENT_KEYWAIT(ITEM_KINNOTAMA,1)
	    
	    //おとうとからアイテムを貰う
	    _BALLOONWIN_OBJMSG(msg_d06r0201_gold2_02,D06R0201_MIDDLEMAN1_02)
	    _MSGWIN_CLOSE()
	    _ITEM_EVENT_KEYWAIT(ITEM_KINNOTAMA,1)
	    
	    _FLAG_SET(FH_01)
	
	//アイテムを貰っていたらこっち	    	    
	ELSE    

	    _EASY_BALLOONWIN_TALKOBJ_MSG(msg_d06r0201_gold2_03)
    
    ENDIF
    
EVENT_END


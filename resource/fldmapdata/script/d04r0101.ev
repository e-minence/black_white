	//それ以外
	ELSE
		
		//おう！　おいしいみずを　くれた　ひと　なんでも　この
		_BALLOONWIN_TALKOBJ_MSG( msg_d04r0101_sunglasses_01 )
		_BALLOONWIN_CLOSE()
	
	ENDIF

EVENT_END


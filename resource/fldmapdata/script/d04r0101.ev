/*		D04R0101	階下ストッパーPOS						  */
/**************************************************************/
EVENT_START		ev_pos_d04r0101_stop_01

	_OBJ_ANIME( D04R0101_STOP_01, anm_stoper_stop )
	_OBJ_ANIME_WAIT()

	_OBJ_ANIME( MMDL_ID_PLAYER, anm_dir_l )

	//このさき　すなばかりで　すすめん
	_BALLOONWIN_OBJMSG( msg_d04r0101_stop_02 , D04R0101_STOP_01 )
	_MSGWIN_CLOSE()

	//自機・一歩もどる
	_OBJ_ANIME( MMDL_ID_PLAYER, anm_player_back )
	_OBJ_ANIME_WAIT()

EVENT_END


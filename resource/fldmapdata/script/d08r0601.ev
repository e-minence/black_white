/**************************************************************/
/*            FIELD_INIT_LABEL                              　 */
/**************************************************************/
INIT_EVENT_START	ev_init_d08r0601

	//ハチクと、ライバルがプラズマ団を押しのけた後は、押しのけた位置に移動させておく
	IF $WK_SCENE_D08_LEGEND >= 4 && $WK_SCENE_D08_LEGEND != 6 THEN 
		
    	_OBJ_POS_CHANGE( D08R0601_RIVEL_01, 17, 10, 14 , DIR_LEFT)
    	_OBJ_POS_CHANGE( D08R0601_LEADER7_01, 20, 10, 17 , DIR_DOWN)
    	_OBJ_POS_CHANGE( D08R0601_HAKAIM_01, 16, 10, 13 , DIR_RIGHT)
    	_OBJ_POS_CHANGE( D08R0601_HAKAIM_02, 15, 10, 14 , DIR_RIGHT)
    	_OBJ_POS_CHANGE( D08R0601_HAKAIW_01, 19, 10, 18 , DIR_UP)
    	_OBJ_POS_CHANGE( D08R0601_HAKAIW_02, 20, 10, 19 , DIR_UP)

   ENDIF

INIT_EVENT_END

/**************************************************************/
/* ライバル、ハチクがプラズマ団を押しのける                   */
/**************************************************************/
EVENT_START    ev_pos_d08r0601_rivel_01	
	
	//プレイヤーの名前を格納
	_PLAYER_NAME(0)
	
	//ライバルが喋る
	//……まってたぜ　オレも　ハチクさんも
	_BALLOONWIN_OBJMSG( msg_d08r0601_black_01, D08R0601_RIVEL_01)
	_BALLOONWIN_CLOSE()

	//ハチクが喋る
	//……わたしは　へいきだ　だが　このままでは
	_BALLOONWIN_OBJMSG( msg_d08r0601_leader7_01, D08R0601_LEADER7_01)
	_BALLOONWIN_CLOSE()
	
	//ライバルが喋る
	//でだ！　いまから　ハチクさんと　みちを
	_BALLOONWIN_OBJMSG( msg_d08r0601_black_02, D08R0601_RIVEL_01)
	_BALLOONWIN_CLOSE()
	
	//ハチクとライバルがプラズマ団を押しのける
	_OBJ_ANIME( D08R0601_RIVEL_01,anm_raival_idou_01)
	_OBJ_ANIME( D08R0601_LEADER7_01,anm_leader7_idou_01)
	_OBJ_ANIME( D08R0601_HAKAIM_01,anm_hakaim_01_idou_01)
	_OBJ_ANIME( D08R0601_HAKAIM_02,anm_hakaim_02_idou_01)
	_OBJ_ANIME( D08R0601_HAKAIW_01,anm_hakaiw_01_idou_01)
	_OBJ_ANIME( D08R0601_HAKAIW_02,anm_hakaiw_02_idou_01)
	_OBJ_ANIME_WAIT()
	
	//============フラグワーク操作=============//
	
	//ライバルとハチク、プラズマ団のPOSイベントを無効
	$WK_SCENE_D08_LEGEND = 4 
	
	//========================================//
	
EVENT_END


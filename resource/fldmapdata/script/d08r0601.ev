	_PLAYER_NAME(0)

	_OBJ_ANIME(D08R0601_RIVEL_01,anm_common_turn_left)
	_OBJ_ANIME_WAIT()
	
	//ハチクが喋る
	//……ぼくも　だいじょうぶ
	_BALLOONWIN_OBJMSG( msg_d08r0601_black_01, D08R0601_RIVEL_01)
	_LAST_KEYWAIT()
	_MSGWIN_CLOSE()

	//============フラグワーク操作=============//
	
	//ライバルとハチク、プラズマ団のPOSイベントを無効
	$WK_SCENE_D08_LEGEND = 6 
	
	//========================================//
	
EVENT_END


/**************************************************************/
/*  C02R0301 GIRL1の会話用イベントスクリプト*/
/**************************************************************/
EVENT_START   ev_c02r0301_girl1_01

	DEFINE_LOCAL	nathuki_check
	
	//手持ちポケモン先頭（0番）のなつき度を保存
	_GET_TEMOTI_NATSUKI( nathuki_check, 0 )
	
	_EASY_BALLOONWIN_TALKOBJ_MSG  ( msg_c02r0301_girl1_01  ) 
	

	_OBJ_ANIME_WAIT()
	
	//手持ちポケモン先頭（0番）のなつき度で分岐
	
	IF $nathuki_check < 70 THEN     
  		//なつき度が0〜69の処理
  		//まだまだ　これからって　かんじね
  		
  		_EASY_BALLOONWIN_TALKOBJ_MSG  ( msg_c02r0301_girl1_04  )
  	
  	ELSE
		IF $nathuki_check < 120 THEN
  			//なつき度が70〜119の処理
  			//うん　すこし　なついている
  			
  			_EASY_BALLOONWIN_TALKOBJ_MSG  ( msg_c02r0301_girl1_03 )
  	
  		ELSE
  			
  			IF $nathuki_check < 255 THEN
  				//なつき度が120〜255の処理
  				//あなたに　なついているのね
  				
  				_EASY_BALLOONWIN_TALKOBJ_MSG  ( msg_c02r0301_girl1_02 )
  			
  			ELSE
  				
  			ENDIF
  		ENDIF
	ENDIF
	
EVENT_END

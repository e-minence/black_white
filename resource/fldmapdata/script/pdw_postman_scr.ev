	.text

	.include	"scr_seq_def.h"

	.include	"msg_postman.h"
  .include  "msg_pdw_postman.h"


//--------------------------------------------------------------------
//		スクリプトテーブル
//--------------------------------------------------------------------
_EVENT_DATA   ev_zone_pdw_postman
_EVENT_DATA		ev_pdw_postman
_EVENT_DATA_END


/********************************************************************/
/*						ZONE_CHANGE_LABEL                                     */
/********************************************************************/
INIT_EVENT_START  ev_zone_pdw_postman
	  _PDW_POSTMAN_REQUEST(	SCR_PDW_POSTMAN_REQ_EXISTS, SCWK_ANSWER )
    IF $SCWK_ANSWER == TRUE THEN 
        _FLAG_RESET( FV_PDW_POSTMAN )
    ELSE
        _FLAG_SET( FV_PDW_POSTMAN )
    ENDIF
INIT_EVENT_END



/********************************************************************/
//				PDW配達員
/********************************************************************/
EVENT_START   ev_pdw_postman
	_TALK_OBJ_START()

  _CALL   sub_postman_main

EVENT_END


DEFINE_LOCAL  ng_count

sub_postman_main:
  //存在チェック
	_PDW_POSTMAN_REQUEST(	SCR_PDW_POSTMAN_REQ_EXISTS, SCWK_ANSWER )
  IF $SCWK_ANSWER == 0 THEN
  _DEBUG_PRINT_WK( SCWK_ANSWER )
      _BALLOONWIN_TALKOBJ_MSG( msg_pdw_postman_02 ) //おあずかりしている〜もうありません
      _LAST_KEYWAIT()
      _BALLOONWIN_CLOSE()
      _RET
  ENDIF

  //あいさつ
  _PLAYER_NAME( 0 )
  _BALLOONWIN_TALKOBJ_MSG( msg_pdw_postman_01 ) //こんにちは
  _BALLOONWIN_CLOSE()

  //受け取れるか？チェック
  // SCWK_ANSWER == 戻り値BOOL
	_PDW_POSTMAN_REQUEST(	SCR_PDW_POSTMAN_REQ_ENABLE, SCWK_ANSWER )

  IF $SCWK_ANSWER == TRUE THEN
      //「受け取った！」
      _ME_PLAY( SEQ_ME_LVUP )
      _SYSWIN_MSG_ALLPUT( msg_pdw_postman_04, POS_DEFAULT )
      //受け取ったアイテム内容を表示する
      _PDW_POSTMAN_REQUEST( SCR_PDW_POSTMAN_REQ_OK_INFO, SCWK_ANSWER )
      _ME_WAIT()
      _SYSWIN_CLOSE()

      //受け取り処理を実行
      _PDW_POSTMAN_REQUEST( SCR_PDW_POSTMAN_REQ_RECEIVE, SCWK_ANSWER )
  ENDIF

  _PDW_POSTMAN_REQUEST( SCR_PDW_POSTMAN_REQ_NG_COUNT, ng_count )
  IF $ng_count > 0 THEN
      $SCWK_ANSWER = 0
      WHILE $SCWK_ANSWER < $ng_count
          //「受け取れなかった！」
          // SCWK_ANSWER == 引数：NGアイテムのインデックス
          _PDW_POSTMAN_REQUEST( SCR_PDW_POSTMAN_REQ_NG_ITEM, SCWK_ANSWER )
          _SYSWIN_MSG( msg_pdw_postman_05 , POS_DEFAULT )
          $SCWK_ANSWER += 1
      ENDWHILE
      _SYSWIN_CLOSE()
  ENDIF

  _BALLOONWIN_TALKOBJ_MSG( msg_postman_03 ) //またのごりようをおまちしております
  _LAST_KEYWAIT()
  _BALLOONWIN_CLOSE()

  _RET







